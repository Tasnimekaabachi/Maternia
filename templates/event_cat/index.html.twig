{% extends 'admin/base.html.twig' %}

{% block title %}Catégories d'événements - Administration{% endblock %}
{% block page_title %}Gestion des Catégories{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('admin_evenements') }}">Événements & Catégories</a>
        <span>/</span>
        <span class="current">Catégories</span>
    </div>
{% endblock %}

{% block header_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_event_cat_pdf') }}" class="btn btn-outline-primary pdf-btn">
            <i class="fas fa-file-pdf me-1"></i> PDF
        </a>
        <a href="{{ path('app_event_cat_new') }}" class="btn btn-primary admin-btn-primary">
            <i class="fas fa-plus me-1"></i> Créer
        </a>
    </div>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header d-flex flex-wrap align-items-center justify-content-between p-4 border-bottom">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="fas fa-tags me-2"></i>Liste des catégories
            </h5>
            
            {# SEARCH & FILTER #}
            <form method="get" action="{{ path('app_event_cat_index') }}" class="d-flex gap-2 align-items-center">
                <div class="input-group">
                    <span class="input-group-text bg-white text-muted border-end-0">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" 
                           name="search" 
                           class="form-control border-start-0 ps-0" 
                           placeholder="Rechercher..." 
                           value="{{ searchTerm|default('') }}">
                </div>
                
                {% if searchTerm or sortBy != 'name' or sortOrder != 'ASC' %}
                    <a href="{{ path('app_event_cat_index') }}" class="btn btn-outline-secondary" title="Réinitialiser">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                {% endif %}
            </form>
        </div>

        <div class="admin-card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0">
                    <thead class="bg-light text-muted uppercase small">
                        <tr>
                            <th class="ps-4">
                                <a href="{{ path('app_event_cat_index', {search: searchTerm, sort_by: 'name', sort_order: sortBy == 'name' and sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" class="text-decoration-none text-muted">
                                    NOM {% if sortBy == 'name' %}<i class="fas fa-sort-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                                </a>
                            </th>
                            <th>DESCRIPTION</th>
                            <th>
                                <a href="{{ path('app_event_cat_index', {search: searchTerm, sort_by: 'eventCount', sort_order: sortBy == 'eventCount' and sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" class="text-decoration-none text-muted">
                                    ÉVÉNEMENTS {% if sortBy == 'eventCount' %}<i class="fas fa-sort-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                                </a>
                            </th>
                            <th class="text-end pe-4">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if event_cats|length == 0 %}
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 text-light"></i>
                                    <p class="mb-0">Aucune catégorie trouvée.</p>
                                </td>
                            </tr>
                        {% else %}
                            {% for event_cat in event_cats %}
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <h6 class="mb-0 fw-semibold">{{ event_cat.name }}</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-muted text-truncate d-inline-block" style="max-width: 300px;">
                                            {{ event_cat.description ? event_cat.description : '—' }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-white text-primary border border-primary px-3 py-2 rounded-pill">
                                            {{ event_cat.events|length }} événement{{ event_cat.events|length > 1 ? 's' : '' }}
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a href="{{ path('app_event_cat_show', {id: event_cat.id}) }}" class="btn btn-sm btn-light text-primary" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_event_cat_edit', {id: event_cat.id}) }}" class="btn btn-sm btn-light text-warning" title="Modifier">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
            
            {# PAGINATION (Placeholder style) #}
            <div class="d-flex justify-content-between align-items-center p-4 border-top">
                <small class="text-muted">Affichage de {{ event_cats|length }} catégorie(s)</small>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item disabled"><a class="page-link" href="#">Suivant</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <style>
        .pdf-btn {
            color: #0d6efd;
            border-color: #0d6efd;
        }
        .pdf-btn:hover {
            background-color: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }
        .admin-btn-primary {
            background-color: #ec4899;
            border-color: #ec4899;
            color: white;
        }
        .admin-btn-primary:hover {
            background-color: #be185d;
            border-color: #be185d;
        }
        .table-hover tbody tr:hover {
            background-color: #fdf2f8; /* Very light pink hover */
        }
        .text-xs {
            font-size: 0.75rem;
        }
    </style>
{% endblock %}