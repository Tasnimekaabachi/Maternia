{% extends 'admin/base.html.twig' %}

{% block title %}{{ event_cat.name }} - Détails{% endblock %}
{% block page_title %}Détails de la catégorie{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb" class="premium-breadcrumb-wrapper">
        <ol class="premium-breadcrumb">
            <li class="pb-item">
                <a href="{{ path('admin_dashboard') }}">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="pb-separator"><i class="fas fa-chevron-right"></i></li>
            <li class="pb-item">
                <a href="{{ path('admin_evenements') }}">Événements & Catégories</a>
            </li>
            <li class="pb-separator"><i class="fas fa-chevron-right"></i></li>
            <li class="pb-item">
                <a href="{{ path('app_event_cat_index') }}">Catégories</a>
            </li>
            <li class="pb-separator"><i class="fas fa-chevron-right"></i></li>
            <li class="pb-item active" aria-current="page">{{ event_cat.name }}</li>
        </ol>
    </nav>
{% endblock %}

{% block header_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_event_cat_index') }}" class="btn btn-outline-secondary px-4 rounded-pill">
            <i class="fas fa-arrow-left me-2"></i> Retour
        </a>

        <a href="{{ path('app_event_cat_edit', {'id': event_cat.id}) }}" class="btn btn-primary admin-btn-primary px-4 rounded-pill shadow-sm">
            <i class="fas fa-edit me-2"></i> Modifier
        </a>
    </div>
{% endblock %}

{% block content %}
    <div class="row g-4">
        {# Left Column - Category Details & Events #}
        <div class="col-lg-8">
            {# Hero Section #}
            <div class="admin-card premium-card mb-4">
                <div class="admin-card-header p-4 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold d-flex align-items-center flex-wrap gap-3">
                        <div class="header-icon-box">
                            <i class="fas fa-tag"></i>
                        </div>
                        <span class="text-dark">{{ event_cat.name }}</span>
                    </h5>
                    <span class="badge badge-premium bg-primary-light text-primary">
                        CATÉGORIE
                    </span>
                </div>
                <div class="admin-card-body p-4">
                    {# Description #}
                    <div class="detail-section mb-0">
                        <h6 class="detail-label">
                            <i class="fas fa-align-left me-2"></i>Description
                        </h6>
                        <div class="detail-value p-3 bg-light rounded-3 border-start border-primary border-4 shadow-sm">
                            {{ event_cat.description ? event_cat.description : 'Aucune description disponible pour cette catégorie.' }}
                        </div>
                    </div>
                </div>
            </div>

            {# Associated Events List #}
            <div class="admin-card premium-card">
                <div class="admin-card-header p-4 border-bottom">
                    <h6 class="mb-0 fw-bold d-flex align-items-center justify-content-between">
                        <span><i class="fas fa-calendar-alt text-primary me-2"></i>Événements associés</span>
                        <span class="badge bg-primary-light text-primary rounded-pill px-3 py-2 border border-primary-10">
                            {{ event_cat.events|length }} événements
                        </span>
                    </h6>
                </div>
                <div class="admin-card-body p-4">
                    {% if event_cat.events|length > 0 %}
                        <div class="row g-4">
                            {% for event in event_cat.events %}
                                <div class="col-md-6">
                                    <div class="event-card-premium h-100">
                                        <div class="ecp-image">
                                            {% if event.image %}
                                                <img src="{{ asset('img/events/' ~ event.image) }}" alt="{{ event.title }}">
                                            {% else %}
                                                <div class="ecp-no-image">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                            {% endif %}
                                            <div class="ecp-overlay">
                                                <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-sm btn-light rounded-pill">
                                                    <i class="fas fa-eye me-1"></i> Voir
                                                </a>
                                            </div>
                                        </div>
                                        <div class="ecp-body">
                                            <h6 class="ecp-title text-truncate" title="{{ event.title }}">{{ event.title }}</h6>
                                            <div class="ecp-date text-muted small mb-2">
                                                <i class="far fa-calendar me-1"></i>
                                                {% if event.isWeekly %}
                                                    Hebdomadaire
                                                {% else %}
                                                    {{ event.startAt ? event.startAt|date('d/m/Y') : 'Date N/D' }}
                                                {% endif %}
                                            </div>
                                            <div class="ecp-meta d-flex justify-content-between align-items-center mt-auto">
                                                <span class="badge bg-light text-dark border">
                                                    <i class="fas fa-users me-1 text-primary"></i> {{ event.attendances|length }}
                                                </span>
                                                <span class="small text-{{ event.endAt and event.endAt < date() ? 'danger' : 'success' }} fw-bold">
                                                    {{ event.endAt and event.endAt < date() ? 'Terminé' : 'Actif' }}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="empty-state-premium">
                            <div class="esp-icon"><i class="fas fa-calendar-times"></i></div>
                            <p class="esp-text">Aucun événement n'est associé à cette catégorie.</p>
                            <a href="{{ path('app_event_new') }}" class="btn btn-sm btn-outline-primary mt-3 rounded-pill">
                                <i class="fas fa-plus me-1"></i> Créer un événement
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Right Column - Stats & Info #}
        <div class="col-lg-4">
            {# Stats Card #}
            <div class="admin-card premium-card mb-4">
                <div class="admin-card-header p-3 border-bottom">
                    <h6 class="mb-0 fw-bold d-flex align-items-center">
                        <i class="fas fa-chart-pie text-primary me-2"></i>Statistiques
                    </h6>
                </div>
                <div class="admin-card-body p-4">
                    <div class="row g-3">
                        {% set totalParticipants = 0 %}
                        {% for event in event_cat.events %}
                            {% set totalParticipants = totalParticipants + event.attendances|length %}
                        {% endfor %}

                        <div class="col-6">
                            <div class="stats-box-premium text-center h-100">
                                <div class="sbp-icon mb-3">
                                    <i class="fas fa-calendar-check"></i>
                                </div>
                                <h3 class="sbp-value mb-1">{{ event_cat.events|length }}</h3>
                                <p class="sbp-label text-muted small uppercase ls-1">Événements</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stats-box-premium text-center h-100">
                                <div class="sbp-icon mb-3" style="background: #8b5cf6; box-shadow: 0 5px 15px rgba(139, 92, 246, 0.3);">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h3 class="sbp-value mb-1">{{ totalParticipants }}</h3>
                                <p class="sbp-label text-muted small uppercase ls-1">Participants</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Timestamps #}
            {% if (event_cat.createdAt is defined and event_cat.createdAt) or (event_cat.updatedAt is defined and event_cat.updatedAt) %}
                <div class="admin-card premium-card">
                    <div class="admin-card-header p-3 border-bottom">
                        <h6 class="mb-0 fw-bold d-flex align-items-center">
                            <i class="fas fa-info-circle text-primary me-2"></i>Informations
                        </h6>
                    </div>
                    <div class="admin-card-body p-4">
                        {% if event_cat.createdAt is defined and event_cat.createdAt %}
                            <div class="sidebar-item-premium mb-4">
                                <div class="sip-label"><i class="far fa-calendar-plus me-2"></i>Créée le</div>
                                <div class="sip-value mt-2 fw-bold text-dark">
                                    {{ event_cat.createdAt|date('d/m/Y') }} <span class="text-muted fw-normal">à {{ event_cat.createdAt|date('H:i') }}</span>
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if event_cat.updatedAt is defined and event_cat.updatedAt %}
                            <div class="sidebar-item-premium">
                                <div class="sip-label"><i class="far fa-edit me-2"></i>Mise à jour le</div>
                                <div class="sip-value mt-2 fw-bold text-dark">
                                    {{ event_cat.updatedAt|date('d/m/Y') }} <span class="text-muted fw-normal">à {{ event_cat.updatedAt|date('H:i') }}</span>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>



    <style>
        /* MATERNIA THEME VARIABLES */
        :root {
            --primary-pink: #ec4899;
            --primary-light: #fce7f3;
            --primary-hover: #be185d;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --shadow-premium: 0 10px 30px -5px rgba(236, 72, 153, 0.1);
            --radius-premium: 16px;
        }

        /* PREMIUM BUTTONS */
        .admin-btn-primary {
            background: linear-gradient(135deg, var(--primary-pink), var(--primary-hover)) !important;
            border: none;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .admin-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(236, 72, 153, 0.3) !important;
        }

        /* CARD STYLING */
        .premium-card {
            border: 1px solid var(--primary-light) !important;
            border-radius: var(--radius-premium) !important;
            background: white !important;
            box-shadow: var(--shadow-premium) !important;
            border-top: 4px solid var(--primary-pink) !important;
            transition: all 0.3s ease;
        }
        .premium-card:hover {
            box-shadow: 0 15px 40px -10px rgba(236, 72, 153, 0.15) !important;
        }

        /* HEADER COMPONENTS */
        .header-icon-box {
            width: 46px; height: 46px;
            background: var(--primary-light);
            color: var(--primary-pink);
            border-radius: 12px;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.2rem;
            box-shadow: 0 4px 10px rgba(236, 72, 153, 0.1);
        }
        
        .badge-premium {
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            border: 1px solid currentColor;
            border-opacity: 0.1;
        }

        /* DETAIL SECTIONS */
        .detail-label {
            font-size: 0.85rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-muted);
            margin-bottom: 1.25rem;
            display: flex; align-items: center;
        }
        .detail-label i { color: var(--primary-pink); }

        /* EVENT CARD PREMIUM - GRID */
        .event-card-premium {
            background: #fff;
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid #f3f4f6;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
        }
        .event-card-premium:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
            border-color: var(--primary-pink);
        }
        .ecp-image {
            height: 140px;
            background: #f3f4f6;
            position: relative;
            overflow: hidden;
        }
        .ecp-image img { width: 100%; height: 100%; object-fit: cover; }
        .ecp-no-image {
            width: 100%; height: 100%;
            display: flex; align-items: center; justify-content: center;
            color: #d1d5db; font-size: 2rem;
        }
        .ecp-overlay {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.3);
            display: flex; align-items: center; justify-content: center;
            opacity: 0; transition: opacity 0.3s ease;
        }
        .event-card-premium:hover .ecp-overlay { opacity: 1; }
        .ecp-body { padding: 1rem; }
        .ecp-title { font-weight: 700; color: var(--text-dark); margin-bottom: 0.5rem; }

        /* EMPTY STATE */
        .empty-state-premium {
            padding: 3rem;
            text-align: center;
            background: #f9fafb;
            border-radius: 12px;
            border: 2px dashed #e5e7eb;
        }
        .esp-icon { font-size: 2.5rem; color: #d1d5db; margin-bottom: 1rem; }
        .esp-text { color: #9ca3af; font-weight: 600; margin-bottom: 0; }

        /* STATS BOX & SIDEBAR ITEMS */
        .stats-box-premium {
            background: linear-gradient(135deg, #fff 0%, #fffcfd 100%);
            border: 1px solid var(--primary-light);
            border-radius: 15px;
            padding: 1.5rem;
        }
        .sbp-icon {
            width: 50px; height: 50px;
            background: var(--primary-pink);
            color: white;
            border-radius: 50%;
            display: inline-flex; align-items: center; justify-content: center;
            font-size: 1.5rem;
            box-shadow: 0 5px 15px rgba(236, 72, 153, 0.3);
        }
        .sbp-value { font-weight: 800; color: var(--text-dark); }

        .sidebar-item-premium {
            padding: 1rem;
            background: #f9fafb;
            border-radius: 12px;
            border: 1px solid #f3f4f6;
        }
        .sip-label { font-size: 0.75rem; font-weight: 700; color: #9ca3af; text-transform: uppercase; }

        /* PREMIUM MODAL */
        .premium-modal {
            border: none;
            border-radius: 20px;
            box-shadow: 0 15px 50px rgba(0,0,0,0.1);
            background: white;
        }
        .modal-icon-wrapper {
            width: 80px; height: 80px;
            background: #fee2e2;
            border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            margin: 0 auto;
            font-size: 2.5rem;
            animation: bounce-in 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        @keyframes bounce-in {
            0% { transform: scale(0); opacity: 0; }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); opacity: 1; }
        }

        .pb-separator {
            margin: 0 0.8rem;
            color: #d1d5db;
            font-size: 0.7rem;
        }
    </style>
{% endblock %}