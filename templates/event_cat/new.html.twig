{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle catégorie - Administration{% endblock %}
{% block page_title %}Créer une catégorie{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb" class="premium-breadcrumb-wrapper">
        <ol class="premium-breadcrumb">
            <li class="pb-item">
                <a href="{{ path('admin_dashboard') }}">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="pb-separator"><i class="fas fa-chevron-right"></i></li>
            <li class="pb-item">
                <a href="{{ path('admin_evenements') }}">Événements & Catégories</a>
            </li>
            <li class="pb-separator"><i class="fas fa-chevron-right"></i></li>
            <li class="pb-item">
                <a href="{{ path('app_event_cat_index') }}">Catégories</a>
            </li>
            <li class="pb-separator"><i class="fas fa-chevron-right"></i></li>
            <li class="pb-item active" aria-current="page">Nouvelle</li>
        </ol>
    </nav>
{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_event_cat_index') }}" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Retour
    </a>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header p-4 border-bottom">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="fas fa-plus-circle me-2"></i>Nouvelle catégorie
            </h5>
        </div>
        <div class="admin-card-body p-4">
            {{ include('event_cat/_form.html.twig') }}
        </div>
        <div class="admin-card-footer p-4 border-top bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_event_cat_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Annuler
                </a>
                <button type="submit" form="event_cat_form" class="btn btn-primary admin-btn-primary">
                    <i class="fas fa-check me-1"></i> Créer la catégorie
                </button>
            </div>
        </div>
    </div>

    <style>
        .admin-btn-primary {
            background-color: #ec4899;
            border-color: #ec4899;
            color: white;
        }
        .admin-btn-primary:hover {
            background-color: #be185d;
            border-color: #be185d;
        }

        .pb-separator {
            margin: 0 0.8rem;
            color: #d1d5db;
            font-size: 0.7rem;
        }
    </style>
{% endblock %}