{% extends 'admin/base.html.twig' %}

{% block title %}Nouveau créneau{% endblock %}
{% block page_title %}Nouveau créneau{% endblock %}

{% block stylesheets %}
<style>
    /* DESIGN ÉLÉGANT ROSE & BLEU (Ref. Consultation CRUD) */
    /* DESIGN ÉLÉGANT & FÉMININ (Refined Palette) */
    :root {
        --primary-pink: #FF8AAB;
        --soft-pink: #FFD1DC;
        --deep-pink: #FF5C8D;
        --rose-gold: #E5A29D;
        --lavender: #E1BEE7;
        --glass-white: rgba(255, 255, 255, 0.9);
        --gradient-feminine: linear-gradient(135deg, #FF8AAB 0%, #E1BEE7 100%);
        --gradient-soft: linear-gradient(135deg, #FFF5F5 0%, #FCE4EC 100%);
    }

    .new-consultation-container {
        background: var(--gradient-soft);
        min-height: 100vh;
        padding: 3rem 0;
    }

    .glass-card {
        background: var(--glass-white);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 20px 40px rgba(255, 138, 171, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .header-gradient {
        background: var(--gradient-feminine);
        padding: 3rem 2rem;
        color: white;
        position: relative;
    }

    .header-gradient::after {
        content: '';
        position: absolute;
        bottom: 0; left: 0; right: 0; height: 50px;
        background: linear-gradient(to top, var(--glass-white), transparent);
    }

    .section-container {
        padding: 2.5rem;
    }

    .section-title {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 2.5rem;
        font-weight: 700;
        color: #4A4A4A;
        font-size: 1.3rem;
        letter-spacing: 0.5px;
    }

    .section-title::before {
        content: '';
        position: absolute;
        left: 0; top: 0; bottom: 0; width: 6px;
        background: var(--gradient-feminine);
        border-radius: 10px;
    }

    .modern-input {
        border: 1px solid #F3E5F5;
        border-radius: 14px;
        padding: 0.85rem 1.2rem;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
        background-color: #FFFFFF;
        box-shadow: inset 0 2px 4px rgba(0,0,0,0.02);
    }

    .modern-input:focus {
        border-color: var(--primary-pink);
        box-shadow: 0 0 0 4px rgba(255, 138, 171, 0.15);
        transform: translateY(-1px);
        outline: none;
    }

    .form-label {
        font-weight: 600;
        color: #6D6D6D;
        margin-bottom: 0.6rem;
        font-size: 0.88rem;
        display: block;
    }

    .input-with-icon i {
        position: absolute;
        left: 1.2rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary-pink);
        z-index: 2;
        font-size: 0.95rem;
        opacity: 0.8;
    }

    .input-with-icon .modern-input {
        padding-left: 3.2rem;
    }

    .doctor-card {
        background: rgba(255, 255, 255, 0.5);
        border-radius: 20px;
        padding: 2.5rem;
        border: 1px dashed var(--soft-pink);
        transition: all 0.3s ease;
    }

    .doctor-card:hover {
        border-style: solid;
        background: white;
        box-shadow: 0 10px 20px rgba(255, 138, 171, 0.05);
    }

    .btn-modern {
        padding: 0.85rem 2.5rem;
        border-radius: 50px;
        font-weight: 600;
        border: none;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        letter-spacing: 0.5px;
    }

    .btn-primary-modern {
        background: var(--gradient-feminine);
        color: white;
        box-shadow: 0 10px 20px rgba(255, 138, 171, 0.3);
    }

    .btn-primary-modern:hover {
        transform: scale(1.03) translateY(-3px);
        box-shadow: 0 15px 25px rgba(255, 138, 171, 0.4);
        color: white;
    }

    .creneau-item {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        border: 1px solid #FCE4EC;
        position: relative;
        box-shadow: 0 4px 15px rgba(0,0,0,0.02);
    }

    .remove-creneau {
        position: absolute;
        top: -12px;
        right: -12px;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #FF5252;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        border: 3px solid white;
        font-size: 0.9rem;
        transition: all 0.2s;
        box-shadow: 0 4px 10px rgba(255, 82, 82, 0.3);
    }

    .remove-creneau:hover {
        transform: rotate(90deg) scale(1.1);
        background: #D32F2F;
    }

    .add-btn-wrapper {
        border: 2px dashed #F8BBD0;
        border-radius: 20px;
        padding: 2.5rem;
        text-align: center;
        background: rgba(252, 228, 236, 0.3);
        transition: all 0.3s ease;
    }

    .add-btn-wrapper:hover {
        border-color: var(--primary-pink);
        background: rgba(252, 228, 236, 0.5);
    }

    /* FLATPICKR CUSTOMIZATION */
    .flatpickr-calendar {
        background: #fff;
        box-shadow: 0 15px 35px rgba(255, 138, 171, 0.15) !important;
        border: 1px solid #FCE4EC !important;
        border-radius: 16px !important;
    }

    .flatpickr-day.selected {
        background: var(--primary-pink) !important;
        border-color: var(--primary-pink) !important;
    }

    .flatpickr-months .flatpickr-month {
        background: var(--gradient-feminine);
        border-radius: 16px 16px 0 0;
    }</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{% endblock %}

{% block content %}
<div class="new-consultation-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="glass-card">
                    <div class="header-gradient text-center">
                        <div class="position-absolute top-0 start-0 p-3">
                            <a href="{{ path('app_admin_consultation_creneau_index') }}" class="text-white opacity-75 hover-opacity-100 text-decoration-none small">
                                <i class="fas fa-chevron-left me-1"></i> Retour aux consultations
                            </a>
                        </div>
                        <i class="fas fa-calendar-plus fa-3x mb-3"></i>
                        <h1 class="h2 fw-bold mb-1">Nouveau Créneau</h1>
                        <p class="mb-0 opacity-90">Programmation manuelle des disponibilités</p>
                    </div>

                    <div class="section-container">
                        {{ form_start(form, {'attr': {'class': 'form-modern', 'novalidate': 'novalidate'}}) }}
                        
                        {# On cache les champs individuels pour gérer par collection #}
                        {% do form.jour.setRendered() %}
                        {% do form.heureDebut.setRendered() %}
                        {% do form.heureFin.setRendered() %}

                        {# Affichage des erreurs globales #}
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger rounded-pill px-4 mb-4 border-0 shadow-sm">
                                <i class="fas fa-exclamation-circle me-2"></i> Certaines informations sont incorrectes ou manquantes :
                                <ul class="mb-0 mt-2 small">
                                {% for child in form.children %}
                                    {% for error in child.vars.errors %}
                                        <li><strong>{{ child.vars.label|default(child.vars.name) }}</strong> : {{ error.message }}</li>
                                    {% endfor %}
                                {% endfor %}
                                {% for error in form.vars.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <div class="mb-5">
                            <h3 class="section-title">Informations du Médecin & Consultation</h3>
                            <div class="doctor-card">
                                <div class="row g-4">
                                    <div class="col-md-12">
                                        <label class="form-label" for="{{ form.consultation.vars.id }}">Type de Consultation *</label>
                                        <div class="input-with-icon">
                                            <i class="fas fa-stethoscope"></i>
                                            {{ form_widget(form.consultation, {'attr': {'class': 'form-select modern-input'}}) }}
                                        </div>
                                        <div class="text-danger small mt-1">{{ form_errors(form.consultation) }}</div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label" for="{{ form.nomMedecin.vars.id }}">Nom du Médecin *</label>
                                        <div class="input-with-icon">
                                            <i class="fas fa-user-md"></i>
                                            {{ form_widget(form.nomMedecin, {'attr': {'class': 'form-control modern-input', 'placeholder': 'Dr. Jean Dupont'}}) }}
                                        </div>
                                        <div class="text-danger small mt-1">{{ form_errors(form.nomMedecin) }}</div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label class="form-label" for="{{ form.specialiteMedecin.vars.id }}">Spécialité</label>
                                        <div class="input-with-icon">
                                            <i class="fas fa-award"></i>
                                            {{ form_widget(form.specialiteMedecin, {'attr': {'class': 'form-control modern-input', 'placeholder': 'Gynécologue, Pédiatre...'}}) }}
                                        </div>
                                        <div class="text-danger small mt-1">{{ form_errors(form.specialiteMedecin) }}</div>
                                    </div>

                                    <div class="col-md-12">
                                        <label class="form-label" for="{{ form.photoFile.vars.id }}">Photo du médecin</label>
                                        <div class="input-with-icon">
                                            <i class="fas fa-image"></i>
                                            {{ form_widget(form.photoFile, {'attr': {'class': 'form-control modern-input'}}) }}
                                        </div>
                                        <div class="text-danger small mt-1">{{ form_errors(form.photoFile) }}</div>
                                    </div>

                                    <div class="col-md-12">
                                        <label class="form-label" for="{{ form.descriptionMedecin.vars.id }}">Description du Médecin</label>
                                        <div class="input-with-icon">
                                            <i class="fas fa-align-left" style="top: 20px; transform: none;"></i>
                                            {{ form_widget(form.descriptionMedecin, {'attr': {'class': 'form-control modern-input', 'rows': '3', 'placeholder': 'Notes sur le médecin...'}}) }}
                                        </div>
                                        <div class="text-danger small mt-1">{{ form_errors(form.descriptionMedecin) }}</div>
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label" for="{{ form.dureeMinutes.vars.id }}">Durée par défaut (min)</label>
                                        {{ form_widget(form.dureeMinutes, {'attr': {'class': 'form-control modern-input'}}) }}
                                        <div class="text-danger small mt-1">{{ form_errors(form.dureeMinutes) }}</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label" for="{{ form.nombrePlaces.vars.id }}">Nombre de places</label>
                                        {{ form_widget(form.nombrePlaces, {'attr': {'class': 'form-control modern-input'}}) }}
                                        <div class="text-danger small mt-1">{{ form_errors(form.nombrePlaces) }}</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label" for="{{ form.statutReservation.vars.id }}">Statut initial</label>
                                        {{ form_widget(form.statutReservation, {'attr': {'class': 'form-select modern-input'}}) }}
                                        <div class="text-danger small mt-1">{{ form_errors(form.statutReservation) }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h3 class="section-title">Planning des Créneaux</h3>
                            
                            <div id="creneaux-container" 
                                 data-prototype="{{ form_widget(form.creneauxHoraires.vars.prototype)|e('html_attr') }}" 
                                 data-index="{{ form.creneauxHoraires|length }}">
                            </div>
                            <div class="text-danger small mt-1">{{ form_errors(form.creneauxHoraires) }}</div>
                            
                            <div class="add-btn-wrapper mt-3">
                                <p class="text-muted small mb-3">Ajoutez un ou plusieurs horaires spécifiques pour ce médecin</p>
                                <button type="button" id="add-creneau" class="btn btn-primary-modern btn-modern">
                                    <i class="fas fa-plus me-2"></i>
                                    Ajouter un horaire
                                </button>
                            </div>
                        </div>

                        <div class="mt-5 pt-4 border-top d-flex justify-content-between">
                            <a href="{{ path('app_admin_consultation_creneau_index') }}" class="btn btn-light btn-modern">
                                <i class="fas fa-times me-2"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary-modern btn-modern">
                                <i class="fas fa-check-circle me-2"></i> Enregistrer les créneaux
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const container = document.getElementById('creneaux-container');
        const addButton = document.getElementById('add-creneau');

        if (container && addButton) {
            let index = parseInt(container.dataset.index) || 0;
            
            function addCreneau() {
                const prototype = container.dataset.prototype;
                const newForm = prototype.replace(/__name__/g, index);
                
                const wrapper = document.createElement('div');
                wrapper.className = 'creneau-item';
                wrapper.innerHTML = `
                    <div class="remove-creneau"><i class="fas fa-times"></i></div>
                    <div class="row g-3">
                        ${newForm}
                    </div>
                `;
                
                container.appendChild(wrapper);
                
                const inputs = wrapper.querySelectorAll('input');
                inputs.forEach(input => {
                    input.className = 'form-control modern-input';
                    if (input.id.includes('jour')) {
                        flatpickr(input, { 
                            locale: "fr", 
                            dateFormat: "Y-m-d", 
                            altInput: true, 
                            altFormat: "j F Y",
                            disableMobile: "true"
                        });
                    } else if (input.id.includes('heure')) {
                        const fp = flatpickr(input, { 
                            enableTime: true, 
                            noCalendar: true, 
                            dateFormat: "H:i", 
                            altInput: true,
                            altFormat: "h:i K",
                            time_24hr: false,
                            minuteIncrement: 5,
                            disableMobile: "true",
                            onClose: function(selectedDates, dateStr, instance) {
                                if (instance.element.id.includes('heureDebut')) {
                                    calculateHeureFin(wrapper);
                                }
                            }
                        });
                    }
                });

                index++;
                container.dataset.index = index;
            }

            function calculateHeureFin(wrapper) {
                const dureeInput = document.querySelector('[id$="_dureeMinutes"]');
                const debutInput = wrapper.querySelector('[id$="_heureDebut"]');
                const finInput = wrapper.querySelector('[id$="_heureFin"]');

                if (debutInput.value && dureeInput.value) {
                    const [hours, minutes] = debutInput.value.split(':').map(Number);
                    const duree = parseInt(dureeInput.value);
                    
                    const date = new Date();
                    date.setHours(hours);
                    date.setMinutes(minutes + duree);
                    
                    const newHours = String(date.getHours()).padStart(2, '0');
                    const newMinutes = String(date.getMinutes()).padStart(2, '0');
                    
                    finInput._flatpickr.setDate(`${newHours}:${newMinutes}`);
                }
            }

            // Ajouter un écouteur sur le champ durée pour recalculer tous les créneaux si nécessaire
            const dureeGlobal = document.querySelector('[id$="_dureeMinutes"]');
            if (dureeGlobal) {
                dureeGlobal.addEventListener('change', function() {
                    const items = container.querySelectorAll('.creneau-item');
                    items.forEach(item => calculateHeureFin(item));
                });
            }

            addButton.addEventListener('click', addCreneau);

            container.addEventListener('click', function(e) {
                if (e.target.closest('.remove-creneau')) {
                    e.target.closest('.creneau-item').remove();
                }
            });

            // Ajouter un premier créneau automatiquement si vide
            if (index === 0) {
                addCreneau();
            }
        }
    });
</script>
{% endblock %}