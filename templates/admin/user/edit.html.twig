{# templates/admin/user/edit.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}
{% block page_title %}Modifier le profil{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary">Détails de l'utilisateur</h5>
                    {# Optional: show user ID or status here #}
                    <span class="badge bg-soft-info text-info">ID: #{{ user.id }}</span>
                </div>
                
                <div class="card-body p-4">
                    {# Pointing to the corrected form partial #}
                    {{ include('admin/user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>

                <div class="card-footer bg-light d-flex justify-content-between align-items-center py-3">
                    <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                    </a>
                    
                    {# Ensure this path is also corrected to admin/user/ #}
                    {{ include('admin/user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}