{# templates/admin/user/index.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Mamans{% endblock %}
{% block page_title %}Liste des Utilisateurs{% endblock %}

{% block header_actions %}
    <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter une maman
    </a>
{% endblock %}

{% block content %}
<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Nom & Prénom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="ps-4">
                        <span class="fw-bold">{{ user.nom|upper }}</span> {{ user.prenom }}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>
                        <span class="badge bg-soft-primary text-primary">
                            {{ user.type }}
                        </span>
                    </td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-edit"></i>
                        </a>
                        {# Add delete form here #}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}