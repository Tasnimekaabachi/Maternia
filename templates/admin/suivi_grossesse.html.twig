{% extends 'admin/base.html.twig' %}

{% block title %}Suivi grossesse{% endblock %}
{% block page_title %}Suivi grossesse{% endblock %}

{% block stylesheets %}
<style>
    .search-box { position: relative; display: flex; align-items: center; }
    .search-box i { position: absolute; left: 12px; color: #9ca3af; font-size: 0.85rem; }
    .search-input {
        border: 2px solid #e5e7eb; border-radius: 25px; padding: 6px 14px 6px 34px;
        font-size: 0.85rem; width: 180px; transition: all 0.3s; outline: none; background: #fafbfc;
    }
    .search-input:focus { border-color: #FF8AAB; width: 240px; background: white; }
</style>
{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <span>Suivi grossesse</span>
    </div>
{% endblock %}

{% block header_actions %}{% endblock %}

{% block content %}
    {# Carte principale : barre de recherche + tri au-dessus de la liste #}
    <div class="admin-card admin-card-list">
        <div class="admin-card-header d-flex flex-wrap align-items-center justify-content-between gap-2">
            <span>Liste des mamans</span>
        </div>

        {# Barre de recherche et tri ‚Äî au-dessus de la liste #}
        <div class="admin-list-toolbar">
            <form method="get" action="{{ path('admin_suivi_grossesse') }}" class="admin-list-toolbar-form">
                <div class="admin-list-toolbar-group">
                    <label for="groupe_sanguin" class="admin-list-toolbar-label">Groupe sanguin</label>
                    <select name="groupe_sanguin" id="groupe_sanguin" class="form-select form-select-sm admin-list-toolbar-select">
                        <option value="">Tous</option>
                        <option value="A+" {{ filtre_groupe == 'A+' ? 'selected' : '' }}>A+</option>
                        <option value="A-" {{ filtre_groupe == 'A-' ? 'selected' : '' }}>A-</option>
                        <option value="B+" {{ filtre_groupe == 'B+' ? 'selected' : '' }}>B+</option>
                        <option value="B-" {{ filtre_groupe == 'B-' ? 'selected' : '' }}>B-</option>
                        <option value="AB+" {{ filtre_groupe == 'AB+' ? 'selected' : '' }}>AB+</option>
                        <option value="AB-" {{ filtre_groupe == 'AB-' ? 'selected' : '' }}>AB-</option>
                        <option value="O+" {{ filtre_groupe == 'O+' ? 'selected' : '' }}>O+</option>
                        <option value="O-" {{ filtre_groupe == 'O-' ? 'selected' : '' }}>O-</option>
                    </select>
                </div>
                <div class="admin-list-toolbar-group">
                    <label for="tri" class="admin-list-toolbar-label">Tri par</label>
                    <select name="tri" id="tri" class="form-select form-select-sm admin-list-toolbar-select">
                        <option value="date" {{ tri == 'date' ? 'selected' : '' }}>Date</option>
                        <option value="taille" {{ tri == 'taille' ? 'selected' : '' }}>Taille</option>
                        <option value="poids" {{ tri == 'poids' ? 'selected' : '' }}>Poids</option>
                    </select>
                </div>
                <div class="admin-list-toolbar-group">
                    <label for="ordre" class="admin-list-toolbar-label">Ordre</label>
                    <select name="ordre" id="ordre" class="form-select form-select-sm admin-list-toolbar-select">
                        <option value="DESC" {{ ordre == 'DESC' ? 'selected' : '' }}>D√©croissant</option>
                        <option value="ASC" {{ ordre == 'ASC' ? 'selected' : '' }}>Croissant</option>
                    </select>
                </div>
                <div class="admin-list-toolbar-group admin-list-toolbar-actions">
                    <button type="submit" class="btn btn-sm admin-btn-rose">
                        <i class="fas fa-search me-1"></i> Appliquer
                    </button>
                </div>
            </form>
        </div>

        <div class="admin-card-body p-0">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Num√©ro urgence</th>
                            <th>Groupe sanguin</th>
                            <th>Taille / Poids</th>
                            <th>IMC</th>
                            <th>Activit√© physique</th>
                            <th>Date enregistrement</th>
                            <th width="140"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if mamans|length == 0 %}
                            <tr>
                                <td colspan="8">
                                    <div class="admin-empty py-4">
                                        <i class="fas fa-heart"></i>
                                        <p>Aucune maman enregistr√©e pour le moment.</p>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            {% for maman in mamans %}
                                <tr>
                                    <td>{{ maman.id }}</td>
                                    <td>{{ maman.numeroUrgence }}</td>
                                    <td>{{ maman.groupeSanguin }}</td>
                                    <td>{{ maman.taille }} cm / {{ maman.poids ?? '‚Äî' }} kg</td>
                                    <td>
                                        {% if maman.imc %}
                                            {{ maman.imc }} ({{ maman.imcCategorie }})
                                            {% if maman.imcAlerte %}
                                                <span class="admin-badge admin-badge-warning ms-1" title="Alerte IMC">‚ö†Ô∏è</span>
                                            {% endif %}
                                        {% else %}
                                            ‚Äî
                                        {% endif %}
                                    </td>
                                    <td>{{ maman.niveauActivitePhysique }}</td>
                                    <td>{{ maman.dateCreation ? maman.dateCreation|date('d/m/Y H:i') : '‚Äî' }}</td>
                                    <td>
                                        <a href="{{ path('admin_maman_show', { id: maman.id }) }}" class="btn btn-sm btn-outline-primary me-1" title="Voir"><i class="fas fa-eye"></i></a>
                                        <a href="{{ path('admin_maman_edit', { id: maman.id }) }}" class="btn btn-sm btn-outline-secondary" title="Modifier"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Liste des grossesses & b√©b√©s #}
    <div class="admin-card mt-3">
        <div class="admin-card-header d-flex flex-wrap align-items-center justify-content-between gap-2">
            <span>Grossesses & b√©b√©s</span>
            <a href="{{ path('admin_grosesse_index') }}" class="btn btn-sm btn-outline-primary">
                Voir tout le d√©tail
            </a>
        </div>
        <div class="admin-card-body p-0">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Maman</th>
                            <th>Statut</th>
                            <th>Type</th>
                            <th>Nb b√©b√©s</th>
                            <th>Date d√©but</th>
                            <th>Date accouchement r√©elle</th>
                            <th>B√©b√©s</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if grossesses is defined and grossesses|length > 0 %}
                        {% for g in grossesses %}
                            <tr>
                                <td>{{ g.id }}</td>
                                <td>
                                    {% if g.maman %}
                                        Maman #{{ g.maman.id }}
                                    {% else %}
                                        ‚Äî
                                    {% endif %}
                                </td>
                                <td>{{ g.statutGrossesse }}</td>
                                <td>{{ g.typeGrossesse }}</td>
                                <td>{{ g.nombreBebes ?? '‚Äî' }}</td>
                                <td>
                                    {% if g.dateDebutGrossesse %}
                                        {{ g.dateDebutGrossesse|date('d/m/Y') }}
                                    {% elseif g.dateDernieresRegles %}
                                        {{ g.dateDernieresRegles|date('d/m/Y') }}
                                    {% else %}
                                        ‚Äî
                                    {% endif %}
                                </td>
                                <td>
                                    {{ g.dateAccouchementReelle ? g.dateAccouchementReelle|date('d/m/Y') : '‚Äî' }}
                                </td>
                                <td>
                                    {% set bebesData = g.bebes %}
                                    {% if bebesData is iterable and bebesData|length > 0 %}
                                        {% for bebe in bebesData %}
                                            üë∂ {{ bebe.nom ?? 'B√©b√©' }}
                                            {% if bebe.poids is defined and bebe.poids is not null %}
                                                ({{ bebe.poids }} kg)
                                            {% endif %}
                                            <br>
                                        {% endfor %}
                                    {% elseif g.nomBebe %}
                                        üë∂ {{ g.nomBebe }}{% if g.poidsNaissance %} ({{ g.poidsNaissance }} kg){% endif %}
                                    {% else %}
                                        ‚Äî
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8">
                                <div class="admin-empty py-4">
                                    <i class="fas fa-baby"></i>
                                    <p>Aucune grossesse enregistr√©e pour le moment.</p>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Stats en bas ‚Äî r√©partition groupe sanguin et fumeur #}
    <div class="row g-3 mt-2">
        <div class="col-md-6">
            <div class="admin-card admin-card-stats h-100">
                <div class="admin-card-header admin-card-stats-header">
                    <i class="fas fa-tint me-2"></i> R√©partition par groupe sanguin
                </div>
                <div class="admin-card-body">
                    {% if stats_groupe_sanguin|length > 0 %}
                        <ul class="admin-stats-list">
                            {% for groupe, nb in stats_groupe_sanguin %}
                                <li class="d-flex justify-content-between align-items-center py-2">
                                    <span>{{ groupe }}</span>
                                    <span class="admin-stats-badge">{{ nb }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted mb-0 small">Aucune donn√©e</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="admin-card admin-card-stats h-100">
                <div class="admin-card-header admin-card-stats-header">
                    <i class="fas fa-smoking me-2"></i> Mode de vie (fumeuse)
                </div>
                <div class="admin-card-body">
                    <ul class="admin-stats-list">
                        <li class="d-flex justify-content-between align-items-center py-2">
                            <span>Oui</span>
                            <span class="admin-stats-badge">{{ stats_fumeur.oui }}</span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2">
                            <span>Non</span>
                            <span class="admin-stats-badge">{{ stats_fumeur.non }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    const adminSearch = document.getElementById('adminSearch');
    if (adminSearch) {
        adminSearch.addEventListener('input', function() {
            const q = this.value.toLowerCase();
            document.querySelectorAll('.admin-table tbody tr').forEach(row => {
                if (row.querySelector('.admin-empty')) return;
                row.style.display = row.textContent.toLowerCase().includes(q) ? '' : 'none';
            });
        });
    }
</script>
{% endblock %}
