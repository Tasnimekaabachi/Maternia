{% extends 'admin/base.html.twig' %}

{% block title %}Modifier maman #{{ maman.id }}{% endblock %}
{% block page_title %}Modifier maman #{{ maman.id }}{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('admin_suivi_grossesse') }}">Suivi grossesse</a>
        <span>/</span>
        <span>Modifier #{{ maman.id }}</span>
    </div>
{% endblock %}

{% block header_actions %}
    <a href="{{ path('admin_suivi_grossesse') }}" class="btn btn-outline-secondary me-2"><i class="fas fa-arrow-left me-1"></i> Retour à la liste</a>
    <a href="{{ path('admin_maman_show', { id: maman.id }) }}" class="btn btn-outline-primary"><i class="fas fa-eye me-1"></i> Voir</a>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header">Modifier le profil maman</div>
        <div class="admin-card-body">
            {{ include('admin/maman/_form.html.twig', { button_label: 'Mettre à jour' }) }}
            <div class="mt-4 pt-3 border-top">
                {{ include('admin/maman/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
