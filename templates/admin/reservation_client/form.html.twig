{% extends 'admin/base.html.twig' %}

{% block title %}{{ reservation.id ? 'Modifier' : 'Nouveau' }} Rendez-vous{% endblock %}
{% block page_title %}{{ reservation.id ? 'Éditer' : 'Créer' }} un rendez-vous{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --primary-pink: #FF8AAB;
        --soft-pink: #FFD1DC;
        --deep-pink: #FF5C8D;
        --primary-blue: #4A90E2;
        --gradient-feminine: linear-gradient(135deg, #FF8AAB 0%, #E1BEE7 100%);
        --gradient-soft: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
    }

    .form-container { background: var(--gradient-soft); min-height: 100vh; padding: 2rem 0; }
    
    .glass-card {
        background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px);
        border-radius: 24px; border: 1px solid rgba(255,255,255,0.2);
        box-shadow: 0 20px 40px rgba(255, 138, 171, 0.1); overflow: hidden;
    }

    .header-gradient {
        background: var(--gradient-feminine); padding: 2.5rem; color: white;
        position: relative; overflow: hidden;
    }

    .section-container { padding: 2rem; }
    
    .section-title {
        font-weight: 700; color: #333; font-size: 1.1rem; margin-bottom: 1.5rem;
        display: flex; align-items: center; gap: 10px;
    }
    .section-title::after { content: ''; flex: 1; height: 1px; background: #eee; }

    .modern-input-group { margin-bottom: 1.25rem; }
    
    .form-control, .form-select {
        border-radius: 12px; border: 2px solid #edf2f7; padding: 0.75rem 1rem;
        transition: all 0.3s; background: #fff; font-size: 0.9rem;
    }
    .form-control:focus, .form-select:focus {
        border-color: var(--primary-pink); box-shadow: 0 0 0 3px rgba(255, 138, 171, 0.1); outline: none;
    }

    .btn-save-modern {
        background: var(--gradient-feminine); color: white; border-radius: 50px;
        padding: 0.8rem 2.5rem; font-weight: 700; border: none; transition: 0.3s;
    }
    .btn-save-modern:hover { transform: translateY(-2px); box-shadow: 0 10px 20px rgba(255,138,171,0.3); color: white; }
    
    .input-icon-wrapper { position: relative; }
    .input-icon-wrapper i { position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: var(--primary-pink); }
    .input-icon-wrapper .form-control, .input-icon-wrapper .form-select { padding-left: 2.8rem; }
</style>
{% endblock %}

{% block content %}
<div class="form-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="glass-card">
                    <div class="header-gradient d-flex align-items-center gap-4">
                        <div class="bg-white text-pink rounded-pill p-3" style="width: 70px; height: 70px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-calendar-check fa-2x"></i>
                        </div>
                        <div>
                            <h2 class="fw-bold mb-0">{{ reservation.id ? 'Modifier la réservation' : 'Nouveau rendez-vous' }}</h2>
                            <p class="mb-0 opacity-80">Réf: #{{ reservation.reference }}</p>
                        </div>
                    </div>

                    <div class="section-container">
                        {{ form_start(form, {'attr': {'class': 'form-modern', 'novalidate': 'novalidate'}}) }}
                            
                            {% if not form.vars.valid %}
                                <div class="alert alert-danger mb-4 shadow-sm border-0" style="border-radius: 12px; border-left: 5px solid #dc3545 !important;">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-exclamation-triangle me-3 fa-lg"></i>
                                        <div>
                                            <h6 class="fw-bold mb-1">Attention</h6>
                                            <p class="mb-0 small">Veuillez corriger les erreurs ci-dessous pour enregistrer.</p>
                                        </div>
                                    </div>
                                    {{ form_errors(form) }}
                                </div>
                            {% endif %}
                            
                            <div class="section-title">
                                <i class="fas fa-user-edit"></i> Informations du Patient
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Nom</label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-user"></i>
                                        {{ form_widget(form.nomClient) }}
                                    </div>
                                    <div class="text-danger small mt-1">{{ form_errors(form.nomClient) }}</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Prénom</label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-user"></i>
                                        {{ form_widget(form.prenomClient) }}
                                    </div>
                                    <div class="text-danger small mt-1">{{ form_errors(form.prenomClient) }}</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Email</label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-envelope"></i>
                                        {{ form_widget(form.emailClient) }}
                                    </div>
                                    <div class="text-danger small mt-1">{{ form_errors(form.emailClient) }}</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Téléphone</label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-phone"></i>
                                        {{ form_widget(form.telephoneClient) }}
                                    </div>
                                    <div class="text-danger small mt-1">{{ form_errors(form.telephoneClient) }}</div>
                                </div>
                            </div>

                            <div class="section-title">
                                <i class="fas fa-clock"></i> Créneau & Type
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-12">
                                    <label class="form-label small fw-bold">Sélectionner le Créneau (Médecin & Date) *</label>
                                    <div class="input-icon-wrapper">
                                        <i class="fas fa-user-md"></i>
                                        {{ form_widget(form.consultationCreneau) }}
                                    </div>
                                    <div class="text-danger small mt-1">{{ form_errors(form.consultationCreneau) }}</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label small fw-bold">Public Cible</label>
                                    {{ form_widget(form.typePatient) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.typePatient) }}</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label small fw-bold">Mois Grossesse</label>
                                    {{ form_widget(form.moisGrossesse) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.moisGrossesse) }}</div>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label small fw-bold">Date Naissance Bébé</label>
                                    {{ form_widget(form.dateNaissanceBebe) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.dateNaissanceBebe) }}</div>
                                </div>
                            </div>

                            <div class="section-title">
                                <i class="fas fa-info-circle"></i> Statut & Notes
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold">Statut de Réservation</label>
                                    {{ form_widget(form.statutReservation) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.statutReservation) }}</div>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label small fw-bold">Notes Internes</label>
                                    {{ form_widget(form.notes) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.notes) }}</div>
                                </div>
                            </div>

                            <div class="mt-5 pt-4 border-top d-flex justify-content-end gap-3 align-items-center">
                                <a href="{{ path('app_admin_reservation_client_index') }}" class="text-muted fw-bold me-2">
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-save-modern">
                                    <i class="fas fa-check-circle me-2"></i> {{ reservation.id ? 'Enregistrer les modifications' : 'Créer le rendez-vous' }}
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
