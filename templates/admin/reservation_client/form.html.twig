{% extends 'admin/base.html.twig' %}

{% block title %}{{ reservation.id ? 'Modifier' : 'Nouveau' }} Rendez-vous{% endblock %}
{% block page_title %}{{ reservation.id ? 'Éditer' : 'Créer' }} un rendez-vous{% endblock %}

{% block stylesheets %}
<style>
    .form-container { background: linear-gradient(135deg, #FFF5F5 0%, #FCE4EC 100%); min-height: 100vh; padding: 3rem 0; }
    .glass-card {
        background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);
        border-radius: 30px; border: 1px solid white; padding: 3rem;
        box-shadow: 0 20px 40px rgba(255, 138, 171, 0.1);
    }
    .form-control, .form-select {
        border-radius: 15px; border: 2px solid #F3E5F5; padding: 0.75rem 1.25rem;
        transition: 0.3s; background: #FAFAFA;
    }
    .form-control:focus { border-color: #FF8AAB; box-shadow: 0 0 0 0.25rem rgba(255, 138, 171, 0.1); background: white; }
    .btn-feminine {
        background: linear-gradient(135deg, #FF8AAB 0%, #E1BEE7 100%);
        color: white; border-radius: 50px; padding: 0.8rem 2.5rem;
        font-weight: 700; border: none; transition: 0.3s;
    }
    .btn-feminine:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(255, 138, 171, 0.3); color: white; }
</style>
{% endblock %}

{% block content %}
<div class="form-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="glass-card">
                    {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-md-6">{{ form_row(form.nomClient) }}</div>
                            <div class="col-md-6">{{ form_row(form.prenomClient) }}</div>
                            <div class="col-md-6">{{ form_row(form.emailClient) }}</div>
                            <div class="col-md-6">{{ form_row(form.telephoneClient) }}</div>
                            <div class="col-md-4">{{ form_row(form.typePatient) }}</div>
                            <div class="col-md-4">{{ form_row(form.moisGrossesse) }}</div>
                            <div class="col-md-4">{{ form_row(form.dateNaissanceBebe) }}</div>
                            <div class="col-md-12">{{ form_row(form.notes) }}</div>
                        </div>
                        
                        <div class="text-center mt-5">
                            <button type="submit" class="btn btn-feminine">
                                <i class="fas fa-save me-2"></i> {{ reservation.id ? 'Enregistrer les modifications' : 'Confirmer le rendez-vous' }}
                            </button>
                            <div class="mt-3">
                                <a href="{{ path('app_admin_reservation_client_index') }}" class="text-muted text-decoration-none small">
                                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                                </a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
