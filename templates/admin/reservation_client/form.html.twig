{% extends 'admin/base.html.twig' %}

{% block title %}{{ reservation.id ? 'Modifier' : 'Nouveau' }} Rendez-vous{% endblock %}
{% block page_title %}{{ reservation.id ? 'Éditer' : 'Créer' }} un rendez-vous{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --primary-pink: #FF8AAB;
        --soft-pink: #FFD1DC;
        --deep-pink: #FF5C8D;
        --gradient-feminine: linear-gradient(135deg, #FF8AAB 0%, #E1BEE7 100%);
        --gradient-soft: linear-gradient(135deg, #FFF5F5 0%, #FCE4EC 100%);
        --glass-white: rgba(255, 255, 255, 0.95);
    }

    .form-container { background: var(--gradient-soft); min-height: 100vh; padding: 3rem 0; }
    
    .glass-card {
        background: var(--glass-white); backdrop-filter: blur(15px);
        border-radius: 30px; border: 1px solid white; overflow: hidden;
        box-shadow: 0 25px 50px rgba(255, 138, 171, 0.15);
    }

    .header-gradient {
        background: var(--gradient-feminine); padding: 3rem; color: white; text-align: center;
        position: relative;
    }

    .section-container { padding: 3rem; }
    
    .section-title {
        font-weight: 800; color: #4A4A4A; font-size: 1.25rem; margin-bottom: 2rem;
        display: flex; align-items: center; gap: 10px;
    }
    .section-title::after {
        content: ''; flex: 1; height: 2px; background: #FCE4EC; border-radius: 10px;
    }

    .modern-input-group { margin-bottom: 1.5rem; }
    .form-label { font-weight: 700; color: #6D6D6D; margin-bottom: 0.5rem; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; }
    
    .form-control, .form-select {
        border-radius: 14px; border: 2px solid #F3E5F5; padding: 0.8rem 1.2rem;
        transition: all 0.3s; background: #FFFFFF; font-size: 0.95rem;
    }
    .form-control:focus, .form-select:focus {
        border-color: var(--primary-pink); box-shadow: 0 0 0 4px rgba(255, 138, 171, 0.1); outline: none;
    }

    .btn-feminine {
        background: var(--gradient-feminine); color: white; border-radius: 50px;
        padding: 1rem 3rem; font-weight: 800; border: none; transition: 0.3s;
        text-transform: uppercase; letter-spacing: 1px;
    }
    .btn-feminine:hover { transform: translateY(-3px); box-shadow: 0 15px 30px rgba(255, 138, 171, 0.4); color: white; }
</style>
{% endblock %}

{% block content %}
<div class="form-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="glass-card">
                    <div class="header-gradient">
                        <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                        <h2 class="fw-bold mb-1">{{ reservation.id ? 'Modifier la réservation' : 'Nouvelle réservation' }}</h2>
                        <p class="mb-0 opacity-75">#{{ reservation.reference }}</p>
                    </div>

                    <div class="section-container">
                        {{ form_start(form, {'attr': {'class': 'form-modern'}}) }}
                            
                            <div class="section-title">
                                <i class="fas fa-user-circle text-pink"></i> Informations Patient
                            </div>
                            <div class="row">
                                <div class="col-md-6 modern-input-group">{{ form_row(form.nomClient) }}</div>
                                <div class="col-md-6 modern-input-group">{{ form_row(form.prenomClient) }}</div>
                                <div class="col-md-6 modern-input-group">{{ form_row(form.emailClient) }}</div>
                                <div class="col-md-6 modern-input-group">{{ form_row(form.telephoneClient) }}</div>
                            </div>

                            <div class="section-title mt-4">
                                <i class="fas fa-notes-medical text-pink"></i> Détails & Statut
                            </div>
                            <div class="row">
                                <div class="col-md-4 modern-input-group">{{ form_row(form.typePatient) }}</div>
                                <div class="col-md-4 modern-input-group">{{ form_row(form.moisGrossesse) }}</div>
                                <div class="col-md-4 modern-input-group">{{ form_row(form.dateNaissanceBebe) }}</div>
                                <div class="col-md-6 modern-input-group">{{ form_row(form.statutReservation) }}</div>
                                <div class="col-md-12 modern-input-group">{{ form_row(form.notes) }}</div>
                            </div>
                            
                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-feminine">
                                    <i class="fas fa-check-circle me-2"></i> {{ reservation.id ? 'Mettre à jour' : 'Créer la réservation' }}
                                </button>
                                <div class="mt-4">
                                    <a href="{{ path('app_admin_reservation_client_index') }}" class="text-muted text-decoration-none fw-bold">
                                        <i class="fas fa-times-circle me-1"></i> Annuler et retourner
                                    </a>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
