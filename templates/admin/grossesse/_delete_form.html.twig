<form method="post" action="{{ path('admin_grosesse_delete', { id: grossesse.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette grossesse ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ grossesse.id) }}">
    <button type="submit" class="btn btn-outline-danger btn-sm">
        <i class="fas fa-trash me-1"></i> Supprimer
    </button>
</form>

