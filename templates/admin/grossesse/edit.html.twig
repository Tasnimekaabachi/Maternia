{% extends 'admin/base.html.twig' %}

{% block title %}Modifier grossesse #{{ grossesse.id }}{% endblock %}
{% block page_title %}Modifier grossesse #{{ grossesse.id }}{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('admin_grosesse_index') }}">Grossesses & bébés</a>
        <span>/</span>
        <span>Modifier #{{ grossesse.id }}</span>
    </div>
{% endblock %}

{% block header_actions %}
    <a href="{{ path('admin_grosesse_index') }}" class="btn btn-outline-secondary me-2"><i class="fas fa-arrow-left me-1"></i> Retour à la liste</a>
    <a href="{{ path('admin_grosesse_show', { id: grossesse.id }) }}" class="btn btn-outline-primary"><i class="fas fa-eye me-1"></i> Voir</a>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header">Modifier la grossesse</div>
        <div class="admin-card-body">
            {{ include('admin/grossesse/_form.html.twig', { button_label: 'Mettre à jour' }) }}
            <div class="mt-4 pt-3 border-top">
                {{ include('admin/grossesse/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

