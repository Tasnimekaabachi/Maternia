<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Backoffice{% endblock %} - Maternia</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body class="admin-body">
    <div class="admin-wrapper">
        {# ── SIDEBAR ── #}
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="admin-sidebar-top">
                <a href="{{ path('admin_dashboard') }}" class="admin-sidebar-brand text-decoration-none d-block">
                    <div class="brand-logo">
                        <i class="fas fa-heart"></i>
                    </div>
                    <span class="brand-text">Mater<span class="brand-accent">nia</span></span>
                </a>
            </div>

            <nav class="admin-sidebar-nav">
                <div class="nav-section-label">Menu principal</div>

                <a href="{{ path('admin_dashboard') }}" class="nav-link {{ app.request.attributes.get('_route') == 'admin_dashboard' ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-tachometer-alt"></i></div>
                    <span>Tableau de bord</span>
                </a>

                <a href="{{ path('admin_user_index') }}" class="nav-link {{ app.request.attributes.get('_route') starts with 'admin_user' ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-users"></i></div>
                    <span>Gestion Utilisateurs</span>
                </a>

                <a href="{{ path('admin_suivi_grossesse') }}" class="nav-link {{ (app.request.attributes.get('_route') == 'admin_suivi_grossesse' or app.request.attributes.get('_route') starts with 'admin_maman_') ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-baby"></i></div>
                    <span>Suivi Grossesse</span>
                </a>

                <a href="{{ path('admin_marketplace') }}" class="nav-link {{ app.request.attributes.get('_route') == 'admin_marketplace' ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-shopping-bag"></i></div>
                    <span>Marketplace</span>
                </a>

                <a href="{{ path('admin_evenements') }}" class="nav-link {{ app.request.attributes.get('_route') starts with 'admin_evenements' or app.request.attributes.get('_route') starts with 'app_event' ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-calendar-alt"></i></div>
                    <span>Événements</span>
                </a>

                {% set _route = app.request.attributes.get('_route') %}
                {% set is_consultation_route =
                    (_route starts with 'app_admin_consultation')
                    or (_route starts with 'app_admin_reservation_client')
                %}
                <a href="{{ path('app_admin_consultation_index') }}" class="nav-link {{ is_consultation_route ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-stethoscope"></i></div>
                    <span>Consultations</span>
                </a>

                <a href="{{ path('admin_profil_bebe') }}" class="nav-link {{ app.request.attributes.get('_route') == 'admin_profil_bebe' ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-baby-carriage"></i></div>
                    <span>Profil bébé</span>
                </a>

                <a href="{{ path('app_demande_baby_sitter_index') }}" class="nav-link {{ app.request.attributes.get('_route') starts with 'app_demande_baby_sitter_' ? 'active' : '' }}">
                    <div class="nav-icon-box"><i class="fas fa-user-nurse"></i></div>
                    <span>Profil babysitting</span>
                </a>
            </nav>

            <div class="admin-sidebar-footer">
                <a href="{{ path('app_home') }}" class="nav-link" target="_blank">
                    <div class="nav-icon-box"><i class="fas fa-external-link-alt"></i></div>
                    <span>Voir le site</span>
                </a>
                {% if app.user %}
                    <div class="sidebar-user">
                        <div class="sidebar-user-avatar">
                            {{ app.user.prenom|default('A')|first|upper }}
                        </div>
                        <div class="sidebar-user-info">
                            <span class="sidebar-user-name">{{ app.user.prenom|default('Admin') }}</span>
                            <span class="sidebar-user-role">Administrateur</span>
                        </div>
                    </div>
                {% endif %}
            </div>
        </aside>

        {# ── MAIN ── #}
        <main class="admin-main">
            <header class="admin-header">
                <div class="admin-header-left">
                    <button class="admin-hamburger" id="sidebarToggle" aria-label="Menu">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="admin-header-title-group">
                        <h1 class="admin-header-title mb-0">{% block page_title %}Tableau de bord{% endblock %}</h1>
                    </div>
                </div>
                <div class="admin-header-actions">
                    {% block header_actions %}{% endblock %}
                </div>
            </header>
            <div class="admin-content">
                <nav aria-label="breadcrumb">
                    {% block breadcrumb %}{% endblock %}
                </nav>
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show admin-flash" role="alert">
                            <i class="fas fa-{{ label == 'success' ? 'check-circle' : (label == 'danger' ? 'exclamation-circle' : 'info-circle') }} me-2"></i>
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block content %}{% endblock %}
            </div>
        </main>
    </div>

    {# ── SIDEBAR OVERLAY (mobile) ── #}
    <div class="admin-sidebar-overlay" id="sidebarOverlay"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar toggle
        const toggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('adminSidebar');
        const overlay = document.getElementById('sidebarOverlay');

        if (toggle && sidebar && overlay) {
            toggle.addEventListener('click', () => {
                sidebar.classList.toggle('open');
                overlay.classList.toggle('active');
            });
            overlay.addEventListener('click', () => {
                sidebar.classList.remove('open');
                overlay.classList.remove('active');
            });
        }
    </script>
    {% block javascripts %}{% endblock %}
</body>
</html>