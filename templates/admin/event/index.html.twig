{% extends 'admin/base.html.twig' %}

{% block title %}Événements - Administration{% endblock %}
{% block page_title %}Gestion des Événements{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('admin_evenements') }}">Événements & Catégories</a>
        <span>/</span>
        <span class="current">Événements</span>
    </div>
{% endblock %}

{% block header_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_event_pdf') }}" class="btn btn-outline-primary pdf-btn">
            <i class="fas fa-file-pdf me-1"></i> PDF
        </a>
        <a href="{{ path('app_event_new') }}" class="btn btn-primary admin-btn-primary">
            <i class="fas fa-plus me-1"></i> Créer
        </a>
    </div>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header d-flex flex-wrap align-items-center justify-content-between p-4 border-bottom">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="fas fa-calendar-alt me-2"></i>Liste des événements
            </h5>
            
            {# SEARCH & FILTER #}
            <form method="get" action="{{ path('app_event_index') }}" class="d-flex gap-2 align-items-center">
                <div class="input-group">
                    <span class="input-group-text bg-white text-muted border-end-0">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" 
                           name="search" 
                           class="form-control border-start-0 ps-0" 
                           placeholder="Rechercher..." 
                           value="{{ searchTerm|default('') }}">
                </div>
                
                {% if searchTerm or sortBy != 'startAt' or sortOrder != 'DESC' %}
                    <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary" title="Réinitialiser">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                {% endif %}
            </form>
        </div>

        <div class="admin-card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0">
                    <thead class="bg-light text-muted uppercase small">
                        <tr>
                            <th class="ps-4">
                                <a href="{{ path('app_event_index', {search: searchTerm, sort_by: 'title', sort_order: sortBy == 'title' and sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" class="text-decoration-none text-muted">
                                    TITRE {% if sortBy == 'title' %}<i class="fas fa-sort-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                                </a>
                            </th>
                            <th>
                                <a href="{{ path('app_event_index', {search: searchTerm, sort_by: 'startAt', sort_order: sortBy == 'startAt' and sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" class="text-decoration-none text-muted">
                                    DATE {% if sortBy == 'startAt' %}<i class="fas fa-sort-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                                </a>
                            </th>
                            <th>
                                <a href="{{ path('app_event_index', {search: searchTerm, sort_by: 'location', sort_order: sortBy == 'location' and sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" class="text-decoration-none text-muted">
                                    LIEU {% if sortBy == 'location' %}<i class="fas fa-sort-{{ sortOrder == 'ASC' ? 'up' : 'down' }}"></i>{% endif %}
                                </a>
                            </th>
                            <th>CATÉGORIE</th>
                            <th class="text-end pe-4">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if events|length == 0 %}
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 text-light"></i>
                                    <p class="mb-0">Aucun événement trouvé.</p>
                                </td>
                            </tr>
                        {% else %}
                            {% for event in events %}
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <h6 class="mb-0 fw-semibold">{{ event.title }}</h6>
                                                <small class="text-muted d-block text-truncate" style="max-width: 200px;">
                                                    {{ event.description|slice(0, 50) }}...
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-medium text-dark">
                                                {{ event.startAt ? event.startAt|date('d M Y') : '—' }}
                                            </span>
                                            <small class="text-muted">
                                                {{ event.startAt ? event.startAt|date('H:i') : '' }} 
                                                <i class="fas fa-arrow-right mx-1 text-xs"></i> 
                                                {{ event.endAt ? event.endAt|date('H:i') : '' }}
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-truncate d-inline-block" style="max-width: 150px;" title="{{ event.location }}">
                                            <i class="fas fa-map-marker-alt text-danger me-1 small"></i>{{ event.location }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if event.eventCat %}
                                            <span class="badge bg-white text-primary border border-primary px-3 py-2 rounded-pill">
                                                {{ event.eventCat.name }}
                                            </span>
                                        {% else %}
                                            <span class="badge bg-light text-secondary border px-3 py-2 rounded-pill">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a href="{{ path('app_event_show', {id: event.id}) }}" class="btn btn-sm btn-light text-primary" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_event_edit', {id: event.id}) }}" class="btn btn-sm btn-light text-warning" title="Modifier">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
            
            {# PAGINATION (Placeholder style) #}
            <div class="d-flex justify-content-between align-items-center p-4 border-top">
                <small class="text-muted">Affichage de {{ events|length }} événement(s)</small>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item disabled"><a class="page-link" href="#">Suivant</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <style>
        .pdf-btn {
            color: #0d6efd;
            border-color: #0d6efd;
        }
        .pdf-btn:hover {
            background-color: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }
        .admin-btn-primary {
            background-color: #ec4899;
            border-color: #ec4899;
            color: white;
        }
        .admin-btn-primary:hover {
            background-color: #be185d;
            border-color: #be185d;
        }
        .admin-btn-secondary {
            border-color: #ec4899;
            color: #ec4899;
        }
        .admin-btn-secondary:hover {
            background-color: #fce7f3;
            color: #be185d;
            border-color: #be185d;
        }
        .table-hover tbody tr:hover {
            background-color: #fdf2f8; /* Very light pink hover */
        }
        .text-xs {
            font-size: 0.75rem;
        }
    </style>
{% endblock %}