{% extends 'admin/base.html.twig' %}

{% block title %}Modifier événement - Administration{% endblock %}
{% block page_title %}Modifier un événement{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('admin_evenements') }}">Événements & Catégories</a>
        <span>/</span>
        <a href="{{ path('app_event_index') }}">Événements</a>
        <span>/</span>
        <span class="current">Modifier</span>
    </div>
{% endblock %}

{% block header_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour
        </a>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="fas fa-trash-alt me-1"></i> Supprimer
        </button>
    </div>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header p-4 border-bottom">
            <h5 class="mb-0 fw-bold text-primary">
                <i class="fas fa-edit me-2"></i>Modifier l'événement
            </h5>
        </div>
        <div class="admin-card-body p-4">
            {{ include('admin/event/_form.html.twig') }}
        </div>
        <div class="admin-card-footer p-4 border-top bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Annuler
                </a>
                <button type="submit" form="event-form" class="btn btn-primary admin-btn-primary">
                    <i class="fas fa-check me-1"></i> Enregistrer les modifications
                </button>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold text-danger" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmer la suppression
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer cet événement ?</p>
                    <div class="p-3 bg-light rounded border mb-3">
                        <span class="fw-bold">{{ event.title }}</span>
                    </div>
                    <p class="text-danger small mb-0">
                        <i class="fas fa-info-circle me-1"></i>Cette action ne peut pas être annulée.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Oui, supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>
        .admin-btn-primary {
            background-color: #ec4899;
            border-color: #ec4899;
            color: white;
        }
        .admin-btn-primary:hover {
            background-color: #be185d;
            border-color: #be185d;
        }
    </style>
{% endblock %}
