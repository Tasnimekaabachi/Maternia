{% extends 'admin/base.html.twig' %}

{% block title %}{{ event.title }} - Détails{% endblock %}
{% block page_title %}Détails de l'événement{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('admin_evenements') }}">Événements & Catégories</a>
        <span>/</span>
        <a href="{{ path('app_event_index') }}">Événements</a>
        <span>/</span>
        <span class="current">{{ event.title }}</span>
    </div>
{% endblock %}

{% block header_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour
        </a>
        <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-primary admin-btn-primary">
            <i class="fas fa-edit me-1"></i> Modifier
        </a>
    </div>
{% endblock %}

{% block content %}
    <div class="row g-4">
        {# Left Column - Event Details #}
        <div class="col-lg-8">
            <div class="admin-card">
                <div class="admin-card-header p-4 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="fas fa-calendar-alt me-2"></i>{{ event.title }}
                    </h5>
                </div>
                <div class="admin-card-body p-4">
                    {# Description #}
                    {% if event.description %}
                        <div class="detail-section mb-4">
                            <h6 class="detail-label">
                                <i class="fas fa-align-left text-primary me-2"></i>Description
                            </h6>
                            <p class="detail-value">{{ event.description }}</p>
                        </div>
                    {% endif %}

                    {# Date & Time #}
                    <div class="detail-section mb-4">
                        <h6 class="detail-label">
                            <i class="fas fa-clock text-primary me-2"></i>Date et heure
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <span class="detail-item-label">Début</span>
                                    <span class="detail-item-value">
                                        {% if event.startAt %}
                                            <i class="fas fa-calendar me-1 text-muted"></i>
                                            {{ event.startAt|date('d/m/Y') }}
                                            <i class="fas fa-clock ms-2 me-1 text-muted"></i>
                                            {{ event.startAt|date('H:i') }}
                                        {% else %}
                                            <span class="text-muted">Non défini</span>
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <span class="detail-item-label">Fin</span>
                                    <span class="detail-item-value">
                                        {% if event.endAt %}
                                            <i class="fas fa-calendar me-1 text-muted"></i>
                                            {{ event.endAt|date('d/m/Y') }}
                                            <i class="fas fa-clock ms-2 me-1 text-muted"></i>
                                            {{ event.endAt|date('H:i') }}
                                        {% else %}
                                            <span class="text-muted">Non défini</span>
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Location #}
                    <div class="detail-section">
                        <h6 class="detail-label">
                            <i class="fas fa-map-marker-alt text-danger me-2"></i>Lieu
                        </h6>
                        <p class="detail-value">
                            {{ event.location ? event.location : 'Non spécifié' }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        {# Right Column - Image & Category #}
        <div class="col-lg-4">
            {# Event Image #}
            {% if event.image %}
                <div class="admin-card mb-4">
                    <div class="admin-card-header p-3 border-bottom">
                        <h6 class="mb-0 fw-semibold">
                            <i class="fas fa-image text-primary me-2"></i>Image
                        </h6>
                    </div>
                    <div class="admin-card-body p-0">
                        <img src="{{ asset('img/events/' ~ event.image) }}" 
                             alt="{{ event.title }}" 
                             class="w-100"
                             style="max-height: 300px; object-fit: cover;">
                    </div>
                </div>
            {% endif %}

            {# Category #}
            <div class="admin-card">
                <div class="admin-card-header p-3 border-bottom">
                    <h6 class="mb-0 fw-semibold">
                        <i class="fas fa-tag text-primary me-2"></i>Catégorie
                    </h6>
                </div>
                <div class="admin-card-body p-3">
                    {% if event.eventCat %}
                        <span class="badge bg-white text-primary border border-primary px-3 py-2 rounded-pill fs-6">
                            {{ event.eventCat.name }}
                        </span>
                    {% else %}
                        <span class="text-muted">Aucune catégorie</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <style>
        .admin-btn-primary {
            background-color: #ec4899;
            border-color: #ec4899;
            color: white;
        }
        .admin-btn-primary:hover {
            background-color: #be185d;
            border-color: #be185d;
        }

        .detail-section {
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e5e7eb;
        }

        .detail-section:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .detail-label {
            font-size: 0.95rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 0.75rem;
        }

        .detail-value {
            color: #4b5563;
            line-height: 1.6;
            margin: 0;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            padding: 1rem;
            background: #f9fafb;
            border-radius: 6px;
            border: 1px solid #e5e7eb;
        }

        .detail-item-label {
            font-size: 0.875rem;
            font-weight: 600;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .detail-item-value {
            font-size: 0.95rem;
            color: #1f2937;
        }
    </style>
{% endblock %}