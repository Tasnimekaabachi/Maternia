{% extends 'admin/base.html.twig' %}

{% block title %}Événements{% endblock %}
{% block page_title %}Événements{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <span>Événements</span>
    </div>
{% endblock %}

{% block header_actions %}
    <button type="button" class="btn btn-primary admin-btn-primary">
        <i class="fas fa-plus me-1"></i> Créer un événement
    </button>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header">Événements dédiés aux mamans</div>
        <div class="admin-card-body p-0">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Date</th>
                            <th>Lieu</th>
                            <th>Places</th>
                            <th>Statut</th>
                            <th width="120"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6">
                                <div class="admin-empty py-4">
                                    <i class="fas fa-calendar-alt"></i>
                                    <p>Aucun événement pour le moment.</p>
                                    <button type="button" class="btn btn-primary admin-btn-primary">Créer un événement</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
