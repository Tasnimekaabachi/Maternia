{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}
{% block page_title %}Tableau de bord{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <span>Tableau de bord</span>
    </div>
{% endblock %}

{% block content %}
    <div class="admin-stats">
        <div class="admin-stat">
            <div class="admin-stat-value">{{ nbProduits }}</div>
            <div class="admin-stat-label">Produits marketplace</div>
        </div>
        <div class="admin-stat">
            <div class="admin-stat-value">{{ nbCommandesAttente + nbCommandesValidees + nbCommandesAnnulees }}</div>
            <div class="admin-stat-label">Commandes totales</div>
        </div>
        <div class="admin-stat">
            <div class="admin-stat-value">{{ nbCommandesValidees }}</div>
            <div class="admin-stat-label">Commandes validées</div>
        </div>
        <div class="admin-stat">
            <div class="admin-stat-value">{{ nbCommandesAttente }}</div>
            <div class="admin-stat-label">En attente</div>
        </div>
        <div class="admin-stat">
            <div class="admin-stat-value">{{ chiffreAffaires|number_format(2, ',', ' ') }} TND</div>
            <div class="admin-stat-label">Chiffre d'affaires</div>
        </div>
    </div>

    <div class="admin-card">
        <div class="admin-card-header">Produits les plus commandés</div>
        <div class="admin-card-body p-0">
            {% if topProduits is not empty %}
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Nombre de fois commandé</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in topProduits %}
                            <tr>
                                <td>{{ row.produit }}</td>
                                <td>{{ row.nb }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="p-4 text-center text-muted">
                    <i class="fas fa-chart-bar"></i>
                    <p class="mb-0">Aucune commande validée pour le moment.</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
