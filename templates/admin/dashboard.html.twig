{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}
{% block page_title %}Tableau de bord{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <span>Tableau de bord</span>
    </div>
{% endblock %}

{% block content %}

    <div class="admin-stats">

        {# ===== Suivi Grossesse ===== #}
        <div class="admin-stat">
            <div class="admin-stat-value">{{ suivis_grossesse_actifs|default(0) }}</div>
            <div class="admin-stat-label">Suivis grossesse actifs</div>
        </div>

        <div class="admin-stat">
            <div class="admin-stat-value">{{ total_grossesses|default(0) }}</div>
            <div class="admin-stat-label">Grossesses</div>
        </div>

        <div class="admin-stat">
            <div class="admin-stat-value">{{ total_mamans|default(0) }}</div>
            <div class="admin-stat-label">Mamans</div>
        </div>

        {# ===== Marketplace ===== #}
        <div class="admin-stat">
            <div class="admin-stat-value">{{ nbProduits|default(0) }}</div>
            <div class="admin-stat-label">Produits marketplace</div>
        </div>

        <div class="admin-stat">
            <div class="admin-stat-value">{{ eventCount|default(0) }}</div>
            <div class="admin-stat-label">Événements</div>
        </div>

        <div class="admin-stat">
            <div class="admin-stat-value">{{ eventCatCount|default(0) }}</div>
            <div class="admin-stat-label">Catégories d'événements</div>
        </div>

        <div class="admin-stat">
            <div class="admin-stat-value">
                {{ (nbCommandesAttente|default(0))
                 + (nbCommandesValidees|default(0))
                 + (nbCommandesAnnulees|default(0)) }}
            </div>
            <div class="admin-stat-label">Commandes totales</div>
        </div>

        <div class="admin-stat">
            <div class="admin-stat-value">
                {{ chiffreAffaires|default(0)|number_format(2, ',', ' ') }} TND
            </div>
            <div class="admin-stat-label">Chiffre d'affaires</div>
        </div>

    </div>

    {# ===== SECTION BABYSITTERS - Nouvelle ligne ===== #}
    <div class="row mt-4 mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <div class="bg-purple-light p-2 rounded-circle me-2">
                    <i class="fas fa-baby text-purple"></i>
                </div>
                <h5 class="mb-0 fw-bold text-dark">
                    <span class="border-bottom border-3 border-purple pb-1">Babysitting & Garde d'enfants</span>
                </h5>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="admin-stat-card bg-gradient-purple h-100">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="admin-stat-value text-white">{{ total_babysitters|default(0) }}</div>
                        <div class="admin-stat-label text-white-50">Babysitters inscrits</div>
                    </div>
                    <div class="stat-icon-circle bg-white-20">
                        <i class="fas fa-baby fa-2x text-white"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_offre_baby_sitter_index') }}" class="text-white text-decoration-none small">
                        Voir toutes les offres <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="admin-stat-card bg-gradient-success h-100">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="admin-stat-value text-white">{{ babysitters_disponibles|default(0) }}</div>
                        <div class="admin-stat-label text-white-50">Disponibles</div>
                    </div>
                    <div class="stat-icon-circle bg-white-20">
                        <i class="fas fa-check-circle fa-2x text-white"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-white-50 small">
                        <i class="fas fa-clock me-1"></i> Prêts à intervenir
                    </span>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="admin-stat-card bg-gradient-info h-100">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="admin-stat-value text-white">{{ offres_babysitting|default(0) }}</div>
                        <div class="admin-stat-label text-white-50">Offres actives</div>
                    </div>
                    <div class="stat-icon-circle bg-white-20">
                        <i class="fas fa-briefcase fa-2x text-white"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-white-50 small">
                        {{ offres_nouvelles|default(0) }} nouvelles cette semaine
                    </span>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="admin-stat-card bg-gradient-warning h-100">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="admin-stat-value text-white">{{ tarif_moyen_babysitting|default(0)|number_format(2, ',', ' ') }} TND</div>
                        <div class="admin-stat-label text-white-50">Tarif horaire moyen</div>
                    </div>
                    <div class="stat-icon-circle bg-white-20">
                        <i class="fas fa-coins fa-2x text-white"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="text-white-50 small">
                        <i class="fas fa-chart-line me-1"></i> {{ tarif_min_babysitting|default(0)|number_format(2, ',', ' ') }} - {{ tarif_max_babysitting|default(0)|number_format(2, ',', ' ') }} TND
                    </span>
                </div>
            </div>
        </div>
    </div>

    {# ===== Top Produits Stats Grid ===== #}
    <div class="mb-2">
        <h6 class="text-muted small text-uppercase fw-bold mb-3 ms-1">
            <i class="fas fa-chart-line me-2 text-primary"></i>Produits les plus commandés
        </h6>

        <div class="admin-stats">
            {% if topProduits|default([]) is not empty %}
                {% for row in topProduits %}
                    <div class="admin-stat">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="admin-stat-value" style="font-size: 1.5rem;">
                                {{ row.nb }}
                            </div>

                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center"
                                 style="width: 35px; height: 35px;">
                                <i class="fas fa-box-open text-primary small"></i>
                            </div>
                        </div>

                        <div class="admin-stat-label text-dark fw-bold text-truncate"
                             title="{{ row.produit }}">
                            {{ row.produit }}
                        </div>

                        <div class="text-muted small">Ventes totales</div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="admin-card w-100 p-4 text-center text-muted">
                    <i class="fas fa-chart-bar mb-2 fa-2x opacity-25"></i>
                    <p class="mb-0">Aucune commande validée pour le moment.</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# ===== Distribution des babysitters par ville ===== #}
    {% if stats_ville_babysitters is defined and stats_ville_babysitters|length > 0 %}
    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="admin-card h-100">
                <div class="admin-card-header">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-map-marker-alt text-purple me-2"></i>
                        <span>Babysitters par ville</span>
                    </div>
                </div>
                <div class="admin-card-body">
                    <div style="position: relative; height: 250px;">
                        <canvas id="chartBabysittersVille"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="admin-card h-100">
                <div class="admin-card-header">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-chart-bar text-purple me-2"></i>
                        <span>Top babysitters par expérience</span>
                    </div>
                </div>
                <div class="admin-card-body">
                    <div class="table-responsive">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>Babysitter</th>
                                    <th>Ville</th>
                                    <th>Expérience</th>
                                    <th>Tarif</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for babysitter in top_babysitters_experience|default([]) %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-user-circle text-purple me-2"></i>
                                                {{ babysitter.nomBabysitter }}
                                            </div>
                                        </td>
                                        <td>{{ babysitter.ville }}</td>
                                        <td><span class="badge bg-purple-light text-purple">{{ babysitter.experience }} ans</span></td>
                                        <td>{{ babysitter.tarif|number_format(2, ',', ' ') }} TND</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="fas fa-info-circle me-1"></i> Aucune donnée disponible
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="admin-card-footer text-end">
                    <a href="{{ path('app_offre_baby_sitter_index') }}" class="btn btn-sm btn-outline-purple">
                        Gérer les babysitters <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# ===== Recent Activity Card ===== #}
    <div class="admin-card mt-3">
        <div class="admin-card-header d-flex align-items-center justify-content-between flex-wrap gap-2">
            <span>Activité récente</span>
            <div>
                <span class="badge bg-purple-light text-purple me-2">
                    <i class="fas fa-baby me-1"></i> {{ nouvelles_offres_aujourdhui|default(0) }} offres babysitter aujourd'hui
                </span>
            </div>
        </div>

        <div class="admin-card-body p-0">
            {% if recent_activity|default([])|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 border-0 small text-uppercase text-muted fw-bold" style="width: 50px;">
                                    Type
                                </th>
                                <th class="border-0 small text-uppercase text-muted fw-bold">
                                    Détails
                                </th>
                                <th class="border-0 small text-uppercase text-muted fw-bold">
                                    Date
                                </th>
                                <th class="border-0 text-end pe-4 small text-uppercase text-muted fw-bold">
                                    Action
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for item in recent_activity %}
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="activity-icon-sq bg-light border rounded d-flex align-items-center justify-content-center"
                                                 style="width: 32px; height: 32px;">
                                                <i class="fas {{ item.icon }} text-primary small"></i>
                                            </div>

                                            <span class="badge {{ item.badge_class|default('bg-light') }} rounded-pill small fw-medium">
                                                {{ item.badge_text|default('Activité') }}
                                            </span>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="fw-bold text-dark">{{ item.title }}</div>
                                        <div class="text-muted small">{{ item.context }}</div>
                                    </td>

                                    <td class="small text-muted">
                                        {% if item.type is defined and item.type == 'product' %}
                                            Récemment
                                        {% elseif item.date is defined %}
                                            {{ item.date|date('d/m/Y') }} à {{ item.date|date('H:i') }}
                                        {% else %}
                                            —
                                        {% endif %}
                                    </td>

                                    <td class="text-end pe-4">
                                        <a href="{{ item.url }}" class="btn btn-sm btn-pink">Voir</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="admin-empty py-5">
                    <i class="fas fa-stream text-muted fa-3x mb-3"></i>
                    <p class="mb-0">Aucune activité récente.</p>
                </div>
            {% endif %}
        </div>
    </div>

    <style>
        /* Couleurs et styles pour la section babysitting */
        .bg-purple { background-color: #8b5cf6 !important; }
        .bg-purple-light { background-color: #ede9fe !important; color: #6d28d9 !important; }
        .text-purple { color: #8b5cf6 !important; }
        .border-purple { border-color: #8b5cf6 !important; }
        .btn-outline-purple {
            color: #8b5cf6;
            border-color: #8b5cf6;
        }
        .btn-outline-purple:hover {
            background-color: #8b5cf6;
            color: white;
        }
        
        /* Admin stat cards avec dégradés */
        .admin-stat-card {
            padding: 1.5rem;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: transform 0.2s;
        }
        .admin-stat-card:hover {
            transform: translateY(-2px);
        }
        
        .bg-gradient-purple {
            background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
        }
        .bg-gradient-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }
        .bg-gradient-info {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        }
        .bg-gradient-warning {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }
        
        .bg-white-20 {
            background-color: rgba(255, 255, 255, 0.2);
        }
        .text-white-50 {
            color: rgba(255, 255, 255, 0.9);
        }
        
        .stat-icon-circle {
            width: 54px;
            height: 54px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .bg-pink-light { background-color: #fce7f3; color: #be185d; }
        .bg-info-light { background-color: #e0f2fe; color: #0369a1; }
        .bg-warning-light { background-color: #fef3c7; color: #92400e; }
        .bg-success-light { background-color: #dcfce7; color: #15803d; }
        .bg-primary-light { background-color: #cfe2ff; color: #084298; }
        .bg-secondary-light { background-color: #f3f4f6; color: #374151; }
        .bg-indigo-light { background-color: #e0e7ff; color: #4338ca; }

        .btn-pink {
            background-color: #ec4899;
            color: white;
            border: none;
        }

        .btn-pink:hover {
            background-color: #be185d;
            color: white;
        }
    </style>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Graphique des babysitters par ville
            try {
                const statsVille = {{ stats_ville_babysitters|default([])|json_encode|raw }};
                
                if (statsVille && statsVille.length > 0) {
                    const canvas = document.getElementById('chartBabysittersVille');
                    if (canvas) {
                        const labels = statsVille.map(s => s.ville);
                        const data = statsVille.map(s => parseInt(s.nbOffres || s.count || 0));
                        
                        const colors = [
                            '#8b5cf6', '#6366f1', '#3b82f6', 
                            '#10b981', '#f59e0b', '#ef4444',
                            '#ec4899', '#8b5cf6'
                        ];
                        
                        new Chart(canvas.getContext('2d'), {
                            type: 'doughnut', // ou 'pie' pour un camembert
                            data: {
                                labels: labels,
                                datasets: [{
                                    data: data,
                                    backgroundColor: colors.slice(0, data.length),
                                    borderColor: '#ffffff',
                                    borderWidth: 2,
                                    hoverOffset: 10
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: true,
                                plugins: {
                                    legend: {
                                        position: 'bottom',
                                        labels: {
                                            boxWidth: 12,
                                            padding: 15
                                        }
                                    }
                                }
                            }
                        });
                    }
                }
            } catch (error) {
                console.error('Erreur graphique babysitters:', error);
            }
        });
    </script>
{% endblock %}  