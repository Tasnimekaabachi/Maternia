{% extends 'admin/base.html.twig' %}

{% block title %}Détails de {{ consultation.categorie }}{% endblock %}
{% block page_title %}{{ consultation.categorie }}{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('app_admin_consultation_index') }}">Consultations</a>
        <span>/</span>
        <span>Détails</span>
    </div>
{% endblock %}

{% block header_actions %}
    <div class="d-flex gap-2">
        <a href="{{ path('app_admin_consultation_edit', {'id': consultation.id}) }}" 
           class="btn btn-warning">
            <i class="fas fa-edit me-1"></i> Modifier
        </a>
        <a href="{{ path('app_admin_consultation_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour
        </a>
    </div>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    {% if consultation.icon %}
                        <i class="{{ consultation.icon }} me-3 fa-2x text-primary"></i>
                    {% endif %}
                    <div>
                        <h5 class="mb-0">{{ consultation.categorie }}</h5>
                        <small class="text-muted">ID: {{ consultation.id }}</small>
                    </div>
                </div>
                <div>
                    <span class="badge {% if consultation.statut %}bg-success{% else %}bg-danger{% endif %}">
                        {% if consultation.statut %}Actif{% else %}Inactif{% endif %}
                    </span>
                </div>
            </div>
        </div>
        
        <div class="admin-card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-4">
                        <h6>Description</h6>
                        {% if consultation.description %}
                            <p class="text-muted">{{ consultation.description }}</p>
                        {% else %}
                            <p class="text-muted fst-italic">Aucune description</p>
                        {% endif %}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6>Pour qui ?</h6>
                            <span class="badge 
                                {% if consultation.pour == 'BEBE' %}bg-info
                                {% elseif consultation.pour == 'MAMAN' %}bg-pink
                                {% else %}bg-primary{% endif %}">
                                {{ consultation.pour }}
                            </span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <h6>Ordre d'affichage</h6>
                            <p class="mb-0">
                                <span class="badge bg-secondary">{{ consultation.ordreAffichage }}</span>
                            </p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6>Image</h6>
                            <p class="mb-0">
                                {% if consultation.image %}
                                    <code>{{ consultation.image }}</code>
                                {% else %}
                                    <span class="text-muted fst-italic">Aucune image</span>
                                {% endif %}
                            </p>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <h6>Icône</h6>
                            <p class="mb-0">
                                {% if consultation.icon %}
                                    <i class="{{ consultation.icon }} me-1"></i>
                                    <code>{{ consultation.icon }}</code>
                                {% else %}
                                    <span class="text-muted fst-italic">Aucune icône</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="admin-card admin-card-info">
                        <div class="admin-card-header">
                            <i class="fas fa-info-circle me-2"></i> Informations
                        </div>
                        <div class="admin-card-body">
                            <dl class="mb-0">
                                <dt>Créé le</dt>
                                <dd>{{ consultation.createdAt|date('d/m/Y H:i') }}</dd>
                                
                                <dt>Modifié le</dt>
                                <dd>{{ consultation.updatedAt|date('d/m/Y H:i') }}</dd>
                                
                                <dt>ID Consultation</dt>
                                <dd>{{ consultation.id }}</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <a href="{{ path('app_admin_consultation_edit', {'id': consultation.id}) }}" 
                           class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-edit me-1"></i> Modifier
                        </a>
                        
                        <form method="post" 
                              action="{{ path('app_admin_consultation_delete', {'id': consultation.id}) }}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette consultation ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultation.id) }}">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-trash me-1"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}