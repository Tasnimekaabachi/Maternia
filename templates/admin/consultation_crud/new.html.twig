<script>
    // Aper√ßu dynamique de l'ic√¥ne
    document.getElementById('{{ form.icon.vars.id }}').addEventListener('input', function(e) {
        const preview = document.getElementById('iconPreview');
        const value = e.target.value.trim();
        
        if (value) {
            preview.className = value + ' icon-preview-large';
            preview.style.background = 'linear-gradient(135deg, var(--primary-blue), var(--pink))';
            preview.style.webkitBackgroundClip = 'text';
            preview.style.webkitTextFillColor = 'transparent';
            preview.style.backgroundClip = 'text';
        } else {
            preview.className = 'fas fa-question icon-preview-large';
            preview.style.color = '#4A90E2';
            preview.style.background = 'none';
            preview.style.webkitTextFillColor = '';
        }
    });

    // Aper√ßu dynamique de l'image
    document.getElementById('{{ form.image.vars.id }}').addEventListener('input', function(e) {
        const placeholder = document.querySelector('.image-preview-placeholder');
        const value = e.target.value.trim();
        
        if (value) {
            const extension = value.split('.').pop().toLowerCase();
            let icon = 'fas fa-image';
            
            if (['jpg', 'jpeg', 'png', 'gif'].includes(extension)) {
                icon = 'fas fa-file-image';
            } else if (extension === 'pdf') {
                icon = 'fas fa-file-pdf';
            }
            
            placeholder.innerHTML = `
                <i class="${icon}"></i>
                <div class="mt-2 small text-white">${value.length > 20 ? value.substring(0, 20) + '...' : value}</div>
            `;
            placeholder.style.background = 'linear-gradient(135deg, var(--primary-blue), var(--pink))';
        } else {
            placeholder.innerHTML = '<i class="fas fa-camera"></i>';
            placeholder.style.background = 'linear-gradient(135deg, var(--baby-blue), var(--lavender))';
        }
    });

    // Animation pour la barre de progression de l'ordre d'affichage
    const orderInput = document.getElementById('{{ form.ordreAffichage.vars.id }}');
    const progressBar = document.querySelector('.progress-bar');
    
    if (orderInput && progressBar) {
        orderInput.addEventListener('input', function(e) {
            const value = parseInt(e.target.value) || 1;
            const percentage = Math.min((value / 100) * 100, 100);
            progressBar.style.width = percentage + '%';
        });
        
        // Initialiser la barre
        const initialValue = parseInt(orderInput.value) || 1;
        const initialPercentage = Math.min((initialValue / 100) * 100, 100);
        progressBar.style.width = initialPercentage + '%';
    }

    // Animation des options de public cible
    document.querySelectorAll('.target-option input[type="radio"]').forEach(radio => {
        radio.addEventListener('change', function() {
            document.querySelectorAll('.target-option .option-content').forEach(content => {
                content.style.transform = '';
                content.style.borderColor = '';
            });
            
            if (this.checked) {
                const content = this.nextElementSibling;
                content.style.transform = 'scale(1.05)';
                content.style.transition = 'transform 0.3s ease';
            }
        });
    });

    // Initialiser l'aper√ßu de l'ic√¥ne
    document.addEventListener('DOMContentLoaded', function() {
        const iconInput = document.getElementById('{{ form.icon.vars.id }}');
        if (iconInput.value) {
            iconInput.dispatchEvent(new Event('input'));
        }
        
        const imageInput = document.getElementById('{{ form.image.vars.id }}');
        if (imageInput.value) {
            imageInput.dispatchEvent(new Event('input'));
        }
        
        // Animation d'entr√©e
        document.querySelectorAll('.fade-in').forEach((el, index) => {
            el.style.animationDelay = (index * 0.1) + 's';
        });

        // Failsafe pour le toggle de statut
        const statusCheckbox = document.getElementById('consultation_statut');
        if (statusCheckbox) {
            // Pas besoin de listener de clic complexe ici car on utilise 'for' sur les labels
            // qui pointent vers le m√™me ID de checkbox.
            // Cependant, comme c'est une checkbox, cliquer sur "INACTIF" quand c'est actif
            // va justement la d√©cocher, ce qui est parfait.
            console.log('Status Toggle initialized');
        }
    });
</script>
