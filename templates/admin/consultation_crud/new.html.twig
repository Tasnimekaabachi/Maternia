{% block content %}
<div class="new-consultation-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="glass-card fade-in">
                    <!-- HEADER SPECTACULAIRE -->
                    <div class="header-gradient text-white py-5 position-relative">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="icon-badge bg-white text-primary">
                                            <i class="fas fa-stethoscope"></i>
                                        </div>
                                        <div>
                                            <h1 class="display-5 fw-bold mb-2">Nouvelle Consultation</h1>
                                            <p class="lead mb-0 opacity-90">Cr√©ez une nouvelle cat√©gorie m√©dicale pour Maternia</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="floating-icons">
                                        <i class="fas fa-heartbeat"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="section-container">
                        {{ form_start(form, {'attr': {'class': 'form-modern', 'novalidate': 'novalidate'}}) }}
                        
                        {# On marque 'pour' comme rendu pour √©viter qu'il ne soit ajout√© √† nouveau √† la fin du formulaire par form_end, ce qui √©craserait la s√©lection manuelle #}
                        {% do form.pour.setRendered() %}
                        
                        <!-- SECTION 1: INFORMATIONS PRINCIPALES -->
                        <div class="mb-5 fade-in" style="animation-delay: 0.1s">
                            <h3 class="section-title">
                                <i class="fas fa-info-circle me-2"></i>
                                Informations Principales
                            </h3>
                            
                            <div class="row g-4">
                                <div class="col-md-12">
                                    <div class="input-with-icon">
                                        <i class="fas fa-tag"></i>
                                        {{ form_widget(form.categorie, {'attr': {
                                            'class': 'form-control modern-input',
                                            'placeholder': 'Ex: P√©diatrie, Gyn√©cologie, Nutrition Infantile...'
                                        }}) }}
                                    </div>
                                    <div class="mt-2 ps-4">
                                        <small class="text-muted">
                                            <i class="fas fa-lightbulb text-warning me-1"></i>
                                            Donnez un nom clair et pr√©cis √† cette consultation
                                        </small>
                                    </div>
                                    {{ form_errors(form.categorie) }}
                                </div>

                                <div class="col-md-12">
                                    <div class="input-with-icon">
                                        <i class="fas fa-align-left"></i>
                                        {{ form_widget(form.description, {'attr': {
                                            'class': 'form-control modern-input',
                                            'rows': 4,
                                            'placeholder': 'D√©crivez cette consultation de mani√®re d√©taill√©e...'
                                        }}) }}
                                    </div>
                                    <div class="mt-2 ps-4">
                                        <small class="text-muted">
                                            <i class="fas fa-comment-medical text-info me-1"></i>
                                            Cette description sera visible par les utilisateurs
                                        </small>
                                    </div>
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                        </div>

                        <!-- SECTION 2: PUBLIC CIBLE -->
                        <div class="mb-5 fade-in" style="animation-delay: 0.2s">
                            <h3 class="section-title">
                                <i class="fas fa-users me-2"></i>
                                Public Cible
                            </h3>
                            
                            <div class="text-center mb-4">
                                <p class="text-muted">S√©lectionnez le(s) b√©n√©ficiaire(s) de cette consultation</p>
                            </div>
                            
                            <div class="row g-4">
                                {% for choice in form.pour.vars.choices %}
                                <div class="col-md-4">
                                    <label class="target-option d-block">
                                        <input type="radio" 
                                               name="{{ form.pour.vars.full_name }}" 
                                               value="{{ choice.value }}"
                                               {{ form.pour.vars.value == choice.value ? 'checked' : '' }}
                                               class="d-none"
                                               required>
                                        <div class="option-content text-center p-4 rounded-3">
                                            <div class="target-icon 
                                                {% if choice.value == 'BEBE' %}baby
                                                {% elseif choice.value == 'MAMAN' %}maman
                                                {% else %}both{% endif %} mx-auto mb-3">
                                                {% if choice.value == 'BEBE' %}üë∂
                                                {% elseif choice.value == 'MAMAN' %}ü§∞
                                                {% else %}üë®‚Äçüë©‚Äçüëß{% endif %}
                                            </div>
                                            <h5 class="fw-bold mb-2">
                                                {% if choice.value == 'BEBE' %}B√©b√©
                                                {% elseif choice.value == 'MAMAN' %}Maman
                                                {% else %}Les Deux{% endif %}
                                            </h5>
                                            <p class="text-muted small mb-0">
                                                {% if choice.value == 'BEBE' %}Consultation d√©di√©e aux nourrissons et enfants
                                                {% elseif choice.value == 'MAMAN' %}Consultation r√©serv√©e aux futures et jeunes mamans
                                                {% else %}Consultation pour le duo maman-b√©b√©{% endif %}
                                            </p>
                                        </div>
                                    </label>
                                </div>
                                {% endfor %}
                            </div>
                            {{ form_errors(form.pour) }}
                        </div>

                        <!-- SECTION 3: CONFIGURATION -->
                        <div class="mb-5 fade-in" style="animation-delay: 0.3s">
                            <h3 class="section-title">
                                <i class="fas fa-cogs me-2"></i>
                                Configuration
                            </h3>
                            
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="p-4 rounded-3" style="background: linear-gradient(135deg, rgba(176, 224, 230, 0.1), rgba(230, 230, 250, 0.1))">
                                        <label class="form-label fw-bold mb-3 d-flex align-items-center">
                                            <i class="fas fa-sort-numeric-down-alt text-primary me-2"></i>
                                            Ordre d'Affichage
                                        </label>
                                        <div class="input-with-icon">
                                            <i class="fas fa-hashtag"></i>
                                            {{ form_widget(form.ordreAffichage, {'attr': {
                                                'class': 'form-control modern-input',
                                                'min': '1',
                                                'max': '100'
                                            }}) }}
                                        </div>
                                        <div class="mt-3">
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar" 
                                                     style="width: 50%; background: var(--gradient-primary);"
                                                     role="progressbar"></div>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-chart-line me-1"></i>
                                                D√©termine la position dans la liste (1 = premier)
                                            </small>
                                        </div>
                                        {{ form_errors(form.ordreAffichage) }}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="p-4 border rounded-3 bg-white">
                                        <label class="form-label fw-bold mb-3 d-flex align-items-center">
                                            <i class="fas fa-toggle-on text-success me-2"></i>
                                            Statut de la Consultation
                                        </label>
                                        <div class="status-section">
                                            {{ form_widget(form.statut, {
                                                'label': false,
                                                'attr': {'class': 'status-checkbox', 'id': 'consultation_statut'}
                                            }) }}
                                            
                                            <div class="status-toggle-group">
                                                <label class="status-toggle-item toggle-active" for="consultation_statut">
                                                    <i class="fas fa-check-circle"></i>
                                                    ACTIF
                                                </label>
                                                <label class="status-toggle-item toggle-inactive" for="consultation_statut">
                                                    <i class="fas fa-times-circle"></i>
                                                    INACTIF
                                                </label>
                                            </div>
                                            
                                            <div class="status-feedback-container ps-2">
                                                <div class="status-pulse"></div>
                                                <small class="text-muted">
                                                    <span class="status-text-active">Visible pour les utilisateurs</span>
                                                    <span class="status-text-inactive">Enregistr√© comme brouillon</span>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SECTION 4: APPEARANCE -->
                        <div class="mb-5 fade-in" style="animation-delay: 0.4s">
                            <h3 class="section-title">
                                <i class="fas fa-palette me-2"></i>
                                Apparence & Design
                            </h3>
                            
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="preview-container">
                                        <label class="form-label fw-bold mb-3 d-flex align-items-center">
                                            <i class="fas fa-icons text-primary me-2"></i>
                                            Ic√¥ne FontAwesome
                                        </label>
                                        <div class="input-with-icon mb-4">
                                            <i class="fab fa-font-awesome"></i>
                                            {{ form_widget(form.icon, {'attr': {
                                                'class': 'form-control modern-input',
                                                'placeholder': 'fas fa-baby, fas fa-heartbeat...'
                                            }}) }}
                                        </div>
                                        
                                        <div class="text-center">
                                            <div class="mb-3">
                                                <i id="iconPreview" class="icon-preview-large text-primary"></i>
                                            </div>
                                            <small class="text-muted d-block">
                                                <i class="fas fa-eye me-1"></i>
                                                Aper√ßu de l'ic√¥ne
                                            </small>
                                            <small class="text-muted">
                                                Exemples: fas fa-baby, fas fa-heart, fas fa-stethoscope
                                            </small>
                                        </div>
                                        {{ form_errors(form.icon) }}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="preview-container">
                                        <label class="form-label fw-bold mb-3 d-flex align-items-center">
                                            <i class="fas fa-image text-pink me-2"></i>
                                            Image d'Illustration
                                        </label>
                                        <div class="input-with-icon mb-4">
                                            <i class="fas fa-file-image"></i>
                                            {{ form_widget(form.image, {'attr': {
                                                'class': 'form-control modern-input',
                                                'placeholder': 'nom_du_fichier.jpg'
                                            }}) }}
                                        </div>
                                        
                                        <div class="text-center">
                                            <div class="image-preview-placeholder mb-3">
                                                <i class="fas fa-camera"></i>
                                            </div>
                                            <small class="text-muted d-block">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Format: JPG, PNG, WEBP
                                            </small>
                                            <small class="text-muted">
                                                Le nom du fichier s'affichera ici
                                            </small>
                                        </div>
                                        {{ form_errors(form.image) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SECTION 5: ACTIONS -->
                        <div class="fade-in" style="animation-delay: 0.5s">
                            <div class="border-top pt-5">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <div style="width: 40px; height: 40px; background: var(--gradient-primary); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-exclamation text-white"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h6 class="mb-1 fw-bold">Champs Requis</h6>
                                                <small class="text-muted">Les champs marqu√©s d'un * sont obligatoires</small>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-end gap-3">
                                            <a href="{{ path('app_admin_consultation_index') }}" class="btn btn-secondary-modern btn-modern">
                                                <i class="fas fa-times me-2"></i>
                                                Annuler
                                            </a>
                                            <button type="submit" class="btn btn-primary-modern btn-modern">
                                                <i class="fas fa-check me-2"></i>
                                                Cr√©er la Consultation
