{% extends 'admin/base.html.twig' %}

{% block title %}Modifier {{ consultation.categorie }}{% endblock %}
{% block page_title %}Modifier consultation{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('app_admin_consultation_index') }}">Consultations</a>
        <span>/</span>
        <span>{{ consultation.categorie }}</span>
    </div>
{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_admin_consultation_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Retour
    </a>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header">
            Modifier : {{ consultation.categorie }}
        </div>
        <div class="admin-card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.categorie) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.pour) }}
                    </div>
                </div>
                
                <div class="mb-3">
                    {{ form_row(form.description) }}
                </div>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.image) }}
                    </div>
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.icon) }}
                        <small class="form-text text-muted">Ex: fas fa-heart, fas fa-baby, etc.</small>
                    </div>
                    <div class="col-md-2 mb-3">
                        {{ form_row(form.ordreAffichage) }}
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label fw-bold mb-3 d-flex align-items-center">
                            <i class="fas fa-toggle-on text-success me-2"></i>
                            Statut
                        </label>
                        <div class="status-section">
                            {{ form_widget(form.statut, {
                                'label': false,
                                'attr': {'class': 'status-checkbox', 'id': 'consultation_statut_edit'}
                            }) }}
                            
                            <div class="status-toggle-group">
                                <label class="status-toggle-item toggle-active" for="consultation_statut_edit">
                                    <i class="fas fa-check-circle"></i>
                                    ACTIF
                                </label>
                                <label class="status-toggle-item toggle-inactive" for="consultation_statut_edit">
                                    <i class="fas fa-times-circle"></i>
                                    INACTIF
                                </label>
                            </div>
                            
                            <div class="status-feedback-container ps-2">
                                <div class="status-pulse"></div>
                                <small class="text-muted">
                                    <span class="status-text-active">Visible pour les utilisateurs</span>
                                    <span class="status-text-inactive">Enregistré comme brouillon</span>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary admin-btn-primary">
                        <i class="fas fa-save me-1"></i> Mettre à jour
                    </button>
                    <a href="{{ path('app_admin_consultation_index') }}" class="btn btn-secondary">
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}