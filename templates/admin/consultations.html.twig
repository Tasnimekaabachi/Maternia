{% extends 'admin/base.html.twig' %}

{% block title %}Consultations{% endblock %}
{% block page_title %}Consultations{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <span>Consultations</span>
    </div>
{% endblock %}

{% block header_actions %}
    <button type="button" class="btn btn-primary admin-btn-primary">
        <i class="fas fa-plus me-1"></i> Nouveau rendez-vous
    </button>
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header">Rendez-vous & consultations</div>
        <div class="admin-card-body p-0">
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Patient(e)</th>
                            <th>Date & heure</th>
                            <th>Type</th>
                            <th>Statut</th>
                            <th width="120"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="5">
                                <div class="admin-empty py-4">
                                    <i class="fas fa-stethoscope"></i>
                                    <p>Aucune consultation enregistrée.</p>
                                    <button type="button" class="btn btn-primary admin-btn-primary">Créer un rendez-vous</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
