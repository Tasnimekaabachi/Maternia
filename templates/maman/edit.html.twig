{% extends 'base.html.twig' %}

{% block title %}Mon suivi grossesse - Modifier{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="mb-3 text-primary">Modifier mon suivi de grossesse</h1>
                <p class="text-muted mb-4">Mettez à jour vos informations pour que le suivi reste précis.</p>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                            <h5 class="text-primary mb-3">
                                <i class="fas fa-calendar-alt me-2"></i>Dates de grossesse
                            </h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    {{ form_row(form.dateDernieresRegles, {'label': 'Date des dernières règles'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.dateDebutGrossesse, {'label': 'Date de début (si connue)'}) }}
                                </div>
                            </div>

                            <h5 class="text-primary mb-3">
                                <i class="fas fa-heart me-2"></i>Type de grossesse
                            </h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    {{ form_row(form.statutGrossesse, {'label': 'Statut de la grossesse'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.typeGrossesse, {'label': 'Type de grossesse'}) }}
                                </div>
                            </div>

                            <h5 class="text-primary mb-3">
                                <i class="fas fa-stethoscope me-2"></i>Votre santé actuelle
                            </h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    {{ form_row(form.poidsActuel, {'label': 'Poids actuel (kg)'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.indiceRisque, {'label': 'Indice de risque (optionnel)'}) }}
                                </div>
                                <div class="col-12">
                                    <fieldset class="border rounded p-3">
                                        <legend class="text-primary fw-semibold mb-2 w-auto px-2">Symptomes</legend>
                                        <div class="row g-2">
                                            <div class="col-md-6 col-lg-4">{{ form_row(form.nausee) }}</div>
                                            <div class="col-md-6 col-lg-4">{{ form_row(form.vomissement) }}</div>
                                            <div class="col-md-6 col-lg-4">{{ form_row(form.saignement) }}</div>
                                            <div class="col-md-6 col-lg-4">{{ form_row(form.fievre) }}</div>
                                            <div class="col-md-6 col-lg-4">{{ form_row(form.douleurAbdominale) }}</div>
                                            <div class="col-md-6 col-lg-4">{{ form_row(form.fatigue) }}</div>
                                            <div class="col-md-6 col-lg-4">{{ form_row(form.vertiges) }}</div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>

                            <h5 class="text-primary mb-3">
                                <i class="fas fa-baby me-2"></i>Après l’accouchement (facultatif)
                            </h5>
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    {{ form_row(form.dateAccouchementReelle, {'label': 'Date d’accouchement réelle'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.nombreBebes, {'label': 'Nombre de bébés'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.nomBebe, {'label': 'Prénom du bébé'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.sexeBebe, {'label': 'Sexe du bébé'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.poidsNaissance, {'label': 'Poids de naissance (kg)'}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.tailleNaissance, {'label': 'Taille de naissance (cm)'}) }}
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.etatNaissance, {'label': 'État à la naissance'}) }}
                                </div>
                            </div>

                            <div class="d-flex flex-wrap gap-2 mt-3">
                                <button class="btn admin-btn-rose">
                                    <i class="fas fa-check me-1"></i> Mettre à jour
                                </button>
                                <a href="{{ path('app_maman_suivi_index') }}" class="btn btn-outline-rose">
                                    Annuler
                                </a>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
