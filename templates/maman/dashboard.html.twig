{% extends 'base.html.twig' %}

{% block title %}Mon suivi grossesse{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-lg-8">
                <h1 class="mb-2 text-primary">Mon suivi de grossesse</h1>
                <p class="text-muted mb-0">Suivi personnalisé pour votre grossesse en cours.</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <a href="{{ path('app_maman_suivi_index', { mode: 'edit' }) }}" class="btn admin-btn-rose">
                    <i class="fas fa-edit me-1"></i> Mettre à jour mes informations
                </a>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-light border-0 fw-semibold">
                        <i class="fas fa-baby-carriage me-2 text-primary"></i>Avancement
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Semaine actuelle :</strong>
                            <span class="badge bg-primary ms-1">
                                {{ metrics.semaine ?? '—' }}
                            </span>
                        </p>
                        <p class="mb-2">
                            <strong>Trimestre :</strong>
                            {% if metrics.trimestre %}
                                <span class="badge bg-secondary ms-1">
                                    {{ metrics.trimestre }}<sup>e</sup>
                                </span>
                            {% else %}
                                —
                            {% endif %}
                        </p>
                        <p class="mb-0">
                            <strong>Date d'accouchement prévue :</strong>
                            {% if metrics.date_prevue %}
                                {{ metrics.date_prevue|date('d/m/Y') }}
                            {% else %}
                                —
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-light border-0 fw-semibold">
                        <i class="fas fa-stethoscope me-2 text-primary"></i>Santé & symptômes
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Poids actuel :</strong>
                            {{ metrics.poids_actuel is not null ? metrics.poids_actuel ~ ' kg' : '—' }}
                        </p>
                        <p class="mb-0">
                            <strong>Symptômes :</strong><br>
                            {{ metrics.symptomes ?: 'Aucun symptôme renseigné.' }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-light border-0 fw-semibold">
                        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Alertes
                    </div>
                    <div class="card-body">
                        {% if metrics.alertes is not empty %}
                            <div class="alert alert-warning mb-0">
                                <ul class="mb-0 ps-3">
                                    {% for alerte in metrics.alertes %}
                                        <li>{{ alerte }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% else %}
                            <div class="alert alert-success mb-0">
                                Aucune alerte particulière pour le moment.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {% if metrics.infos_bebe %}
            <div class="row g-4 mt-1">
                <div class="col-md-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-light border-0 fw-semibold">
                            <i class="fas fa-baby me-2 text-secondary"></i>Informations bébé
                        </div>
                        <div class="card-body row g-3">
                            <div class="col-md-4">
                                <p class="mb-1 text-muted small">Date d'accouchement</p>
                                <p class="mb-0 fw-semibold">
                                    {{ metrics.infos_bebe.date_accouchement|date('d/m/Y') }}
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1 text-muted small">Nombre de bébés</p>
                                <p class="mb-0 fw-semibold">
                                    {{ metrics.infos_bebe.nombre_bebes ?? 1 }}
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1 text-muted small">Prénom</p>
                                <p class="mb-0 fw-semibold">
                                    {{ metrics.infos_bebe.nom_bebe ?? '—' }}
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1 text-muted small">Sexe</p>
                                <p class="mb-0 fw-semibold">
                                    {{ metrics.infos_bebe.sexe_bebe ?? '—' }}
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1 text-muted small">Poids naissance</p>
                                <p class="mb-0 fw-semibold">
                                    {{ metrics.infos_bebe.poids_naissance is not null ? metrics.infos_bebe.poids_naissance ~ ' kg' : '—' }}
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1 text-muted small">Taille naissance</p>
                                <p class="mb-0 fw-semibold">
                                    {{ metrics.infos_bebe.taille_naissance is not null ? metrics.infos_bebe.taille_naissance ~ ' cm' : '—' }}
                                </p>
                            </div>
                            <div class="col-md-12">
                                <p class="mb-1 text-muted small">État à la naissance</p>
                                <p class="mb-0 fw-semibold">
                                    {{ metrics.infos_bebe.etat_naissance ?? '—' }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

