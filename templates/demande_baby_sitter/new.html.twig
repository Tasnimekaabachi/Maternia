{% extends 'base.html.twig' %}

{% block title %}Demande de babysitting{% endblock %}

{% block body %}
    <div class="container-fluid py-5 bg-light">
        <div class="container py-4">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="mb-4 text-center">
                        <h1 class="h2 text-primary mb-2">Demande de babysitting</h1>
                        <p class="text-muted mb-0">
                            Complétez le formulaire ci-dessous pour envoyer votre demande de garde d'enfants.
                        </p>
                    </div>

                    {# Résumé de l'offre sélectionnée si disponible #}
                    {% if demande_baby_sitter.offre %}
                        <div class="card mb-4 border-primary">
                            <div class="card-header bg-primary text-white">
                                Offre sélectionnée
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-primary mb-2">
                                    {{ demande_baby_sitter.offre.nomBabysitter }}
                                </h5>
                                <p class="card-text mb-1 text-muted small">
                                    <strong>Ville :</strong> {{ demande_baby_sitter.offre.ville }}
                                </p>
                                <p class="card-text mb-1 text-muted small">
                                    <strong>Expérience :</strong> {{ demande_baby_sitter.offre.experience }} ans
                                </p>
                                <p class="card-text mb-1 text-muted small">
                                    <strong>Tarif :</strong> {{ demande_baby_sitter.offre.tarif }} € / h
                                </p>
                                <p class="card-text mb-0 text-muted small">
                                    <strong>Disponibilité :</strong>
                                    {% if demande_baby_sitter.offre.disponibilite %}
                                        <span class="text-success">Disponible</span>
                                    {% else %}
                                        <span class="text-danger">Indisponible</span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    {% endif %}

                    <div class="card shadow-sm">
                        <div class="card-body">
                            {{ include('demande_baby_sitter/_form.html.twig', { button_label: 'Envoyer la demande' }) }}
                        </div>
                    </div>

                    <div class="mt-3 text-center">
                        <a href="{{ path('app_babysitting') }}" class="text-decoration-none">
                            &larr; Retour aux offres de babysitting
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
