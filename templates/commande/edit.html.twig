{% extends 'admin/base.html.twig' %}

{% block title %}Modifier commande{% endblock %}
{% block page_title %}Modifier la commande n°{{ commande.id }}{% endblock %}

{% block breadcrumb %}
    <div class="admin-breadcrumb">
        <a href="{{ path('admin_dashboard') }}">Backoffice</a>
        <span>/</span>
        <a href="{{ path('app_commande_index') }}">Commandes</a>
        <span>/</span>
        <span>Modifier</span>
    </div>
{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary me-2">
        <i class="fas fa-arrow-left me-1"></i> Retour à la liste
    </a>
    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}

{% block content %}
    <div class="admin-card">
        <div class="admin-card-header">Modifier la commande</div>
        <div class="admin-card-body">
            {{ include('commande/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>
{% endblock %}
