{% extends 'base.html.twig' %}

{% block title %}Créneaux disponibles - Maternia{% endblock %}

{% block body %}
<div class="container-fluid py-5 hero-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_consultations') }}">Consultations</a></li>
                        <li class="breadcrumb-item active">Créneaux disponibles</li>
                    </ol>
                </nav>
                <h1 class="mb-3 text-primary">Créneaux disponibles</h1>
                <p class="mb-0 text-white">Choisissez un créneau pour prendre rendez-vous avec un de nos spécialistes.</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    {% if grouped|length > 0 %}
        <p class="text-muted mb-4">{{ totalCreneaux }} créneau(x) disponible(s)</p>
        <div class="row g-4">
            {% for key, data in grouped %}
                <div class="col-12">
                    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-user-md me-2"></i>{{ data.medecin }}
                                <span class="badge bg-light text-primary ms-2">{{ data.consultation ? data.consultation.categorie : 'Consultation' }}</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                {% for creneau in data.creneaux %}
                                    <div class="col-md-4 col-lg-3">
                                        <div class="border rounded p-3 h-100 d-flex flex-column justify-content-between">
                                            <div>
                                                <strong>{{ creneau.dateDebut|date('d/m/Y') }}</strong><br>
                                                <span class="text-muted">{{ creneau.dateDebut|date('H:i') }} - {{ creneau.dateFin|date('H:i') }}</span>
                                            </div>
                                            {% if creneau.statutReservation == 'DISPONIBLE' %}
                                                <a href="{{ path('app_creneau_reserver', {'id': creneau.id}) }}" class="btn btn-primary btn-sm mt-2">
                                                    <i class="fas fa-calendar-check me-1"></i>Réserver
                                                </a>
                                            {% else %}
                                                <span class="badge bg-secondary mt-2">Indisponible</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
            <h4>Aucun créneau disponible</h4>
            <p class="text-muted">Les créneaux ajoutés par l'équipe apparaîtront ici. Consultez nos types de consultation pour voir les spécialistes.</p>
            <a href="{{ path('app_consultations') }}" class="btn btn-primary mt-3">
                <i class="fas fa-stethoscope me-2"></i>Voir les consultations
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
