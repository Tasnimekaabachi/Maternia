{% extends 'base.html.twig' %}

{% block title %}Mes rendez-vous - Maternia{% endblock %}

{% block body %}
<div class="container-fluid py-5 bg-light min-vh-100">
    <div class="container py-5">
        <!-- En-tête -->
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 text-primary mb-3">
                    <i class="fas fa-calendar-check me-3"></i>
                    Mes rendez-vous
                </h1>
                <p class="lead">Gérez tous vos rendez-vous en un seul endroit</p>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="row mb-5">
            <div class="col-md-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body text-center">
                        <h2 class="text-primary">3</h2>
                        <p class="text-muted mb-0">Rendez-vous à venir</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <h2 class="text-success">12</h2>
                        <p class="text-muted mb-0">Rendez-vous passés</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body text-center">
                        <h2 class="text-warning">2</h2>
                        <p class="text-muted mb-0">À confirmer</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body text-center">
                        <h2 class="text-info">1</h2>
                        <p class="text-muted mb-0">Annulés</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rendez-vous à venir -->
        <div class="card shadow-lg mb-5">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-clock me-2"></i>
                    Prochains rendez-vous
                </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date & Heure</th>
                                <th>Médecin</th>
                                <th>Spécialité</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>