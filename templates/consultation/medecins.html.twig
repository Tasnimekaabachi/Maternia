<!-- ============ NOUVEAU: SCRIPT DE RECHERCHE ET TRI AVEC PHOTOS FIXÉES ============ -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // ============ PHOTOS - FIXÉES ET PERMANENTES ============
        // Forcer l'affichage de TOUTES les photos immédiatement
        const forceImages = () => {
            document.querySelectorAll('.doctor-photo-container, .photo-frame, .doctor-photo, .photo-placeholder').forEach(el => {
                if (el) {
                    el.style.display = 'flex';
                    el.style.visibility = 'visible';
                    el.style.opacity = '1';
                    el.style.zIndex = '100';
                }
            });
            
            // Chargement immédiat des images
            document.querySelectorAll('.doctor-photo').forEach(img => {
                if (img.dataset.src) {
                    img.src = img.dataset.src;
                }
                img.style.display = 'block !important';
                img.style.visibility = 'visible !important';
                img.style.opacity = '1 !important';
            });
        };
        
        // Exécuter immédiatement
        forceImages();
        
        // Réappliquer après chaque chargement
        setTimeout(forceImages, 100);
        setTimeout(forceImages, 500);
        setInterval(forceImages, 2000); // Garder les photos visibles en permanence
        
        // ============ ANIMATIONS EXISTANTES ============
        // Animation des cartes au scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animationPlayState = 'running';
                    entry.target.style.opacity = '1';
                }
            });
        }, observerOptions);

        // Observer toutes les cartes
        document.querySelectorAll('.animate-card').forEach(card => {
            card.style.animationPlayState = 'paused';
            observer.observe(card);
        });

        // Effet de parallaxe léger sur le header
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const header = document.querySelector('.dynamic-header');
            if (header && scrolled < 500) {
                header.style.backgroundPositionY = scrolled * 0.05 + 'px';
            }
        });

        // Animation au survol des boutons
        const buttons = document.querySelectorAll('.appointment-btn');
        buttons.forEach(button => {
            button.addEventListener('mouseenter', function(e) {
                this.style.transform = 'translateY(-2px) scale(1.02)';
            });
            
            button.addEventListener('mouseleave', function(e) {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Animation au survol des cartes
        const cards = document.querySelectorAll('.doctor-card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
        });

        // ============ NOUVELLES FONCTIONNALITÉS: RECHERCHE ET TRI ============
        
        // Éléments DOM
        const searchInput = document.getElementById('searchInput');
        const specialtyFilter = document.getElementById('specialtyFilter');
        const availabilityFilter = document.getElementById('availabilityFilter');
        const searchButton = document.getElementById('searchButton');
        const activeFilters = document.getElementById('activeFilters');
        const sortIndicators = document.querySelectorAll('.sort-indicator');
        const doctorsGrid = document.getElementById('doctorsGrid');
        const visibleCountSpan = document.getElementById('visibleCount');
        const totalCountSpan = document.getElementById('totalCount');
        
        // Variables d'état
        let currentSort = 'name';
        let currentSortDirection = 'asc';
        
        // Fonction pour normaliser le texte de recherche
        function normalizeText(text) {
            if (!text) return '';
            return text.toString().toLowerCase()
                .normalize('NFD').replace(/[\u0300-\u036f]/g, '') // Enlever accents
                .replace(/[^a-z0-9]/g, '');
        }
        
        // Fonction pour mettre à jour les filtres actifs
        function updateActiveFilters() {
            let filters = [];
            const searchValue = searchInput.value.trim();
            const specialtyValue = specialtyFilter.value;
            const availabilityValue = availabilityFilter.value;
            
            if (searchValue) {
                filters.push(`<span class="filter-tag"><i class="fas fa-search"></i> "${searchValue}" <i class="fas fa-times remove-filter" data-filter="search"></i></span>`);
            }
            
            if (specialtyValue !== 'all') {
                const specialtyOption = specialtyFilter.querySelector(`option[value="${specialtyValue}"]`);
                filters.push(`<span class="filter-tag"><i class="fas fa-stethoscope"></i> ${specialtyOption.textContent} <i class="fas fa-times remove-filter" data-filter="specialty"></i></span>`);
            }
            
            if (availabilityValue !== 'all') {
                const availabilityText = availabilityValue === 'available' ? 'Disponible' : 'Complet';
                filters.push(`<span class="filter-tag"><i class="fas fa-clock"></i> ${availabilityText} <i class="fas fa-times remove-filter" data-filter="availability"></i></span>`);
            }
            
            activeFilters.innerHTML = filters.join('');
            
            // Ajouter les événements de suppression
            document.querySelectorAll('.remove-filter').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const filterType = this.dataset.filter;
                    
                    if (filterType === 'search') {
                        searchInput.value = '';
                    } else if (filterType === 'specialty') {
                        specialtyFilter.value = 'all';
                    } else if (filterType === 'availability') {
                        availabilityFilter.value = 'all';
                    }
                    
                    applyFilters();
                });
            });
        }
        
        // Fonction principale de filtrage
        function applyFilters() {
            const searchTerm = normalizeText(searchInput.value.trim());
            const specialtyValue = specialtyFilter.value;
            const availabilityValue = availabilityFilter.value;
            
            let visibleCount = 0;
            
            // Filtrer les cartes
            document.querySelectorAll('.doctor-card').forEach(card => {
                const cardName = normalizeText(card.dataset.name);
                const cardSpecialty = card.dataset.specialty;
                const cardAvailability = card.dataset.availability;
                
                let showCard = true;
                
                // Filtre par recherche
                if (searchTerm) {
                    if (!cardName.includes(searchTerm)) {
                        showCard = false;
                    }
                }
                
                // Filtre par spécialité
                if (showCard && specialtyValue !== 'all') {
                    if (cardSpecialty !== specialtyValue) {
                        showCard = false;
                    }
                }
                
                // Filtre par disponibilité
                if (showCard && availabilityValue !== 'all') {
                    if (cardAvailability !== availabilityValue) {
                        showCard = false;
                    }
                }
                
                // Afficher ou masquer la carte
                if (showCard) {
                    card.style.display = 'flex';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Mettre à jour le compteur
            const total = document.querySelectorAll('.doctor-card').length;
            if (visibleCountSpan) visibleCountSpan.textContent = visibleCount;
            if (totalCountSpan) totalCountSpan.textContent = total;
            
            updateActiveFilters();
            sortCards(currentSort, currentSortDirection);
            
            // Forcer l'affichage des photos après filtrage
            setTimeout(forceImages, 50);
        }
        
        // Fonction de tri
        function sortCards(sortType, direction = 'asc') {
            currentSort = sortType;
            
            // Mettre à jour l'affichage des indicateurs de tri
            sortIndicators.forEach(ind => {
                ind.classList.remove('active');
            });
            const activeIndicator = document.querySelector(`.sort-indicator[data-sort="${sortType}"]`);
            if (activeIndicator) activeIndicator.classList.add('active');
            
            const grid = document.getElementById('doctorsGrid');
            if (!grid) return;
            
            const cards = Array.from(grid.querySelectorAll('.doctor-card'));
            
            // Filtrer seulement les cartes visibles pour le tri
            const visibleCards = cards.filter(card => card.style.display !== 'none');
            
            // Trier les cartes visibles
            visibleCards.sort((a, b) => {
                let valA, valB;
                
                switch(sortType) {
                    case 'name':
                        valA = a.dataset.name;
                        valB = b.dataset.name;
                        break;
                    case 'specialty':
                        valA = a.dataset.specialty || '';
                        valB = b.dataset.specialty || '';
                        break;
                    case 'rating':
                        valA = parseFloat(a.dataset.rating) || 0;
                        valB = parseFloat(b.dataset.rating) || 0;
                        break;
                    default:
                        valA = a.dataset.name;
                        valB = b.dataset.name;
                }
                
                if (direction === 'asc') {
                    if (valA < valB) return -1;
                    if (valA > valB) return 1;
                    return 0;
                } else {
                    if (valA > valB) return -1;
                    if (valA < valB) return 1;
                    return 0;
                }
            });
            
            // Réorganiser le DOM
            visibleCards.forEach(card => {
                grid.appendChild(card);
            });
            
            // Forcer l'affichage des photos après tri
            setTimeout(forceImages, 50);
        }
        
        // Événements de recherche et filtrage
        if (searchButton) searchButton.addEventListener('click', applyFilters);
        
        // Recherche en temps réel (avec debounce)
        let debounceTimer;
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(applyFilters, 300);
            });
        }
        
        if (specialtyFilter) specialtyFilter.addEventListener('change', applyFilters);
        if (availabilityFilter) availabilityFilter.addEventListener('change', applyFilters);
        
        // Événements de tri
        sortIndicators.forEach(indicator => {
            indicator.addEventListener('click', function() {
                const sortType = this.dataset.sort;
                
                // Inverser la direction si on clique sur le même tri
                if (currentSort === sortType) {
                    currentSortDirection = currentSortDirection === 'asc' ? 'desc' : 'asc';
                    
                    // Changer l'icône
                    const icon = this.querySelector('i');
                    if (icon) {
                        if (currentSortDirection === 'asc') {
                            icon.className = sortType === 'name' ? 'fas fa-sort-alpha-down' : 
                                            (sortType === 'rating' ? 'fas fa-star' : 'fas fa-sort');
                        } else {
                            icon.className = sortType === 'name' ? 'fas fa-sort-alpha-up' : 
                                            (sortType === 'rating' ? 'fas fa-star' : 'fas fa-sort');
                        }
                    }
                } else {
                    currentSortDirection = 'asc';
                }
                
                sortCards(sortType, currentSortDirection);
            });
        });
        
        // Initialisation
        updateActiveFilters();
        
        // Forcer l'affichage des photos après chaque interaction
        document.addEventListener('click', forceImages);
        document.addEventListener('scroll', forceImages);
        
        console.log('Recherche, tri et photos permanentes activés !');
    });
</script>
