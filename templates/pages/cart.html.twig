{% extends 'base.html.twig' %}

{% block title %}Mon panier - Maternia{% endblock %}

{% block body %}
    <div class="container-fluid py-5 hero-header wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-7 col-md-12">
                    <h1 class="mb-3 text-primary">Mon panier</h1>
                    <h1 class="mb-5 display-4 text-white">Produits sélectionnés</h1>
                    <p class="lead text-white mb-4">Vérifiez les produits choisis avant de valider votre commande.</p>
                </div>
            </div>
        </div>
    </div>

    <section class="container-fluid py-5 bg-light">
        <div class="container py-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h2 class="mb-3">Contenu du panier</h2>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="{{ path('app_marketplace') }}" class="btn btn-outline-primary btn-border-radius">
                        Continuer mes achats
                    </a>
                </div>
            </div>

            {% if produits is empty %}
                <div class="alert alert-info">
                    Votre panier est vide. Ajoutez des produits depuis la <a href="{{ path('app_marketplace') }}">marketplace</a>.
                </div>
            {% else %}
                <div class="table-responsive bg-white rounded-3 shadow-sm">
                    <table class="table mb-0 align-middle">
                        <thead class="table-light">
                        <tr>
                            <th>Produit</th>
                            <th>Description</th>
                            <th>Prix</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td>{{ produit.nom }}</td>
                                <td>{{ produit.description|length > 80 ? produit.description|slice(0, 80) ~ '...' : produit.description }}</td>
                                <td>{{ produit.prix }} TND</td>
                                <td class="text-end">
                                    <a href="{{ path('app_cart_remove', { id: produit.id }) }}" class="btn btn-sm btn-outline-danger">
                                        Retirer
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th colspan="2" class="text-end">Total</th>
                            <th colspan="2">{{ total }} TND</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="text-end mt-4">
                    <form method="post" action="{{ path('app_cart_checkout') }}">
                        <button type="submit" class="btn btn-primary px-5 py-3 btn-border-radius">
                            Valider la commande
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

