{% extends 'base.html.twig' %}

{% block title %}Rendez-vous - Maternia{% endblock %}

{% block body %}
    <div class="container-fluid py-5 hero-header wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-7 col-md-12">
                    <h1 class="mb-3 text-primary">Prendre un rendez-vous</h1>
                    <h1 class="mb-5 display-1 text-white">Organisez vos consultations</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5 justify-content-center">
                <div class="col-lg-8">
                    <div class="border border-primary rounded-3 bg-light p-4 p-lg-5">
                        <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Formulaire de rendez-vous</h4>
                        <p class="text-muted mb-4">Remplissez le formulaire ci-dessous pour demander un rendez-vous. Nous vous recontacterons pour confirmer la date et l’heure.</p>

                        <form action="#" method="post" class="needs-validation" novalidate>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="nom" class="form-label">Nom <span class="text-primary">*</span></label>
                                    <input type="text" class="form-control form-control-lg" id="nom" name="nom" required placeholder="Votre nom">
                                </div>
                                <div class="col-md-6">
                                    <label for="prenom" class="form-label">Prénom <span class="text-primary">*</span></label>
                                    <input type="text" class="form-control form-control-lg" id="prenom" name="prenom" required placeholder="Votre prénom">
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email <span class="text-primary">*</span></label>
                                    <input type="email" class="form-control form-control-lg" id="email" name="email" required placeholder="exemple@email.fr">
                                </div>
                                <div class="col-md-6">
                                    <label for="telephone" class="form-label">Téléphone <span class="text-primary">*</span></label>
                                    <input type="tel" class="form-control form-control-lg" id="telephone" name="telephone" required placeholder="06 12 34 56 78">
                                </div>
                                <div class="col-md-6">
                                    <label for="date_souhaitee" class="form-label">Date souhaitée</label>
                                    <input type="date" class="form-control form-control-lg" id="date_souhaitee" name="date_souhaitee">
                                </div>
                                <div class="col-md-6">
                                    <label for="type_consultation" class="form-label">Type de consultation</label>
                                    <select class="form-select form-select-lg" id="type_consultation" name="type_consultation">
                                        <option value="">Choisir...</option>
                                        <option value="suivi_grossesse">Suivi de grossesse</option>
                                        <option value="consultation_postnatale">Consultation postnatale</option>
                                        <option value="allaitement">Conseil allaitement</option>
                                        <option value="bilan">Bilan</option>
                                        <option value="autre">Autre</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control form-control-lg" id="message" name="message" rows="4" placeholder="Précisez si besoin le motif de votre rendez-vous ou vos disponibilités..."></textarea>
                                </div>
                                <div class="col-12 mt-4">
                                    <button type="submit" class="btn btn-primary px-5 py-3 btn-border-radius">
                                        <i class="fas fa-paper-plane me-2"></i>Envoyer ma demande
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
