{% extends 'base.html.twig' %}

{% block title %}Rendez-vous - Maternia{% endblock %}

{% block body %}

<!-- Hero Section -->
<div class="container-fluid py-5 hero-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-7 col-md-12">
                <h1 class="mb-3 text-primary">Prendre un rendez-vous</h1>
                <h1 class="mb-5 display-1 text-white">Organisez vos consultations</h1>
            </div>
        </div>
    </div>
</div>

<!-- Consultation Categories -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">Nos consultations spécialisées</h1>
            <p>Choisissez la catégorie qui correspond à vos besoins</p>
        </div>
        
        <div class="row g-4">
            <!-- Pour les mamans -->
            {% if consultationsMaman is not empty %}
            <div class="col-12">
                <h3 class="mb-4 text-primary"><i class="fas fa-female me-2"></i> Pour les mamans</h3>
                <div class="row g-4">
                    {% for consultation in consultationsMaman %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="service-item rounded h-100 p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-white rounded-circle p-3" style="width: 70px; height: 70px;">
                                    <i class="fas {{ consultation.icon|default('fa-heartbeat') }} text-primary fa-2x"></i>
                                </div>
                                <h4 class="mb-0 ms-3">{{ consultation.categorie }}</h4>
                            </div>
                            <p class="mb-4">{{ consultation.description|default('') }}</p>
                            <a class="btn btn-primary px-3" href="{{ path('app_consultation_medecins', {'id': consultation.id}) }}">
                                Voir les médecins <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            
            <!-- Pour les bébés -->
            {% if consultationsBebe is not empty %}
            <div class="col-12 mt-5">
                <h3 class="mb-4 text-primary"><i class="fas fa-baby me-2"></i> Pour les bébés</h3>
                <div class="row g-4">
                    {% for consultation in consultationsBebe %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="service-item rounded h-100 p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-white rounded-circle p-3" style="width: 70px; height: 70px;">
                                    <i class="fas {{ consultation.icon|default('fa-baby') }} text-primary fa-2x"></i>
                                </div>
                                <h4 class="mb-0 ms-3">{{ consultation.categorie }}</h4>
                            </div>
                            <p class="mb-4">{{ consultation.description|default('') }}</p>
                            <a class="btn btn-primary px-3" href="{{ path('app_consultation_medecins', {'id': consultation.id}) }}">
                                Voir les médecins <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- How it Works -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">Comment ça marche ?</h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="process-item text-center">
                    <div class="process-icon bg-primary rounded-circle">
                        <i class="fas fa-search fa-2x text-white"></i>
                    </div>
                    <h4 class="mt-4">1. Choisissez</h4>
                    <p>Sélectionnez la spécialité médicale qui vous convient</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="process-item text-center">
                    <div class="process-icon bg-primary rounded-circle">
                        <i class="fas fa-user-md fa-2x text-white"></i>
                    </div>
                    <h4 class="mt-4">2. Trouvez un médecin</h4>
                    <p>Consultez la liste des médecins disponibles</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="process-item text-center">
                    <div class="process-icon bg-primary rounded-circle">
                        <i class="fas fa-calendar-alt fa-2x text-white"></i>
                    </div>
                    <h4 class="mt-4">3. Réservez un créneau</h4>
                    <p>Choisissez la date et l'heure qui vous conviennent</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="process-item text-center">
                    <div class="process-icon bg-primary rounded-circle">
                        <i class="fas fa-video fa-2x text-white"></i>
                    </div>
                    <h4 class="mt-4">4. Consultez en ligne</h4>
                    <p>Recevez le lien de consultation par email</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mes Rendez-vous -->
<div class="container-xxl py-5 bg-light">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">Mes rendez-vous</h1>
            <p>Consultez vos rendez-vous à venir</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {% if creneauxReserves is defined and creneauxReserves is not empty %}
                    {% for creneau in creneauxReserves %}
                    <div class="card mb-3 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 class="card-title">{{ creneau.nomMedecin }}</h5>
                                    <p class="card-text mb-1">
                                        <i class="fas fa-calendar me-2"></i>
                                        {{ creneau.dateDebut|date('d/m/Y H:i') }}
                                    </p>
                                    <p class="card-text mb-1">
                                        <i class="fas fa-stethoscope me-2"></i>
                                        {{ creneau.consultation.categorie }}
                                    </p>
                                    <p class="card-text">
                                        <i class="fas fa-user me-2"></i>
                                        {{ creneau.prenomClient }} {{ creneau.nomClient }}
                                    </p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <span class="badge bg-success mb-3">Confirmé</span>
                                    <p class="text-muted mb-2">
                                        <small>Réf: {{ creneau.reference }}</small>
                                    </p>
                                    <button class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-video me-1"></i> Lien de connexion
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="text-center py-5 wow fadeInUp" data-wow-delay="0.1s">
                        <i class="fas fa-calendar fa-4x text-muted mb-4"></i>
                        <h4 class="mb-3">Aucun rendez-vous à venir</h4>
                        <p class="mb-4">Vous n'avez pas encore pris de rendez-vous.</p>
                        <a href="{{ path('app_consultations') }}" class="btn btn-primary">
                            Prendre un rendez-vous
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}