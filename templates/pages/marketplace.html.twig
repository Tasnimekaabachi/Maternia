{% extends 'base.html.twig' %}

{% block title %}Marketplace - Maternia{% endblock %}

{% block body %}
    <!-- Hero Marketplace -->
    <div class="container-fluid py-5 hero-header wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-lg-7 col-md-12">
                    <h1 class="mb-3 text-primary">Marketplace</h1>
                    <h1 class="mb-5 display-1 text-white">Produits & services pour mamans et bébés</h1>
                    <p class="lead text-white mb-4">Une sélection soignée pour la grossesse, la naissance et les premiers mois.</p>
                </div>
                <div class="col-lg-5 col-md-12 text-lg-end text-md-start">
                    <a href="{{ path('app_cart_show') }}" class="btn btn-light btn-lg btn-border-radius d-inline-flex align-items-center">
                        <i class="fas fa-shopping-cart text-primary me-2"></i>
                        <span>Voir mon panier</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Catégories -->
    <section class="container-fluid py-5 bg-light">
        <div class="container py-4">
            <div class="mx-auto text-center wow fadeIn mb-5" data-wow-delay="0.1s" style="max-width: 600px;">
                <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Catégories</h4>
                <h2 class="mb-0 display-6">Parcourir par thème</h2>
            </div>
            <div class="row g-4 justify-content-center">
                <div class="col-6 col-md-4 col-lg-2 wow fadeIn" data-wow-delay="0.1s">
                    <a href="#produits" class="text-decoration-none marketplace-cat border border-primary rounded-3 bg-white d-flex flex-column align-items-center justify-content-center p-4 h-100 transition-cat">
                        <i class="fas fa-heart fa-2x text-primary mb-2"></i>
                        <span class="text-dark fw-semibold small text-center">Grossesse</span>
                    </a>
                </div>
                <div class="col-6 col-md-4 col-lg-2 wow fadeIn" data-wow-delay="0.2s">
                    <a href="#produits" class="text-decoration-none marketplace-cat border border-primary rounded-3 bg-white d-flex flex-column align-items-center justify-content-center p-4 h-100 transition-cat">
                        <i class="fas fa-baby fa-2x text-primary mb-2"></i>
                        <span class="text-dark fw-semibold small text-center">Bébé</span>
                    </a>
                </div>
                <div class="col-6 col-md-4 col-lg-2 wow fadeIn" data-wow-delay="0.3s">
                    <a href="#produits" class="text-decoration-none marketplace-cat border border-primary rounded-3 bg-white d-flex flex-column align-items-center justify-content-center p-4 h-100 transition-cat">
                        <i class="fas fa-spa fa-2x text-primary mb-2"></i>
                        <span class="text-dark fw-semibold small text-center">Soins</span>
                    </a>
                </div>
                <div class="col-6 col-md-4 col-lg-2 wow fadeIn" data-wow-delay="0.4s">
                    <a href="#produits" class="text-decoration-none marketplace-cat border border-primary rounded-3 bg-white d-flex flex-column align-items-center justify-content-center p-4 h-100 transition-cat">
                        <i class="fas fa-tshirt fa-2x text-primary mb-2"></i>
                        <span class="text-dark fw-semibold small text-center">Mode</span>
                    </a>
                </div>
                <div class="col-6 col-md-4 col-lg-2 wow fadeIn" data-wow-delay="0.5s">
                    <a href="#produits" class="text-decoration-none marketplace-cat border border-primary rounded-3 bg-white d-flex flex-column align-items-center justify-content-center p-4 h-100 transition-cat">
                        <i class="fas fa-couch fa-2x text-primary mb-2"></i>
                        <span class="text-dark fw-semibold small text-center">Équipement</span>
                    </a>
                </div>
                <div class="col-6 col-md-4 col-lg-2 wow fadeIn" data-wow-delay="0.6s">
                    <a href="#produits" class="text-decoration-none marketplace-cat border border-primary rounded-3 bg-white d-flex flex-column align-items-center justify-content-center p-4 h-100 transition-cat">
                        <i class="fas fa-hands-helping fa-2x text-primary mb-2"></i>
                        <span class="text-dark fw-semibold small text-center">Services</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Recherche + Produits -->
    <section class="container-fluid py-5 service" id="produits">
        <div class="container py-5">
            <div class="mx-auto text-center wow fadeIn mb-4" data-wow-delay="0.1s" style="max-width: 600px;">
                <h4 class="text-primary mb-3 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Boutique</h4>
                <h1 class="mb-3 display-6">Une sélection pour vous</h1>
                <p class="text-muted small">Recherchez un produit par son nom.</p>
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-md-8">
                    <form method="get" action="{{ path('app_marketplace') }}" class="input-group">
                        <input
                            type="text"
                            name="q"
                            class="form-control"
                            placeholder="Rechercher un produit..."
                            value="{{ searchTerm ?? '' }}"
                        >
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search me-1"></i> Rechercher
                        </button>
                    </form>
                </div>
            </div>

            <div class="row g-4">
                {% for produit in produits %}
                    <div class="col-sm-6 col-lg-4 col-xl-3 wow fadeIn" data-wow-delay="0.1s">
                        <div class="marketplace-card border border-primary bg-white rounded-3 overflow-hidden h-100 d-flex flex-column">
                            <div class="marketplace-card-img position-relative overflow-hidden">
                                <img src="{{ asset('img/blog-1.jpg') }}" class="img-fluid w-100" alt="{{ produit.nom }}" style="height: 200px; object-fit: cover;">
                            </div>
                            <div class="p-3 flex-grow-1 d-flex flex-column">
                                <h6 class="text-primary mb-2">{{ produit.nom }}</h6>
                                <p class="text-muted small mb-2 flex-grow-1">
                                    {{ produit.description|length > 80 ? produit.description|slice(0, 80) ~ '...' : produit.description }}
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-bold text-primary">{{ produit.prix }} TND</span>
                                    <span class="badge bg-secondary">Stock : {{ produit.stock }}</span>
                                </div>
                                <div class="mt-3 text-end">
                                    {% if produit.stock > 0 %}
                                        <a href="{{ path('app_cart_add', { id: produit.id }) }}" class="btn btn-primary btn-sm btn-border-radius">
                                            Ajouter au panier
                                        </a>
                                    {% else %}
                                        <button class="btn btn-secondary btn-sm btn-border-radius" disabled>
                                            Rupture de stock
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center">
                        <p class="text-muted">Aucun produit trouvé.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="container-fluid py-5 bg-light">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h4 class="text-primary mb-2">Vendez sur la marketplace Maternia</h4>
                    <p class="text-muted mb-0">Vous proposez des produits ou services pour futures et jeunes mamans ? Rejoignez notre marketplace.</p>
                </div>
                <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                    <a href="#contact" class="btn btn-primary px-4 py-3 btn-border-radius">Nous contacter</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Produits recommandés (API IA simulée) -->
    <section class="container-fluid py-5 service bg-white">
        <div class="container py-5">
            <div class="mx-auto text-center wow fadeIn mb-4" data-wow-delay="0.1s" style="max-width: 600px;">
                <h4 class="text-primary mb-3 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">
                    Recommandations pour vous
                </h4>
                <p class="text-muted small">
                    Produits suggérés automatiquement selon votre profil (API IA simulée).
                </p>
            </div>
            <div class="row g-4" id="reco-products-container">
                <!-- Rempli dynamiquement par l'appel à /api/recommendations -->
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.getElementById('reco-products-container');
            if (!container) return;

            fetch('{{ path('api_recommendations', { trimestre: 2 }) }}')
                .then(response => response.json())
                .then(data => {
                    if (!Array.isArray(data) || data.length === 0) {
                        container.innerHTML = '<div class="col-12 text-center text-muted">Aucune recommandation pour le moment.</div>';
                        return;
                    }

                    container.innerHTML = '';
                    data.forEach(function (produit) {
                        const col = document.createElement('div');
                        col.className = 'col-sm-6 col-lg-4 col-xl-3';
                        col.innerHTML = `
                            <div class="marketplace-card border border-primary bg-white rounded-3 overflow-hidden h-100 d-flex flex-column">
                                <div class="marketplace-card-img position-relative overflow-hidden">
                                    <img src="{{ asset('img/blog-2.jpg') }}" class="img-fluid w-100" alt="${produit.nom}" style="height: 200px; object-fit: cover;">
                                </div>
                                <div class="p-3 flex-grow-1 d-flex flex-column">
                                    <h6 class="text-primary mb-2">${produit.nom}</h6>
                                    <p class="text-muted small mb-2 flex-grow-1">
                                        ${produit.description.length > 80 ? produit.description.slice(0, 80) + '...' : produit.description}
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mt-auto">
                                        <span class="fw-bold text-primary">${produit.prix} TND</span>
                                    </div>
                                </div>
                            </div>
                        `;
                        container.appendChild(col);
                    });
                })
                .catch(function () {
                    container.innerHTML = '<div class="col-12 text-center text-muted">Erreur lors du chargement des recommandations.</div>';
                });
        });
    </script>
{% endblock %}
