<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Maternia Form: Initializing all scripts...');

    // 1. Weekly Toggle Logic
    const isWeeklyToggle = document.getElementById('is-weekly-toggle') || document.querySelector('[name*="[isWeekly]"]');
    const dateSection = document.getElementById('date-selection-section');
    const weeklySection = document.getElementById('weekly-selection-section');
    const startAtInput = document.querySelector('[name*="[startAt]"]');
    const endAtInput = document.querySelector('[name*="[endAt]"]');

    function toggleSections() {
        if (!isWeeklyToggle) return;
        const isChecked = isWeeklyToggle.checked;
        if (isChecked) {
            if (dateSection) dateSection.style.display = 'none';
            if (weeklySection) weeklySection.style.display = 'block';
            if (startAtInput) startAtInput.required = false;
            if (endAtInput) endAtInput.required = false;
        } else {
            if (dateSection) dateSection.style.display = 'block';
            if (weeklySection) weeklySection.style.display = 'none';
            if (startAtInput) startAtInput.required = true;
            if (endAtInput) endAtInput.required = true;
        }
        updateDuration();
    }

    if (isWeeklyToggle) {
        isWeeklyToggle.addEventListener('change', toggleSections);
        isWeeklyToggle.addEventListener('click', toggleSections);
        toggleSections();
    }

    // 2. Requirements Toggle Logic
    function initRequirementsToggle() {
        const reqToggle = document.getElementById('requirement-toggle') || 
                          document.querySelector('.requirements-toggle') || 
                          document.querySelector('input[name*="showRequirements"]');
        const reqSection = document.getElementById('requirements-selection-section');
        const requirementCards = document.querySelectorAll('.requirement-card');

        function updateVisibility() {
            if (!reqSection) return;
            const isChecked = reqToggle ? reqToggle.checked : false;
            console.log('Requirements Visibility: isChecked =', isChecked);
            if (isChecked) {
                reqSection.style.setProperty('display', 'block', 'important');
                reqSection.classList.add('animate__animated', 'animate__fadeIn');
            } else {
                reqSection.style.setProperty('display', 'none', 'important');
            }
        }

        if (reqToggle) {
            reqToggle.addEventListener('change', updateVisibility);
            reqToggle.addEventListener('click', updateVisibility);
            updateVisibility();
        }

        requirementCards.forEach(card => {
            const checkbox = card.querySelector('.requirement-checkbox');
            if (checkbox) {
                card.addEventListener('click', function() {
                    checkbox.checked = !checkbox.checked;
                    card.classList.toggle('selected', checkbox.checked);
                    checkbox.dispatchEvent(new Event('change', { bubbles: true }));
                });
                if (checkbox.checked) card.classList.add('selected');
            }
        });

        const anyChecked = Array.from(requirementCards).some(c => c.querySelector('.requirement-checkbox')?.checked);
        if (anyChecked && reqToggle && !reqToggle.checked) {
            reqToggle.checked = true;
            updateVisibility();
        }
    }
    initRequirementsToggle();

    // 3. Image Gallery Logic
    function initImageGallery() {
        const galleryContainer = document.querySelector('.gallery-grid');
        const selectedImageInput = document.getElementById('event_selectedImage');
        if (!galleryContainer || !selectedImageInput) return;

        galleryContainer.addEventListener('click', function(e) {
            const galleryItem = e.target.closest('.gallery-item');
            if (!galleryItem) return;
            const imageName = galleryItem.dataset.image;
            document.querySelectorAll('.gallery-card').forEach(card => card.classList.remove('selected'));
            const card = galleryItem.querySelector('.gallery-card');
            if (card) card.classList.add('selected');
            selectedImageInput.value = imageName;
            selectedImageInput.dispatchEvent(new Event('change', { bubbles: true }));
        });

        if (selectedImageInput.value) {
            const item = galleryContainer.querySelector(`.gallery-item[data-image="${selectedImageInput.value}"]`);
            if (item) item.querySelector('.gallery-card')?.classList.add('selected');
        }
    }
    initImageGallery();

    // 4. Flatpickr & Duration Logic
    function updateDuration() {
        const isWeekly = isWeeklyToggle && isWeeklyToggle.checked;
        const durationValue = document.getElementById('duration-value');
        if (!durationValue) return;

        const startV = (isWeekly ? (document.querySelector('[name*="startTime"]')?.value) : (document.querySelector('[name*="startAt"]')?.value)) || '';
        const endV = (isWeekly ? (document.querySelector('[name*="endTime"]')?.value) : (document.querySelector('[name*="endAt"]')?.value)) || '';

        if (!startV || !endV) { durationValue.textContent = '--'; return; }

        let startD = isWeekly ? new Date('2000-01-01T' + startV) : new Date(startV.replace(' ', 'T'));
        let endD = isWeekly ? new Date('2000-01-01T' + endV) : new Date(endV.replace(' ', 'T'));

        if (isNaN(startD.getTime()) || isNaN(endD.getTime())) { durationValue.textContent = 'Invalide'; return; }
        if (endD <= startD) { durationValue.textContent = 'Fin après début'; return; }

        const diffMs = endD - startD;
        const h = Math.floor(diffMs / 3600000);
        const m = Math.floor((diffMs % 3600000) / 60000);
        durationValue.textContent = `${h}h ${m}m`;
    }

    document.querySelectorAll('.datetime-input').forEach(input => {
        flatpickr(input, {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            locale: "fr",
            onChange: updateDuration
        });
    });

    document.querySelectorAll('.datetime-trigger').forEach(trigger => {
        trigger.addEventListener('click', function() {
            const targetId = this.dataset.target;
            const targetInput = document.getElementById(targetId);
            if (targetInput && targetInput._flatpickr) {
                targetInput._flatpickr.open();
            }
        });
    });

    document.querySelectorAll('[name*="startTime"], [name*="endTime"]').forEach(input => {
        flatpickr(input, { enableTime: true, noCalendar: true, dateFormat: "H:i", time_24hr: true, locale: "fr", onChange: updateDuration });
    });

    // 5. Misc Logic
    const desc = document.querySelector('[name*="description"]');
    if (desc) {
        const counter = desc.closest('.form-group').querySelector('.char-counter');
        if (counter) {
            desc.addEventListener('input', () => { counter.textContent = `${desc.value.length}/1000`; });
            counter.textContent = `${desc.value.length}/1000`;
        }
    }

    const mainForm = document.getElementById('event-form');
    if (mainForm) {
        mainForm.addEventListener('submit', function(e) {
            if (!document.getElementById('event_selectedImage')?.value) {
                e.preventDefault();
                alert('Veuillez sélectionner une image pour l\'événement.');
            }
        });
    }

    updateDuration();
});
</script>