{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form, {'attr': {'class': 'event-form', 'id': 'event-form', 'novalidate': 'novalidate'}}) }}

<div class="form-sections">
    <!-- Section 1: Informations de base -->
    <div class="form-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-info-circle"></i>
            </div>
            <h3>Informations de base</h3>
        </div>
        
        <div class="section-content">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        {{ form_label(form.title, 'Titre de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.title, {'attr': {
                            'class': 'form-control ' ~ (form.title.vars.valid ? '' : 'is-invalid'),
                            'placeholder': 'Entrez le titre de votre événement'
                        }}) }}
                        <div class="form-hint">
                            <i class="fas fa-lightbulb"></i>
                            <span>Un titre clair et attractif qui donne envie</span>
                        </div>
                        {{ form_errors(form.title) }}
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {
                    'class': 'form-control ' ~ (form.description.vars.valid ? '' : 'is-invalid'),
                    'rows': 5,
                    'placeholder': 'Décrivez votre événement en détail...'
                }}) }}
                <div class="form-hint with-counter">
                    <i class="fas fa-align-left"></i>
                    <span>Détails, programme, intervenants, informations importantes</span>
                    <span class="char-counter">0/1000</span>
                </div>
                {{ form_errors(form.description) }}
            </div>
        </div>
    </div>

    <!-- Section 2: Photos de l'événement -->
    <div class="form-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-images"></i>
            </div>
            <h3>Photos de l'événement</h3>
        </div>
        
        <div class="section-content">
            <!-- Hidden form field for selected image -->
            {{ form_widget(form.selectedImage, {'attr': {'class': 'd-none', 'id': 'event_selectedImage'}}) }}
            {{ form_errors(form.selectedImage) }}
            
            <!-- Image Gallery -->
            {% if existingImages is defined and existingImages|length > 0 %}
            <div class="form-group">
                <label class="form-label">Sélectionnez une image</label>
                
                <div class="image-gallery-container">
                    <!-- Gallery View -->
                    <div class="image-gallery-view active" id="galleryView">
                        <div class="gallery-grid">
                            {% for image in existingImages %}
                                <div class="gallery-item" data-image="{{ image }}">
                                    <div class="gallery-card {% if form.selectedImage.vars.value is defined and form.selectedImage.vars.value == image %}selected{% endif %}">
                                        <img src="{{ asset('img/events/' ~ image) }}" 
                                             alt="{{ image }}"
                                             class="gallery-image"
                                             onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"100\" height=\"100\" viewBox=\"0 0 100 100\"><rect width=\"100\" height=\"100\" fill=\"%23f0f0f0\"/><text x=\"50\" y=\"50\" text-anchor=\"middle\" dy=\".3em\" font-family=\"Arial\" font-size=\"10\" fill=\"%23999\">Image</text></svg>';">
                                        <div class="gallery-overlay">
                                            <button type="button" class="btn-select-image">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </div>
                                        <div class="gallery-check">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    
                    <div class="form-hint">
                        <i class="fas fa-info-circle"></i>
                        <span>Sélectionnez une image pour votre événement</span>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="no-images-message">
                <i class="fas fa-exclamation-triangle"></i>
                <p>Aucune image disponible dans le dossier. Veuillez ajouter des images dans le dossier /public/img/.</p>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Section 3: Date et heure -->
    <div class="form-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <h3>Date et heure</h3>
        </div>
        
        <div class="section-content">
            <!-- Mode Toggle -->
            <div class="form-group mb-4">
                <div class="mode-selector">
                    <div class="form-check form-switch custom-switch-large">
                        {{ form_widget(form.isWeekly, {'attr': {'class': 'form-check-input', 'id': 'is-weekly-toggle'}}) }}
                        {{ form_label(form.isWeekly, 'Événement hebdomadaire', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                    </div>
                </div>
                <div class="form-hint">
                    <i class="fas fa-info-circle"></i>
                    <span>Choisissez si cet événement est une séance unique ou récurrente chaque semaine</span>
                </div>
            </div>

            <!-- One-time Event Section -->
            <div id="date-selection-section">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="{{ form.startAt.vars.id }}" class="form-label">
                                <i class="fas fa-play-circle"></i>
                                Date et heure de début
                            </label>
                            <div class="datetime-card">
                                <div class="datetime-input-wrapper">
                                    {{ form_widget(form.startAt, {'attr': {
                                        'class': 'form-control datetime-input ' ~ (form.startAt.vars.valid ? '' : 'is-invalid'),
                                        'placeholder': 'YYYY-MM-DD HH:MM'
                                    }}) }}
                                    <button type="button" class="datetime-trigger" data-target="{{ form.startAt.vars.id }}">
                                        <i class="fas fa-calendar-alt"></i>
                                    </button>
                                </div>
                                <div class="datetime-preview" id="startAt-preview">
                                    <i class="fas fa-clock"></i>
                                    <span>Sélectionnez une date</span>
                                </div>
                            </div>
                            {{ form_errors(form.startAt) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="{{ form.endAt.vars.id }}" class="form-label">
                                <i class="fas fa-stop-circle"></i>
                                Date et heure de fin
                            </label>
                            <div class="datetime-card">
                                <div class="datetime-input-wrapper">
                                    {{ form_widget(form.endAt, {'attr': {
                                        'class': 'form-control datetime-input ' ~ (form.endAt.vars.valid ? '' : 'is-invalid'),
                                        'placeholder': 'YYYY-MM-DD HH:MM'
                                    }}) }}
                                    <button type="button" class="datetime-trigger" data-target="{{ form.endAt.vars.id }}">
                                        <i class="fas fa-calendar-alt"></i>
                                    </button>
                                </div>
                                <div class="datetime-preview" id="endAt-preview">
                                    <i class="fas fa-clock"></i>
                                    <span>Sélectionnez une date</span>
                                </div>
                            </div>
                            {{ form_errors(form.endAt) }}
                        </div>
                    </div>
                </div>

            </div>

            <!-- Weekly Event Section -->
            <div id="weekly-selection-section" style="display: none;">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.dayOfWeek, 'Jour de la semaine', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="select-wrapper">
                                {{ form_widget(form.dayOfWeek, {'attr': {'class': 'form-select'}}) }}
                                <i class="fas fa-chevron-down select-arrow"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.startTime, 'Heure de début', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-with-icon">
                                {{ form_widget(form.startTime, {'attr': {'class': 'form-control'}}) }}
                                <i class="fas fa-clock input-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.endTime, 'Heure de fin', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-with-icon">
                                {{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
                                <i class="fas fa-clock input-icon"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="duration-display" id="duration-display">
                <div class="duration-card">
                    <div class="duration-icon">
                        <i class="fas fa-hourglass-half"></i>
                    </div>
                    <div class="duration-content">
                        <span class="duration-label">Durée estimée :</span>
                        <span class="duration-value" id="duration-value">--</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section 3.5: Matériel Nécessaire -->
    <div class="form-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <h3>Matériel Nécessaire</h3>
        </div>
        
        <div class="section-content">
            <div class="form-group mb-4">
                <div class="mode-selector">
                    <div class="form-check form-switch custom-switch-large reversed-layout">
                        <span class="custom-switch-text fw-bold">Besoin de matériel spécifique ?</span>
                        {{ form_widget(form.showRequirements, {'label': false, 'attr': {'class': 'form-check-input requirements-toggle', 'id': 'requirement-toggle'}}) }}
                    </div>
                </div>
                <div class="form-hint">
                    <i class="fas fa-info-circle"></i>
                    <span>Cochez si vous avez besoin que les participants apportent du matériel</span>
                </div>
            </div>

            <div id="requirements-selection-section" style="display: none;">
                <div class="requirements-selection-grid mt-4">
                    <div class="requirements-grid">
                        {% for requirement in form.requirements %}
                            <div class="requirement-card" data-id="{{ requirement.vars.id }}">
                                <div class="requirement-card-body">
                                    <div class="requirement-icon-wrapper">
                                        <div class="requirement-icon">
                                            <i class="fas fa-magic"></i>
                                        </div>
                                    </div>
                                    <div class="requirement-info">
                                        <span class="requirement-name">{{ requirement.vars.label }}</span>
                                        <span class="requirement-details">Matériel à prévoir</span>
                                    </div>
                                    <div class="requirement-action">
                                        {{ form_widget(requirement, {'label': false, 'attr': {'class': 'd-none requirement-checkbox'}}) }}
                                        <div class="custom-checkbox-indicator">
                                            <i class="fas fa-plus"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="requirement-selected-badge">
                                    <i class="fas fa-check"></i>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.requirements) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Section 4: Localisation -->
    <div class="form-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <h3>Localisation</h3>
        </div>
        
        <div class="section-content">
            <div class="form-group">
                {{ form_label(form.location, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-with-icon">
                    {{ form_widget(form.location, {'attr': {
                        'class': 'form-control ' ~ (form.location.vars.valid ? '' : 'is-invalid'),
                        'placeholder': 'Adresse complète ou lien de visioconférence'
                    }}) }}
                    <i class="fas fa-search-location input-icon"></i>
                </div>
                <div class="form-hint">
                    <i class="fas fa-info-circle"></i>
                    <span>Entrez une adresse physique ou un lien pour un événement en ligne</span>
                </div>
                {{ form_errors(form.location) }}
            </div>
        </div>
    </div>

    <!-- Section 5: Catégorie de Eventment -->
    <div class="form-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-list"></i>
            </div>
            <h3>Catégorie de Eventment</h3>
        </div>
        
        <div class="section-content">
            <div class="form-group">
                {{ form_label(form.eventCat, 'Sélectionnez une catégorie', {'label_attr': {'class': 'form-label'}}) }}
                <div class="select-wrapper">
                    {{ form_widget(form.eventCat, {'attr': {
                        'class': 'form-select ' ~ (form.eventCat.vars.valid ? '' : 'is-invalid')
                    }}) }}
                    <i class="fas fa-chevron-down select-arrow"></i>
                </div>
                <div class="form-hint">
                    <i class="fas fa-tags"></i>
                    <span>Choisissez la catégorie qui correspond le mieux à votre événement</span>
                </div>
                {{ form_errors(form.eventCat) }}
            </div>
            
            <div class="form-group mt-3">
                {{ form_label(form.capacity, 'Nombre maximum de participants', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-with-icon">
                    {{ form_widget(form.capacity, {'attr': {
                        'class': 'form-control ' ~ (form.capacity.vars.valid ? '' : 'is-invalid'),
                        'placeholder': 'ex: 20'
                    }}) }}
                    <i class="fas fa-users input-icon"></i>
                </div>
                <div class="form-hint">
                    <i class="fas fa-info-circle"></i>
                    <span>Laissez vide pour un nombre de places illimité</span>
                </div>
                {{ form_errors(form.capacity) }}
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}

<style>
/* Pink theme variables - Keeping original color scheme */
:root {
    --primary-pink: #ec4899;
    --light-pink: #fce7f3;
    --medium-pink: #fbcfe8;
    --dark-pink: #be185d;
    --error-red: #ef4444;
    --error-light: #fee2e2;
    --success-green: #10b981;
    --text-color: #374151;
    --border-color: #e5e7eb;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

/* Image Gallery Styles */
.image-gallery-container {
    margin-top: 1rem;
}

.image-gallery-view.active {
    display: block;
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

/* Gallery Grid */
.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
}

.gallery-item {
    position: relative;
}

.gallery-card {
    background: white;
    border: 2px solid var(--light-pink);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    cursor: pointer;
    aspect-ratio: 1;
}

.gallery-card:hover {
    border-color: var(--primary-pink);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.gallery-card.selected {
    border-color: var(--primary-pink);
    background: #fdf2f8;
}

.gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(236, 72, 153, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.gallery-card:hover .gallery-overlay {
    opacity: 1;
}

.btn-select-image {
    background: white;
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-pink);
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-select-image:hover {
    background: var(--dark-pink);
    color: white;
    transform: scale(1.1);
}

.gallery-check {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: var(--success-green);
    color: white;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: scale(0);
    transition: all 0.3s ease;
}

.gallery-card.selected .gallery-check {
    opacity: 1;
    transform: scale(1);
}

.image-filename {
    font-size: 0.75rem;
    color: var(--text-color);
    margin-top: 0.5rem;
    text-align: center;
    word-break: break-all;
    max-height: 2.5em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.no-images-message {
    text-align: center;
    padding: 2rem;
    background: var(--light-pink);
    border-radius: 8px;
    border: 2px dashed var(--medium-pink);
}

.no-images-message i {
    font-size: 2.5rem;
    color: #f59e0b;
    margin-bottom: 1rem;
}

.no-images-message p {
    color: var(--text-color);
    margin: 0;
    font-weight: 500;
}

.d-none {
    display: none !important;
}

/* Mode Selector Styling */
.mode-selector {
    background: var(--light-pink);
    padding: 1.25rem;
    border-radius: 12px;
    border: 2px solid var(--medium-pink);
    margin-bottom: 0.5rem;
}

.custom-switch-large.reversed-layout {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: flex-start;
    padding-left: 0 !important;
    gap: 1rem;
}

.custom-switch-large.reversed-layout .custom-switch-text {
    font-size: 1.1rem;
    cursor: pointer;
    color: var(--dark-pink);
    order: 1;
}

.custom-switch-large.reversed-layout .form-check-input {
    position: relative;
    order: 2;
    margin-left: 0 !important;
    width: 3.5rem !important;
    height: 1.75rem !important;
    cursor: pointer;
}

.form-check-input:checked {
    background-color: var(--primary-pink);
    border-color: var(--primary-pink);
}

/* Form Section Styling */
.form-section {
    background: white;
    border: 2px solid var(--light-pink);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 1.5rem;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.form-section:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--medium-pink);
}

.form-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
}

/* Section Header */
.section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--light-pink);
}

.section-icon {
    background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
    color: white;
    width: 48px;
    height: 48px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    box-shadow: 0 4px 8px rgba(236, 72, 153, 0.2);
}

.section-header h3 {
    color: var(--dark-pink);
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
}

/* Form Groups */
.form-group {
    margin-bottom: 1.5rem;
    position: relative;
}

.form-group:last-child {
    margin-bottom: 0;
}

/* Form Labels */
.form-label {
    color: var(--text-color);
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 1rem;
}

.form-label i {
    color: var(--primary-pink);
    margin-right: 0.5rem;
}

/* Form Controls */
.form-control, .form-select {
    border: 2px solid var(--medium-pink);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: white;
    color: var(--text-color);
}

.form-control:focus, .form-select:focus {
    border-color: var(--primary-pink);
    box-shadow: 0 0 0 4px rgba(236, 72, 153, 0.15);
    outline: none;
}

/* Custom Select */
.select-wrapper {
    position: relative;
}

.select-arrow {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--primary-pink);
    pointer-events: none;
    transition: transform 0.3s ease;
}

.form-select:focus + .select-arrow {
    transform: translateY(-50%) rotate(180deg);
}

/* DateTime Picker */
.datetime-card {
    background: var(--light-pink);
    border-radius: 10px;
    padding: 1.25rem;
    border: 2px solid transparent;
    transition: all 0.3s ease;
}

.datetime-card:hover {
    border-color: var(--medium-pink);
}

.datetime-input-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.datetime-input {
    flex: 1;
    background: white !important;
    border: 2px solid var(--medium-pink) !important;
    padding-right: 3.5rem;
}

.datetime-trigger {
    background: var(--primary-pink);
    color: white;
    border: none;
    border-radius: 8px;
    width: 42px;
    height: 42px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    flex-shrink: 0;
}

.datetime-trigger:hover {
    background: var(--dark-pink);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(236, 72, 153, 0.3);
}

.datetime-preview {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: white;
    border-radius: 8px;
    border: 2px solid var(--light-pink);
    font-size: 0.95rem;
}

.datetime-preview i {
    color: var(--primary-pink);
    font-size: 1rem;
}

/* Duration Display */
.duration-display {
    margin-top: 1.5rem;
}

.duration-card {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: var(--light-pink);
    border-radius: 10px;
    border: 2px solid var(--medium-pink);
}

.duration-icon {
    background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
    color: white;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.duration-label {
    color: var(--text-color);
    font-weight: 500;
