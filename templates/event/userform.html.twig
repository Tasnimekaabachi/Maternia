<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded - initializing form scripts');

    // --- Image Gallery Logic (FIXED) ---
    function initImageGallery() {
        const galleryContainer = document.querySelector('.gallery-grid');
        const selectedImageInput = document.getElementById('event_selectedImage');
        
        if (!galleryContainer) {
            console.log('Gallery container not found');
            return;
        }
        
        if (!selectedImageInput) {
            console.error('Selected Image Input field not found! ID: event_selectedImage');
            return;
        }

        console.log('Initializing image gallery with input:', selectedImageInput.id);

        // Use event delegation for better performance and reliability
        galleryContainer.addEventListener('click', function(e) {
            const galleryItem = e.target.closest('.gallery-item');
            if (!galleryItem) return;

            const imageName = galleryItem.dataset.image;
            console.log('Clicked gallery item:', imageName);
            
            // Remove 'selected' class from all cards
            document.querySelectorAll('.gallery-card').forEach(card => {
                card.classList.remove('selected');
                // Also force style update just in case
                card.style.borderColor = ''; 
                card.style.background = '';
            });

            // Add 'selected' class to clicked card
            const card = galleryItem.querySelector('.gallery-card');
            if (card) {
                card.classList.add('selected');
                // Force style update for immediate feedback
                card.style.borderColor = 'var(--primary-pink)';
                card.style.background = '#fdf2f8';
            }

            // Update hidden input
            selectedImageInput.value = imageName;
            console.log('Updated hidden input value to:', selectedImageInput.value);

            // Trigger change event
            selectedImageInput.dispatchEvent(new Event('change', { bubbles: true }));

            // Hide error if present
             const errorElement = document.querySelector('.invalid-feedback');
            if (errorElement && errorElement.textContent.includes('image')) {
                errorElement.style.display = 'none';
            }
        });

        // Pre-select if value exists
        if (selectedImageInput.value) {
            console.log('Pre-selecting image:', selectedImageInput.value);
            const itemToSelect = galleryContainer.querySelector(`.gallery-item[data-image="${selectedImageInput.value}"]`);
            if (itemToSelect) {
                const card = itemToSelect.querySelector('.gallery-card');
                if (card) {
                    card.classList.add('selected');
                    card.style.borderColor = 'var(--primary-pink)';
                    card.style.background = '#fdf2f8';
                }
            }
        }
    }

    // Initialize Gallery independently
    initImageGallery();

    //Initialize Flatpickr with proper date format
    const dateInputs = document.querySelectorAll('.datetime-input');
    
    dateInputs.forEach(input => {
        const flatpickrInstance = flatpickr(input, {
             enableTime: true,
            dateFormat: "Y-m-d H:i", // Changed to match HTML5 datetime format
            time_24hr: true,
            locale: "fr",
            minuteIncrement: 15,
            disableMobile: false,
            onChange: function(selectedDates, dateStr, instance) {
                updateDateTimePreview(input, selectedDates[0]);
                updateDuration();
            }
        });
        
        // Update preview on initialization
        if (input.value) {
            const date = new Date(input.value);
            if (!isNaN(date.getTime())) {
                updateDateTimePreview(input, date);
            }
        }
        
         // Make trigger button open Flatpickr
        const triggerButton = input.closest('.datetime-input-wrapper').querySelector('.datetime-trigger');
        if (triggerButton) {
            triggerButton.addEventListener('click', function() {
                flatpickrInstance.open();
            });
        }
    });

    // Update character counter for description
    const descriptionInput = document.querySelector('[name*="description"]');
    if (descriptionInput) {
        const charCounter = descriptionInput.closest('.form-group').querySelector('.char-counter');
        
        descriptionInput.addEventListener('input', function() {
            const length = this.value.length;
            charCounter.textContent = `${length}/1000`;
            
            if (length > 1000) {
                charCounter.style.color = 'var(--error-red)';
            } else if (length > 800) {
                charCounter.style.color = '#f59e0b';
            } else {
                charCounter.style.color = 'var(--text-color)';
            }
        });
        
        // Initial count
        if (descriptionInput.value) {
            charCounter.textContent = `${descriptionInput.value.length}/1000`;
        }
    }

    
    // Update duration display
    function updateDuration() {
        const startInput = document.querySelector('[name*="startAt"]');
        const endInput = document.querySelector('[name*="endAt"]');
        const durationValue = document.getElementById('duration-value');
        
        if (!startInput || !endInput || !durationValue || !startInput.value || !endInput.value) {
            if (durationValue) {
                durationValue.textContent = '--';
                durationValue.style.color = 'var(--text-color)';
            }
            return;
        }
        
        const startDate = new Date(startInput.value);
        const endDate = new Date(endInput.value);
        
        if (isNaN(startDate.getTime()) || isNaN(endDate.getTime())) {
            durationValue.textContent = 'Date invalide';
            durationValue.style.color = 'var(--error-red)';
            return;
        }
        
        if (endDate <= startDate) {
            durationValue.textContent = 'Date de fin doit être après date de début';
            durationValue.style.color = 'var(--error-red)';
            return;
        }
        
        const diffMs = endDate - startDate;
        const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
        const diffHours = Math.floor((diffMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const diffMinutes = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60));
        
        let durationText = '';
        if (diffDays > 0) {
            durationText += `${diffDays} jour${diffDays > 1 ? 's' : ''} `;
        }
        if (diffHours > 0) {
            durationText += `${diffHours} heure${diffHours > 1 ? 's' : ''} `;
        }
        if (diffMinutes > 0 && diffDays === 0) {
            durationText += `${diffMinutes} minute${diffMinutes > 1 ? 's' : ''}`;
        }
        
        durationValue.textContent = durationText.trim() || 'Quelques minutes';
        durationValue.style.color = 'var(--dark-pink)';
    }
    
    // Update datetime preview
    function updateDateTimePreview(input, date) {
        const previewId = `${input.id}-preview`;
        const previewElement = document.getElementById(previewId);
        
        if (!previewElement) return;
        
        const formatDate = (date) => {
            const options = { 
                weekday: 'short',
                day: 'numeric',
                month: 'long',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            return date.toLocaleDateString('fr-FR', options);
        };
        
        const formattedDate = formatDate(date);
        previewElement.querySelector('span').textContent = formattedDate;
    }
    
    // Initialize duration display
    updateDuration();
    
    // Show validation error for image selection if needed
    const selectedImageError = document.querySelector('#event_selectedImage');
    if (selectedImageError && selectedImageError.classList.contains('is-invalid')) {
        console.log('Image selection validation error detected');
        // Add red border to gallery container
        const galleryContainer = document.querySelector('.image-gallery-container');
        if (galleryContainer) {
            galleryContainer.style.border = '2px solid var(--error-red)';
            galleryContainer.style.borderRadius = '8px';
            galleryContainer.style.padding = '1rem';
        }
    }
    
    // Form submission validation
    const form = document.getElementById('event-form');
    if (form) {
        form.addEventListener('submit', function(e) {
            const selectedImageInput = document.getElementById('event_selectedImage');
            
            // Check if image is selected
            if (!selectedImageInput || !selectedImageInput.value) {
                e.preventDefault();
                alert('Veuillez sélectionner une image pour l\'événement.');
                
                // Add visual feedback
                const galleryContainer = document.querySelector('.image-gallery-container');
                if (galleryContainer) {
                    galleryContainer.style.border = '2px solid var(--error-red)';
                    galleryContainer.style.borderRadius = '8px';
                    galleryContainer.style.padding = '1rem';
                    galleryContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
                
                return false;
            }
        });
    }
});
</script>