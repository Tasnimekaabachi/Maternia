{% extends 'base.html.twig' %}

{% block title %}{{ event.title }} - Détails{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Modern pink color scheme */
    :root {
        --primary-pink: #ec4899;
        --light-pink: #fce7f3;
        --dark-pink: #be185d;
        --accent-pink: #db2777;
        --bg-gradient: linear-gradient(135deg, #fdf2f8 0%, #fce7f3 100%);
    }
    
    .event-show-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }
    
    /* Smart Back Button */
    .smart-back-button {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: var(--primary-pink);
        text-decoration: none;
        font-weight: 600;
        padding: 12px 24px;
        border-radius: 12px;
        background: var(--light-pink);
        transition: all 0.3s ease;
        margin-bottom: 20px;
        border: 2px solid transparent;
    }
    
    .smart-back-button:hover {
        background: #fbcfe8;
        transform: translateX(-5px);
        border-color: var(--primary-pink);
        box-shadow: 0 5px 15px rgba(236, 72, 153, 0.2);
    }
    
    /* Top Action Bar */
    .top-action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        flex-wrap: wrap;
        gap: 15px;
    }
    
    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }
    
    .action-btn {
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }
    
    .btn-edit-sm {
        background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
        color: white;
    }
    
    .btn-edit-sm:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(236, 72, 153, 0.4);
    }
    
    .btn-delete-sm {
        background: white;
        color: #ef4444;
        border-color: #ef4444;
    }
    
    .btn-delete-sm:hover {
        background: #fee2e2;
        transform: translateY(-3px);
    }
    
    /* Event Header */
    .event-header {
        background: linear-gradient(135deg, var(--primary-pink) 0%, var(--dark-pink) 100%);
        color: white;
        padding: 40px;
        border-radius: 20px 20px 0 0;
        position: relative;
        overflow: hidden;
        margin-bottom: 0;
    }
    
    /* Event Hero Section */
    .event-hero {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(236, 72, 153, 0.1);
        padding: 30px;
        margin-bottom: 30px;
        border: 1px solid #fce7f3;
    }

    .hero-content {
        display: flex;
        gap: 40px;
        align-items: stretch;
    }

    /* Left: Image */
    .hero-image-container {
        flex: 0 0 40%;
        max-width: 40%;
        position: relative;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        min-height: 300px;
        object-fit: cover;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .no-image-placeholder {
        width: 100%;
        height: 300px;
        background: var(--light-pink);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-pink);
    }

    /* Right: Details */
    .hero-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 10px 0;
    }
    
    .event-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 10px;
        line-height: 1.2;
        background: linear-gradient(135deg, var(--primary-pink) 0%, var(--dark-pink) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .event-subtitle {
        font-size: 1.2rem;
        color: #6b7280;
        margin-bottom: 20px;
        font-weight: 500;
    }
    
    /* Responsive Hero */
    @media (max-width: 992px) {
        .hero-content {
            flex-direction: column;
        }
        
        .hero-image-container {
            flex: 0 0 100%;
            max-width: 100%;
            margin-bottom: 20px;
        }
        
        .hero-image {
            max-height: 400px;
        }
    }

    /* Status Badge */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
        background: var(--light-pink);
        color: var(--dark-pink);
        border: 1px solid var(--primary-pink);
        width: fit-content;
    }
    
    .status-upcoming {
        background: linear-gradient(135deg, #3b82f6, #60a5fa);
    }
    
    .status-ongoing {
        background: linear-gradient(135deg, #f59e0b, #fbbf24);
    }
    
    .status-completed {
        background: linear-gradient(135deg, #10b981, #34d399);
    }
    
    /* Event Content */
    .event-content {
        background: white;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 20px 60px rgba(236, 72, 153, 0.15);
        padding: 40px;
        border: 1px solid #fce7f3;
        border-top: none;
    }
    
    /* Date Cards */
    .date-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }
    
    .date-card {
        background: var(--bg-gradient);
        border-radius: 15px;
        padding: 25px;
        border: 2px solid #fce7f3;
        transition: all 0.3s ease;
    }
    
    .date-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(236, 72, 153, 0.2);
        border-color: var(--primary-pink);
    }
    
    .date-card i {
        font-size: 2rem;
        color: var(--primary-pink);
        margin-bottom: 15px;
    }
    
    .date-label {
        font-size: 0.9rem;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
        font-weight: 600;
    }
    
    .date-value {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--dark-pink);
        font-family: 'Courier New', monospace;
    }
    
    /* Info Grid */
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }
    
    .info-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        border: 2px solid #f3f4f6;
        transition: all 0.3s ease;
    }
    
    .info-card:hover {
        border-color: var(--primary-pink);
        box-shadow: 0 5px 20px rgba(236, 72, 153, 0.1);
    }
    
    .info-card h3 {
        color: var(--dark-pink);
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .info-card p {
        color: #374151;
        font-size: 1.1rem;
        line-height: 1.6;
        margin: 0;
    }
    
    /* Description Card */
    .description-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        border: 2px solid #f3f4f6;
        margin-bottom: 40px;
    }
    
    .description-card h3 {
        color: var(--dark-pink);
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .description-content {
        color: #374151;
        font-size: 1.1rem;
        line-height: 1.8;
        white-space: pre-line;
    }
    
    /* Action Buttons */
    .action-section {
        background: #f9fafb;
        border-radius: 15px;
        padding: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        border: 2px dashed #fce7f3;
    }
    
    .btn-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }
    
    .btn {
        padding: 14px 28px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }
    
    .btn-back {
        background: white;
        color: var(--primary-pink);
        border: 2px solid var(--primary-pink);
    }
    
    .btn-back:hover {
        background: var(--light-pink);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(236, 72, 153, 0.2);
    }
    
    .btn-edit {
        background: linear-gradient(135deg, var(--primary-pink), var(--dark-pink));
        color: white;
    }
    
    .btn-edit:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(236, 72, 153, 0.4);
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }
    
    .btn-delete:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
    }
    
    /* Modal Styling */
    .modal-content {
        border-radius: 20px;
        border: 2px solid #fce7f3;
    }
    
    .modal-header {
        background: linear-gradient(135deg, var(--primary-pink) 0%, var(--dark-pink) 100%);
        color: white;
        border-radius: 20px 20px 0 0;
        padding: 25px;
        border: none;
    }
    
    .modal-body {
        padding: 30px;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
        .event-show-container {
            padding: 10px;
        }
        
        .top-action-bar {
            flex-direction: column;
            align-items: stretch;
        }
        
        .action-buttons {
            justify-content: center;
        }
        
        .event-header {
            padding: 30px 20px;
            border-radius: 15px 15px 0 0;
        }
        
        .event-title {
            font-size: 2rem;
        }
        
        .event-content {
            padding: 20px;
        }
        
        .date-cards {
            grid-template-columns: 1fr;
        }
        
        .info-grid {
            grid-template-columns: 1fr;
        }
        
        .action-section {
            flex-direction: column;
            text-align: center;
        }
        
        .btn-group {
            flex-direction: column;
            width: 100%;
        }
        
        .btn {
            width: 100%;
            justify-content: center;
        }
    }
    
    /* Animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-in {
        animation: fadeInUp 0.6s ease-out forwards;
    }
    
    /* Duration Card */
    .duration-card {
        background: linear-gradient(135deg, #8b5cf6, #a78bfa);
        color: white;
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        border: 2px solid #8b5cf6;
    }
    
    .duration-card i {
        font-size: 2rem;
        margin-bottom: 15px;
        opacity: 0.9;
    }
    
    .duration-label {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .duration-value {
        font-size: 1.5rem;
        font-weight: 700;
    }
</style>
{% endblock %}

{% block body %}
<div class="event-show-container">
    <!-- Top Action Bar with Smart Back Button -->
    <div class="top-action-bar">
        <a href="#" id="smartBackButton" class="smart-back-button" onclick="goBack()">
            <i class="fas fa-arrow-left"></i>
            Retour
        </a>
    </div>

    <!-- Event Hero Section -->
    <div class="event-hero animate-in">
        <div class="hero-content">
            <!-- Left: Image -->
            <div class="hero-image-container">
                {% if event.image %}
                    <img src="{{ asset('img/events/' ~ event.image) }}" alt="{{ event.title }}" class="hero-image">
                {% else %}
                    <div class="no-image-placeholder">
                        <i class="fas fa-image fa-3x"></i>
                    </div>
                {% endif %}
            </div>

            <!-- Right: Title & Actions -->
            <div class="hero-details">
                <div class="hero-text">
                    {% if event.eventCat %}
                        <span class="status-badge mb-2">
                            <i class="fas fa-tag"></i> {{ event.eventCat.name }}
                        </span>
                    {% endif %}
                    <h1 class="event-title">{{ event.title }}</h1>

                </div>


            </div>
        </div>
    </div>
    
    <!-- Event Details Content -->
    <div class="event-content animate-in" style="animation-delay: 0.2s">
        <!-- Date Cards -->
        <div class="date-cards">
            <div class="date-card">
                <i class="fas fa-play-circle"></i>
                <div class="date-label">Date de début</div>
                <div class="date-value">{{ event.startAt ? event.startAt|date('d/m/Y H:i') : 'Non définie' }}</div>
            </div>
            
            <div class="date-card">
                <i class="fas fa-stop-circle"></i>
                <div class="date-label">Date de fin</div>
                <div class="date-value">{{ event.endAt ? event.endAt|date('d/m/Y H:i') : 'Non définie' }}</div>
            </div>
            
            <div class="duration-card">
                <i class="fas fa-clock"></i>
                <div class="duration-label">Durée</div>
                <div class="duration-value">
                    {% if event.startAt and event.endAt %}
                        {% set duration = event.startAt.diff(event.endAt) %}
                        {% if duration.d > 0 %}
                            {{ duration.d }} jour{{ duration.d > 1 ? 's' : '' }}
                        {% elseif duration.h > 0 %}
                            {{ duration.h }}h {{ duration.i }}min
                        {% else %}
                            {{ duration.i }} minutes
                        {% endif %}
                    {% else %}
                        Non définie
                    {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Information Grid -->
        <div class="info-grid">
            <div class="info-card">
                <h3><i class="fas fa-map-marker-alt"></i> Lieu</h3>
                <p>{{ event.location ? event.location : 'Non spécifié' }}</p>
            </div>
            
            {% if event.maxAttendees is defined and event.maxAttendees %}
            <div class="info-card">
                <h3><i class="fas fa-users"></i> Capacité</h3>
                <p>{{ event.maxAttendees }} participants maximum</p>
            </div>
            {% endif %}
            
            {% if event.price is defined and event.price %}
            <div class="info-card">
                <h3><i class="fas fa-euro-sign"></i> Prix</h3>
                <p>{{ event.price }} €</p>
            </div>
            {% endif %}
        </div>
        
        <!-- Description -->
        {% if event.description %}
        <div class="description-card">
            <h3><i class="fas fa-align-left"></i> Description</h3>
            <div class="description-content">
                {{ event.description }}
            </div>
        </div>
        {% endif %}
    </div>
</div>



<script>
function goBack() {
    // Simple browser back function - goes to whatever page user was on
    if (document.referrer && document.referrer !== window.location.href) {
        window.location.href = document.referrer;
    } else {
        // Fallback to events list if no referrer or same page
        window.location.href = "{{ path('app_event_index') }}";
    }
}

document.addEventListener('DOMContentLoaded', function() {
    // Simple Back Button - goes to browser history back
    const smartBackButton = document.getElementById('smartBackButton');
    
    // Use simple JavaScript history back
    smartBackButton.onclick = function(e) {
        e.preventDefault();
        goBack();
    };
    
    // Animate cards on scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);
    
    // Add animation to cards
    const cards = document.querySelectorAll('.date-card, .info-card, .description-card');
    cards.forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(card);
    });
    
    // Add hover effects
    const buttons = document.querySelectorAll('.btn');
    buttons.forEach(btn => {
        btn.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-3px)';
        });
        
        btn.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
    
    // Optional: Add subtle hover effect for date cards
    const dateCards = document.querySelectorAll('.date-card');
    dateCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-5px)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
});
</script>
{% endblock %}