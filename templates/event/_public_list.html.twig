{% if events is empty %}
    <div class="col-12 text-center wow fadeIn" data-wow-delay="0.1s">
        <p class="text-muted">Aucun événement à venir pour le moment.</p>
    </div>
{% else %}
    {% for event in events %}
        <div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="{{ 0.1 + (loop.index0 * 0.2) }}s">
            <div class="card h-100 border-0 shadow-sm rounded-3 overflow-hidden position-relative group-hover-effect">
                <!-- Image Section -->
                <div class="position-relative" style="height: 240px; overflow: hidden;">
                    {% if event.image %}
                        <img src="{{ asset('img/events/' ~ event.image) }}" class="w-100 h-100" alt="{{ event.title }}" style="object-fit: cover; transition: transform 0.5s ease;">
                    {% else %}
                        <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                            <i class="fas fa-calendar-alt fa-3x text-primary-light"></i>
                        </div>
                    {% endif %}
                    

                </div>

                <!-- Content Section -->
                <div class="card-body p-4 bg-white d-flex flex-column">
                    <!-- Date & Location -->
                    <div class="d-flex align-items-center mb-3 text-muted small">
                        <div class="d-flex align-items-center me-3">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                            <span class="fw-bold">{{ event.startAt ? event.startAt|date('d/m') : 'Date TBD' }}</span>
                            <span class="mx-1">-</span>
                            <span>{{ event.startAt ? event.startAt|date('H:i') : '' }}</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            <span class="text-truncate" style="max-width: 100px;" title="{{ event.location }}">{{ event.location|default('Sur place') }}</span>
                        </div>
                    </div>

                    <!-- Title -->
                    <h4 class="card-title fw-bold mb-3">
                        <a href="{{ path('app_event_user_show', {'id': event.id}) }}" class="text-dark text-decoration-none stretched-link title-hover">
                            {{ event.title }}
                        </a>
                    </h4>

                    <!-- Description -->
                    <p class="card-text text-muted mb-4 flex-grow-1" style="font-size: 0.95rem; line-height: 1.6;">
                        {{ event.description|default('')|slice(0, 90) ~ '...' }}
                    </p>

                    <!-- Footer Action -->
                    <div class="mt-auto pt-3 border-top border-light d-flex justify-content-between align-items-center">
                        <span class="text-primary fw-bold small text-uppercase" style="letter-spacing: 1px;">En savoir plus</span>
                        <div class="btn btn-sm btn-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Hover Effect Styles (Inline for simplicity or added to CSS) -->
            <style>
                .group-hover-effect:hover img { transform: scale(1.05); }
                .group-hover-effect:hover { transform: translateY(-5px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important; transition: all 0.3s ease; }
                .title-hover:hover { color: var(--bs-primary) !important; transition: color 0.2s; }
            </style>
        </div>
    {% endfor %}
{% endif %}
