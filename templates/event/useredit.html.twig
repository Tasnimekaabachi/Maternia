{% extends 'base.html.twig' %}

{% block title %}Modifier l'événement - Event Manager{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Pink color scheme */
    :root {
        --primary-pink: #ec4899;
        --secondary-pink: #f472b6;
        --light-pink: #fce7f3;
        --dark-pink: #be185d;
        --accent-pink: #db2777;
        --warning-orange: #f59e0b;
        --danger-red: #ef4444;
    }
    
    .edit-form-container {
        max-width: 900px;
        margin: 2rem auto;
    }
    
    .edit-header {
        background: linear-gradient(135deg, var(--primary-pink) 0%, var(--dark-pink) 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px 15px 0 0;
        position: relative;
        overflow: hidden;
    }
    
    .edit-header::before {
        content: "✏️";
        position: absolute;
        font-size: 6rem;
        opacity: 0.1;
        right: 2rem;
        top: 50%;
        transform: translateY(-50%);
    }
    
    .edit-form-card {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 10px 30px rgba(236, 72, 153, 0.1);
        padding: 2.5rem;
        border: 1px solid #fce7f3;
        border-top: none;
    }
    
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-pink);
        text-decoration: none;
        font-weight: 500;
        margin-bottom: 1.5rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background-color: var(--light-pink);
        transition: all 0.3s ease;
    }
    
    .back-link:hover {
        background-color: #fbcfe8;
        transform: translateX(-5px);
    }
    
    .form-actions {
        padding-top: 2rem;
        margin-top: 2rem;
        border-top: 2px dashed #fce7f3;
    }
    
    .btn-update {
        background: linear-gradient(135deg, var(--primary-pink) 0%, var(--accent-pink) 100%);
        border: none;
        color: white;
        padding: 0.875rem 2.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-update:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(236, 72, 153, 0.3);
        color: white;
    }
    
    .btn-outline-pink {
        border: 2px solid var(--primary-pink);
        color: var(--primary-pink);
        padding: 0.875rem 2rem;
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-outline-pink:hover {
        background-color: var(--light-pink);
        color: var(--dark-pink);
        border-color: var(--dark-pink);
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        color: white;
        padding: 0.875rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
        color: white;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }
    
    .warning-card {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border: 2px solid #f59e0b;
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 2rem;
    }
    
    .warning-card h5 {
        color: #92400e;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .warning-card p {
        color: #92400e;
        margin-bottom: 0;
        opacity: 0.9;
    }
    
    /* Responsive adjustments */
    @media (max-width: 768px) {
        .edit-form-container {
            margin: 1rem;
        }
        
        .edit-form-card {
            padding: 1.5rem;
        }
        
        .action-buttons {
            flex-direction: column;
        }
        
        .action-buttons .btn {
            width: 100%;
            text-align: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="edit-form-container">
    <!-- Back button -->
    <a href="{{ path('app_event_index') }}" class="back-link">
        <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        Retour à la liste des événements
    </a>

    <!-- Header -->
    <div class="edit-header">
        <h1 class="h2 mb-2 fw-bold">Modifier l'événement</h1>
        <p class="mb-0 opacity-90">Mettez à jour les informations de votre événement</p>
    </div>
    
    <!-- Form Card -->
    <div class="edit-form-card">
        <!-- Include your form -->
        {{ include('event/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        
        <!-- Form actions -->
        <div class="form-actions">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-outline-pink me-2">
                        <i class="fas fa-eye me-2"></i>Voir l'événement
                    </a>
                    <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                </div>
                <div class="action-buttons">
                    <button type="submit" form="event-form" class="btn btn-update">
                        <i class="fas fa-save me-2"></i>Mettre à jour
                    </button>
                    
                    <!-- Delete button that triggers modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Supprimer
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Warning about changes -->
        <div class="warning-card">
            <h5><i class="fas fa-exclamation-triangle"></i> Attention</h5>
            <p>Toutes les modifications seront immédiatement appliquées. Les participants seront notifiés des changements importants.</p>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmer la suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer cet événement ?</p>
                <p class="fw-bold">{{ event.title }}</p>
                <p class="text-muted small">Cette action est irréversible. Toutes les données associées à cet événement seront définitivement supprimées.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Annuler
                </button>
                {{ include('event/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

<script>
// Optional: Add confirmation for unsaved changes
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('event-form');
    let formChanged = false;
    
    if (form) {
        // Track form changes
        const inputs = form.querySelectorAll('input, select, textarea');
        inputs.forEach(input => {
            input.addEventListener('change', function() {
                formChanged = true;
            });
            
            input.addEventListener('input', function() {
                formChanged = true;
            });
        });
        
        // Warn before leaving if changes were made
        window.addEventListener('beforeunload', function(e) {
            if (formChanged) {
                e.preventDefault();
                e.returnValue = 'Vous avez des modifications non sauvegardées. Êtes-vous sûr de vouloir quitter ?';
            }
        });
        
        // Reset formChanged on submit
        form.addEventListener('submit', function() {
            formChanged = false;
        });
    }
    
    // Preview event before saving
    window.previewChanges = function() {
        alert('Aperçu des modifications (à implémenter selon vos besoins)');
        // You could show a modal with before/after comparison
    }
});
</script>
{% endblock %}