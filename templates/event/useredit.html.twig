{% extends 'base.html.twig' %}

{% block title %}Modifier l'Événement{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Pink color scheme */
    :root {
        --primary-pink: #ec4899;
        --secondary-pink: #f472b6;
        --light-pink: #fce7f3;
        --dark-pink: #be185d;
        --accent-pink: #db2777;
    }
    
    .event-form-container {
        max-width: 900px;
        margin: 2rem auto;
    }
    
    .event-header {
        background: linear-gradient(135deg, var(--primary-pink) 0%, var(--secondary-pink) 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px 15px 0 0;
        position: relative;
        overflow: hidden;
    }
    
    .event-header::before {
        content: "✏️";
        position: absolute;
        font-size: 6rem;
        opacity: 0.1;
        right: 2rem;
        top: 50%;
        transform: translateY(-50%);
    }
    
    .event-form-card {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 10px 30px rgba(236, 72, 153, 0.1);
        padding: 2.5rem;
        border: 1px solid #fce7f3;
        border-top: none;
    }
    
    .form-section {
        margin-bottom: 2.5rem;
        padding-bottom: 2rem;
        border-bottom: 2px dashed #fce7f3;
    }
    
    .form-section:last-child {
        border-bottom: none;
    }
    
    .section-title {
        color: var(--dark-pink);
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--light-pink);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .section-title i {
        color: var(--primary-pink);
    }
    
    .form-label {
        font-weight: 500;
        color: #6b7280;
        margin-bottom: 0.5rem;
        display: block;
    }
    
    .form-control, .form-select {
        border: 1px solid #fbcfe8;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: var(--primary-pink);
        box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.1);
    }
    
    .btn-create {
        background: linear-gradient(135deg, var(--primary-pink) 0%, var(--accent-pink) 100%);
        border: none;
        color: white;
        padding: 0.875rem 2.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(236, 72, 153, 0.3);
        color: white;
    }
    
    .btn-outline-pink {
        border: 2px solid var(--primary-pink);
        color: var(--primary-pink);
        padding: 0.875rem 2rem;
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-outline-pink:hover {
        background-color: var(--light-pink);
        color: var(--dark-pink);
        border-color: var(--dark-pink);
    }
    
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-pink);
        text-decoration: none;
        font-weight: 500;
        margin-bottom: 1.5rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background-color: var(--light-pink);
        transition: all 0.3s ease;
    }
    
    .back-link:hover {
        background-color: #fbcfe8;
        transform: translateX(-5px);
    }
</style>
{% endblock %}

{% block body %}
<div class="event-form-container">
    <!-- Back button -->
    <a href="{{ path('app_event_user_show', {'id': event.id}) }}" class="back-link">
        <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        Retour à l'événement
    </a>

    <!-- Header -->
    <div class="event-header">
        <h1 class="h2 mb-2 fw-bold">Modifier l'événement</h1>
        <p class="mb-0 opacity-90">Mettez à jour les informations de votre événement</p>
    </div>
    
    <!-- Form Card -->
    <div class="event-form-card">
        {{ include('event/userform.html.twig') }}
        
        <!-- Form actions -->
        <div class="form-actions mt-5 pt-4 border-top border-2">
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_event_user_show', {'id': event.id}) }}" class="btn btn-outline-pink">
                    Annuler
                </a>
                <div>
                    <button type="submit" form="event-form" class="btn btn-create">
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}