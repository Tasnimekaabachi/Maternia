{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.nomBabysitter, 'Nom de la babysitter', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nomBabysitter, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger small">
            {{ form_errors(form.nomBabysitter) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger small">
            {{ form_errors(form.telephone) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            {{ form_label(form.experience, 'Expérience (années)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.experience, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small">
                {{ form_errors(form.experience) }}
            </div>
        </div>
        <div class="col-md-4 mb-3">
            {{ form_label(form.ville, 'Ville', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger small">
                {{ form_errors(form.ville) }}
            </div>
        </div>
        <div class="col-md-4 mb-3">
            {{ form_label(form.tarif, 'Tarif (€ / h)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.tarif, {'attr': {'class': 'form-control', 'step': '0.01'}}) }}
            <div class="text-danger small">
                {{ form_errors(form.tarif) }}
            </div>
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
        <div class="text-danger small">
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="form-check mb-4">
        {{ form_widget(form.disponibilite, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.disponibilite, 'Disponible actuellement', {'label_attr': {'class': 'form-check-label'}}) }}
        <div class="text-danger small">
            {{ form_errors(form.disponibilite) }}
        </div>
    </div>

    <button class="btn btn-primary btn-border-radius">
        {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
