{% extends 'admin/base.html.twig' %}

{% block title %}Détail offre babysitter{% endblock %}

{% block page_title %}Détail de l'offre babysitter{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_profil_bebe') }}">Offres babysitter</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ offre_baby_sitter.nomBabysitter }}</li>
        </ol>
    </nav>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-8 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 text-primary">
                            <i class="bi bi-person-heart me-2"></i>{{ offre_baby_sitter.nomBabysitter }}
                        </h5>
                        <p class="mb-0 text-muted small">
                            {{ offre_baby_sitter.ville }} • {{ offre_baby_sitter.experience }} ans d'expérience
                        </p>
                    </div>
                    <span class="badge bg-success text-white px-3 py-2">
                        {{ offre_baby_sitter.tarif|number_format(2, ',', ' ') }} € / h
                    </span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small fw-semibold">Téléphone</h6>
                            <p class="mb-2">
                                <i class="bi bi-telephone me-1 text-primary"></i>
                                {{ offre_baby_sitter.telephone }}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small fw-semibold">Disponibilité</h6>
                            <p class="mb-2">
                                {% if offre_baby_sitter.disponibilite %}
                                    <span class="badge bg-success text-white px-3 py-2">
                                        <i class="bi bi-check-circle-fill me-1"></i>Disponible
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger text-white px-3 py-2">
                                        <i class="bi bi-x-circle-fill me-1"></i>Indisponible
                                    </span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <h6 class="text-muted text-uppercase small fw-semibold">Description</h6>
                    <p class="mb-0">
                        {{ offre_baby_sitter.description }}
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-header bg-white">
                    <h6 class="mb-0 text-muted text-uppercase small fw-semibold">Actions</h6>
                </div>
                <div class="card-body d-grid gap-2">
                    <a href="{{ path('app_offre_baby_sitter_edit', {'id': offre_baby_sitter.id}) }}"
                       class="btn btn-warning text-white">
                        <i class="bi bi-pencil-square me-1"></i>Modifier l'offre
                    </a>
                    {{ include('offre_baby_sitter/_delete_form.html.twig', {button_label: 'Supprimer l\'offre'}) }}
                    <a href="{{ path('admin_profil_bebe') }}" class="btn btn-outline-secondary">
                        &larr; Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
